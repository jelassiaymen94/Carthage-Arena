<aside class="fixed top-0 left-0 h-screen w-72 bg-[#161616] border-r border-white/5 flex flex-col z-40 carthage-columns">
    {# Logo & Brand #}
    <div class="flex items-center gap-3 px-6 py-5 border-b border-white/5">
        <img src="{{ asset('assets/logo.webp') }}" alt="Carthage Arena" class="h-16 w-auto" />
        <div class="flex flex-col leading-tight">
            <span class="text-xs font-bold tracking-[0.25em] text-white/40 uppercase">Admin</span>
            <span class="text-sm font-black tracking-wider text-primary uppercase">Panel</span>
        </div>
    </div>

    {# Navigation #}
    <nav class="flex-1 overflow-y-auto py-4 px-3">
        <ul class="flex flex-col gap-1">
            <li>
                <a href="{{ path('admin_dashboard') }}"
                   class="flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200
                          {{ app.request.get('_route') == 'admin_dashboard'
                              ? 'bg-primary/10 text-primary'
                              : 'text-white/60 hover:text-white hover:bg-white/5' }}">
                    <span class="material-symbols-outlined text-[20px]">dashboard</span>
                    Tableau de Bord
                </a>
            </li>
            <li>
                <a href="{{ path('admin_users') }}"
                   class="flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200
                          {{ app.request.get('_route') == 'admin_users'
                              ? 'bg-primary/10 text-primary'
                              : 'text-white/60 hover:text-white hover:bg-white/5' }}">
                    <span class="material-symbols-outlined text-[20px]">group</span>
                    Utilisateurs
                </a>
            </li>
            <li>
                <a href="{{ path('app_admin_licenses') }}"
                   class="flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200
                          {{ app.request.get('_route') == 'app_admin_licenses'
                              ? 'bg-primary/10 text-primary'
                              : 'text-white/60 hover:text-white hover:bg-white/5' }}">
                    <span class="material-symbols-outlined text-[20px]">badge</span>
                    Licences
                </a>
            </li>
            <li>
                <a href="{{ path('app_admin_reclamation_index') }}"
                   class="flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200
                          {{ app.request.get('_route') starts with 'app_admin_reclamation'
                              ? 'bg-primary/10 text-primary'
                              : 'text-white/60 hover:text-white hover:bg-white/5' }}">
                    <span class="material-symbols-outlined text-[20px]">support_agent</span>
                    Réclamations
                </a>
            </li>
            <li>
                <a href="{{ path('admin_tournaments') }}"
                   class="flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200
                          {{ app.request.get('_route') == 'admin_tournaments'
                              ? 'bg-primary/10 text-primary'
                              : 'text-white/60 hover:text-white hover:bg-white/5' }}">
                    <span class="material-symbols-outlined text-[20px]">trophy</span>
                    Tournois
                </a>
            </li>
            <li>
                <a href="{{ path('admin_games') }}"
                   class="flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200
                          {{ app.request.get('_route') == 'admin_games'
                              ? 'bg-primary/10 text-primary'
                              : 'text-white/60 hover:text-white hover:bg-white/5' }}">
                    <span class="material-symbols-outlined text-[20px]">sports_esports</span>
                    Jeux
                </a>
            </li>
            <li>
                <a href="{{ path('admin_shop') }}"
                   class="flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200
                          {{ app.request.get('_route') == 'admin_shop'
                              ? 'bg-primary/10 text-primary'
                              : 'text-white/60 hover:text-white hover:bg-white/5' }}">
                    <span class="material-symbols-outlined text-[20px]">shopping_bag</span>
                    Boutique
                </a>
            </li>
            <li>
                <a href="{{ path('admin_reports') }}"
                   class="flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200
                          {{ app.request.get('_route') == 'admin_reports'
                              ? 'bg-primary/10 text-primary'
                              : 'text-white/60 hover:text-white hover:bg-white/5' }}">
                    <span class="material-symbols-outlined text-[20px]">assessment</span>
                    Rapports
                </a>
            </li>
            <li>
                <a href="{{ path('admin_settings') }}"
                   class="flex items-center gap-3 px-4 py-3 rounded-xl text-sm font-medium transition-all duration-200
                          {{ app.request.get('_route') == 'admin_settings'
                              ? 'bg-primary/10 text-primary'
                              : 'text-white/60 hover:text-white hover:bg-white/5' }}">
                    <span class="material-symbols-outlined text-[20px]">settings</span>
                    Paramètres
                </a>
            </li>
        </ul>
    </nav>

    {# System Status Widget #}
    <div class="mx-3 mb-3">
        <div class="rounded-2xl border border-primary/30 bg-primary/5 p-4">
            <div class="text-[10px] font-semibold uppercase tracking-widest text-white/40 mb-2">Système</div>
            <div class="flex items-center gap-2 mb-1">
                <span class="relative flex h-2 w-2">
                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                    <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
                </span>
                <span class="text-sm font-semibold text-white">En ligne</span>
            </div>
            <p class="text-xs text-white/40">Tous les systèmes opérationnels</p>
        </div>
    </div>

    {# User View Link #}
    <div class="px-3 pb-2">
        <a href="{{ path('app_dashboard') }}"
           class="flex items-center justify-center gap-2 w-full py-2.5 rounded-xl border border-white/10 text-sm font-semibold text-white/70 hover:text-white hover:bg-white/5 transition-all duration-200">
            <span class="material-symbols-outlined text-[18px]">exit_to_app</span>
            Vue Utilisateur
        </a>
    </div>

    {# Logout #}
    {% if app.user %}
    <div class="px-3 pb-4">
        <a href="{{ path('app_logout') }}"
           class="flex items-center justify-center gap-2 w-full py-2.5 rounded-xl border border-red-500/20 text-sm font-semibold text-red-400/70 hover:text-red-400 hover:bg-red-500/10 transition-all duration-200">
            <span class="material-symbols-outlined text-[18px]">logout</span>
            Déconnexion
        </a>
    </div>
    {% endif %}
</aside>
