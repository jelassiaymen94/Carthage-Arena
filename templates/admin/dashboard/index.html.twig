{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard - Carthage Arena{% endblock %}

{% block body %}
<div id="mainContent" class="opacity-0 transition-opacity duration-500">
    <div class="flex min-h-screen bg-background-dark">
        {# Sidebar #}
        {% include 'admin/_sidebar.html.twig' %}

        {# Main Content Area #}
        <main class="flex-1 ml-72 overflow-y-auto h-screen">
            {# Sticky Header #}
            <header class="sticky top-0 z-30 bg-background-dark/80 backdrop-blur-xl border-b border-white/5">
                <div class="flex items-center justify-between px-8 py-4">
                    <div>
                        <h1 class="text-2xl font-bold text-white">Tableau de Bord Admin</h1>
                        <p class="text-sm text-white/40 mt-0.5">Vue d'ensemble de la plateforme Carthage Arena</p>
                    </div>
                    <div class="flex items-center gap-3">
                        <button class="relative p-2 rounded-xl text-white/50 hover:text-white hover:bg-white/5 transition-all">
                            <span class="material-symbols-outlined">notifications</span>
                            <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-primary rounded-full"></span>
                        </button>
                        <div class="w-9 h-9 rounded-full bg-primary/20 flex items-center justify-center">
                            <span class="material-symbols-outlined text-primary text-[20px]">admin_panel_settings</span>
                        </div>
                    </div>
                </div>
            </header>

            {# Page Content #}
            <div class="p-8 space-y-8">
                {# Stats Grid #}
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                    {% include 'components/_stat_card.html.twig' with {
                        label: 'Total Utilisateurs', value: stats.totalUsers,
                        icon: 'group', iconColor: 'blue',
                        trendIcon: 'trending_up', trendColor: 'green'
                    } %}
                    {% include 'components/_stat_card.html.twig' with {
                        label: 'Utilisateurs Actifs', value: stats.activeUsers,
                        icon: 'person_check', iconColor: 'green',
                        trendIcon: 'trending_up', trendColor: 'green'
                    } %}
                    {% include 'components/_stat_card.html.twig' with {
                        label: 'Tournois Actifs', value: stats.activeTournaments,
                        icon: 'trophy', iconColor: 'secondary',
                        trendIcon: 'emoji_events', trendColor: 'secondary'
                    } %}
                    {% include 'components/_stat_card.html.twig' with {
                        label: "Matchs Aujourd'hui", value: stats.todayMatches,
                        icon: 'sports_esports', iconColor: 'primary',
                        trendIcon: 'today', trendColor: 'white'
                    } %}
                </div>

                {# Main Grid: Pending Reclamations + Recent Users + System Health #}
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    {# Pending Reclamations (Full Width on mobile, 2 cols on large) #}
                    <div class="lg:col-span-2 bg-surface-dark border border-white/5 rounded-2xl overflow-hidden">
                        <div class="flex items-center justify-between px-6 py-4 border-b border-white/5">
                            <h2 class="text-lg font-bold text-white flex items-center gap-2">
                                <span class="material-symbols-outlined text-primary">support_agent</span>
                                Réclamations en Attente
                            </h2>
                            <a href="{{ path('app_admin_reclamation_index') }}" class="text-sm font-semibold text-primary hover:text-primary/80 transition-colors">Voir tout</a>
                        </div>
                        <div class="overflow-x-auto">
                            <table class="w-full text-sm">
                                <thead>
                                    <tr class="border-b border-white/5">
                                        <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Sujet</th>
                                        <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Auteur</th>
                                        <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Priorité</th>
                                        <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Date</th>
                                        <th class="text-right px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Action</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5">
                                    {% for reclamation in recentReclamations %}
                                    <tr class="hover:bg-surface-hover transition-colors">
                                        <td class="px-6 py-4 font-semibold text-white">{{ reclamation.subject }}</td>
                                        <td class="px-6 py-4">
                                            <div class="flex items-center gap-2">
                                                <div class="w-6 h-6 rounded-full bg-white/10 flex items-center justify-center text-[10px] font-bold text-white">
                                                    {{ reclamation.author.name|slice(0, 1)|upper }}
                                                </div>
                                                <span class="text-white/70">{{ reclamation.author.name }}</span>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4">
                                            <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-semibold border {{ reclamation.priority.color }}">
                                                {{ reclamation.priority.label }}
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 text-white/50">{{ reclamation.createdAt|date('d/m H:i') }}</td>
                                        <td class="px-6 py-4 text-right">
                                            <a href="{{ path('app_admin_reclamation_show', {'id': reclamation.id}) }}" class="inline-flex items-center gap-1 px-3 py-1.5 rounded-lg bg-primary text-white text-xs font-bold hover:bg-primary/90 transition-colors">
                                                <span class="material-symbols-outlined text-[14px]">reply</span>
                                                Répondre
                                            </a>
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="5" class="px-6 py-8 text-center text-white/40">
                                            <div class="flex flex-col items-center gap-2">
                                                <span class="material-symbols-outlined text-4xl">check_circle</span>
                                                <p>Aucune réclamation en attente</p>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    {# Recent Users Table #}
                    {% embed 'components/_table.html.twig' with {
                        title: 'Nouveaux Utilisateurs',
                        titleLink: path('admin_users'),
                        headers: ['Nom', 'Email', 'Inscrit', 'Statut'],
                        emptyMessage: 'Aucun utilisateur récent.',
                        emptyIcon: 'group_off',
                        class: 'lg:col-span-2'
                    } %}
                        {% block rows %}
                            {% for user in recentUsers %}
                            <tr class="hover:bg-surface-hover transition-colors">
                                <td class="px-6 py-4 font-semibold text-white">{{ user.username }}</td>
                                <td class="px-6 py-4 text-white/50">{{ user.email }}</td>
                                <td class="px-6 py-4 text-white/50">{{ user.id|slice(0, 8) }}</td>
                                <td class="px-6 py-4">
                                    {% if 'ROLE_ADMIN' in user.roles %}
                                        <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-semibold bg-primary/20 text-primary">Admin</span>
                                    {% else %}
                                        <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-semibold bg-green-500/20 text-green-400">User</span>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        {% endblock %}
                    {% endembed %}

                    {# System Health #}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl p-6">
                        <h2 class="text-lg font-bold text-white mb-6">Santé du Système</h2>

                        <div class="space-y-5">
                            {# CPU #}
                            <div>
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm text-white/50">CPU</span>
                                    <span class="text-sm font-bold text-white">{{ systemHealth.cpuUsage }}%</span>
                                </div>
                                <div class="w-full h-2 bg-white/5 rounded-full overflow-hidden">
                                    <div class="h-full rounded-full transition-all duration-500
                                                {% if systemHealth.cpuUsage < 60 %}bg-green-500{% elseif systemHealth.cpuUsage < 80 %}bg-yellow-500{% else %}bg-red-500{% endif %}"
                                         style="width: {{ systemHealth.cpuUsage }}%"></div>
                                </div>
                            </div>

                            {# Memory #}
                            <div>
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm text-white/50">Mémoire</span>
                                    <span class="text-sm font-bold text-white">{{ systemHealth.memoryUsage }}%</span>
                                </div>
                                <div class="w-full h-2 bg-white/5 rounded-full overflow-hidden">
                                    <div class="h-full rounded-full transition-all duration-500
                                                {% if systemHealth.memoryUsage < 60 %}bg-green-500{% elseif systemHealth.memoryUsage < 80 %}bg-yellow-500{% else %}bg-red-500{% endif %}"
                                         style="width: {{ systemHealth.memoryUsage }}%"></div>
                                </div>
                            </div>

                            {# Disk #}
                            <div>
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm text-white/50">Disque</span>
                                    <span class="text-sm font-bold text-white">{{ systemHealth.diskUsage }}%</span>
                                </div>
                                <div class="w-full h-2 bg-white/5 rounded-full overflow-hidden">
                                    <div class="h-full rounded-full bg-green-500 transition-all duration-500"
                                         style="width: {{ systemHealth.diskUsage }}%"></div>
                                </div>
                            </div>

                            {# Uptime #}
                            <div class="mt-4 p-4 bg-white/5 rounded-xl text-center">
                                <p class="text-xs text-white/30 uppercase tracking-wider mb-1">Uptime</p>
                                <p class="text-2xl font-black text-green-400">{{ systemHealth.uptime }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                {# Recent Tournaments #}
                {% embed 'components/_table.html.twig' with {
                    title: 'Tournois Récents',
                    titleLink: path('admin_tournaments'),
                    headers: ['Nom', 'Jeu', 'Équipes', 'Statut', 'Cagnotte'],
                    emptyMessage: 'Aucun tournoi récent.',
                    emptyIcon: 'trophy'
                } %}
                    {% block rows %}
                        {% for tournament in recentTournaments %}
                        <tr class="hover:bg-surface-hover transition-colors">
                            <td class="px-6 py-4 font-semibold text-white">{{ tournament.nom }}</td>
                            <td class="px-6 py-4">
                                <span class="inline-flex px-2.5 py-1 rounded-full text-xs font-semibold bg-blue-500/20 text-blue-400">
                                    {{ tournament.game ? tournament.game.name : (tournament.type ? tournament.type.label : 'N/A') }}
                                </span>
                            </td>
                            <td class="px-6 py-4 text-white/60">{{ tournament.teams|length }} / {{ tournament.nbEquipesMax }} équipes</td>
                            <td class="px-6 py-4">
                                {% if tournament.status.value == 'ongoing' %}
                                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-semibold bg-green-500/20 text-green-400">
                                        <span class="w-1.5 h-1.5 rounded-full bg-green-400"></span>
                                        Actif
                                    </span>
                                {% elseif tournament.status.value == 'upcoming' %}
                                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-semibold bg-yellow-500/20 text-yellow-400">
                                        En attente
                                    </span>
                                {% else %}
                                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-semibold bg-white/10 text-white/50">
                                        {{ tournament.status.label }}
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-secondary font-bold">{{ tournament.prizePool|number_format }} DT</span>
                            </td>
                        </tr>
                        {% endfor %}
                    {% endblock %}
                {% endembed %}
            </div>
        </main>
    </div>
</div>
{% endblock %}
