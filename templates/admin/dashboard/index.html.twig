{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard - Carthage Arena{% endblock %}

{% block body %}
<div id="mainContent" class="opacity-0 transition-opacity duration-500">
    <div class="flex min-h-screen bg-background-dark">
        {# Sidebar #}
        {% include 'admin/_sidebar.html.twig' %}

        {# Main Content Area #}
        <main class="flex-1 ml-64 overflow-y-auto h-screen">
            {# Sticky Header #}
            <header class="sticky top-0 z-30 bg-background-dark/80 backdrop-blur-xl border-b border-white/5">
                <div class="flex items-center justify-between px-8 py-4">
                    <div>
                        <h1 class="text-2xl font-bold text-white">Tableau de Bord Admin</h1>
                        <p class="text-sm text-white/40 mt-0.5">Vue d'ensemble de la plateforme Carthage Arena</p>
                    </div>
                    <div class="flex items-center gap-3">
                        <button class="relative p-2 rounded-xl text-white/50 hover:text-white hover:bg-white/5 transition-all">
                            <span class="material-symbols-outlined">notifications</span>
                            <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-primary rounded-full"></span>
                        </button>
                        <div class="w-9 h-9 rounded-full bg-primary/20 flex items-center justify-center">
                            <span class="material-symbols-outlined text-primary text-[20px]">admin_panel_settings</span>
                        </div>
                    </div>
                </div>
            </header>

            {# Page Content #}
            <div class="p-8 space-y-8">
                {# Stats Grid #}
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                    {# Total Users #}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl p-6 hover:border-white/10 transition-all">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 rounded-xl bg-blue-500/10 flex items-center justify-center">
                                <span class="material-symbols-outlined text-blue-400">group</span>
                            </div>
                            <span class="material-symbols-outlined text-green-400 text-[18px]">trending_up</span>
                        </div>
                        <p class="text-sm text-white/40 mb-1">Total Utilisateurs</p>
                        <p class="text-3xl font-bold text-white">{{ stats.totalUsers }}</p>
                    </div>

                    {# Active Users #}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl p-6 hover:border-white/10 transition-all">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 rounded-xl bg-green-500/10 flex items-center justify-center">
                                <span class="material-symbols-outlined text-green-400">person_check</span>
                            </div>
                            <span class="material-symbols-outlined text-green-400 text-[18px]">trending_up</span>
                        </div>
                        <p class="text-sm text-white/40 mb-1">Utilisateurs Actifs</p>
                        <p class="text-3xl font-bold text-white">{{ stats.activeUsers }}</p>
                    </div>

                    {# Active Tournaments #}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl p-6 hover:border-white/10 transition-all">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 rounded-xl bg-secondary/10 flex items-center justify-center">
                                <span class="material-symbols-outlined text-secondary">trophy</span>
                            </div>
                            <span class="material-symbols-outlined text-secondary text-[18px]">emoji_events</span>
                        </div>
                        <p class="text-sm text-white/40 mb-1">Tournois Actifs</p>
                        <p class="text-3xl font-bold text-white">{{ stats.activeTournaments }}</p>
                    </div>

                    {# Today Matches #}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl p-6 hover:border-white/10 transition-all">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
                                <span class="material-symbols-outlined text-primary">sports_esports</span>
                            </div>
                            <span class="material-symbols-outlined text-white/30 text-[18px]">today</span>
                        </div>
                        <p class="text-sm text-white/40 mb-1">Matchs Aujourd'hui</p>
                        <p class="text-3xl font-bold text-white">{{ stats.todayMatches }}</p>
                    </div>
                </div>

                {# Main Grid: Recent Users + System Health #}
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    {# Recent Users Table #}
                    <div class="lg:col-span-2 bg-surface-dark border border-white/5 rounded-2xl overflow-hidden">
                        <div class="flex items-center justify-between px-6 py-4 border-b border-white/5">
                            <h2 class="text-lg font-bold text-white">Nouveaux Utilisateurs</h2>
                            <a href="{{ path('admin_users') }}" class="text-sm font-semibold text-primary hover:text-primary/80 transition-colors">Voir tout</a>
                        </div>
                        <div class="overflow-x-auto">
                            <table class="w-full text-sm">
                                <thead>
                                    <tr class="border-b border-white/5">
                                        <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Nom</th>
                                        <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Email</th>
                                        <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Inscrit</th>
                                        <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Statut</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5">
                                    {% for user in recentUsers %}
                                    <tr class="hover:bg-surface-hover transition-colors">
                                        <td class="px-6 py-4 font-semibold text-white">{{ user.name }}</td>
                                        <td class="px-6 py-4 text-white/50">{{ user.email }}</td>
                                        <td class="px-6 py-4 text-white/50">{{ user.joined }}</td>
                                        <td class="px-6 py-4">
                                            {% if user.status == 'active' %}
                                                <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-semibold bg-green-500/20 text-green-400">
                                                    <span class="w-1.5 h-1.5 rounded-full bg-green-400"></span>
                                                    Actif
                                                </span>
                                            {% else %}
                                                <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-semibold bg-red-500/20 text-red-400">
                                                    <span class="w-1.5 h-1.5 rounded-full bg-red-400"></span>
                                                    {{ user.status }}
                                                </span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                    {# System Health #}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl p-6">
                        <h2 class="text-lg font-bold text-white mb-6">Santé du Système</h2>

                        <div class="space-y-5">
                            {# CPU #}
                            <div>
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm text-white/50">CPU</span>
                                    <span class="text-sm font-bold text-white">{{ systemHealth.cpuUsage }}%</span>
                                </div>
                                <div class="w-full h-2 bg-white/5 rounded-full overflow-hidden">
                                    <div class="h-full rounded-full transition-all duration-500
                                                {% if systemHealth.cpuUsage < 60 %}bg-green-500{% elseif systemHealth.cpuUsage < 80 %}bg-yellow-500{% else %}bg-red-500{% endif %}"
                                         style="width: {{ systemHealth.cpuUsage }}%"></div>
                                </div>
                            </div>

                            {# Memory #}
                            <div>
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm text-white/50">Mémoire</span>
                                    <span class="text-sm font-bold text-white">{{ systemHealth.memoryUsage }}%</span>
                                </div>
                                <div class="w-full h-2 bg-white/5 rounded-full overflow-hidden">
                                    <div class="h-full rounded-full transition-all duration-500
                                                {% if systemHealth.memoryUsage < 60 %}bg-green-500{% elseif systemHealth.memoryUsage < 80 %}bg-yellow-500{% else %}bg-red-500{% endif %}"
                                         style="width: {{ systemHealth.memoryUsage }}%"></div>
                                </div>
                            </div>

                            {# Disk #}
                            <div>
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm text-white/50">Disque</span>
                                    <span class="text-sm font-bold text-white">{{ systemHealth.diskUsage }}%</span>
                                </div>
                                <div class="w-full h-2 bg-white/5 rounded-full overflow-hidden">
                                    <div class="h-full rounded-full bg-green-500 transition-all duration-500"
                                         style="width: {{ systemHealth.diskUsage }}%"></div>
                                </div>
                            </div>

                            {# Uptime #}
                            <div class="mt-4 p-4 bg-white/5 rounded-xl text-center">
                                <p class="text-xs text-white/30 uppercase tracking-wider mb-1">Uptime</p>
                                <p class="text-2xl font-black text-green-400">{{ systemHealth.uptime }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                {# Recent Tournaments #}
                <div class="bg-surface-dark border border-white/5 rounded-2xl overflow-hidden">
                    <div class="flex items-center justify-between px-6 py-4 border-b border-white/5">
                        <h2 class="text-lg font-bold text-white">Tournois Récents</h2>
                        <a href="{{ path('admin_tournaments') }}" class="text-sm font-semibold text-primary hover:text-primary/80 transition-colors">Voir tout</a>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm">
                            <thead>
                                <tr class="border-b border-white/5">
                                    <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Nom</th>
                                    <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Jeu</th>
                                    <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Équipes</th>
                                    <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Statut</th>
                                    <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Cagnotte</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-white/5">
                                {% for tournament in recentTournaments %}
                                <tr class="hover:bg-surface-hover transition-colors">
                                    <td class="px-6 py-4 font-semibold text-white">{{ tournament.name }}</td>
                                    <td class="px-6 py-4">
                                        <span class="inline-flex px-2.5 py-1 rounded-full text-xs font-semibold bg-blue-500/20 text-blue-400">{{ tournament.game }}</span>
                                    </td>
                                    <td class="px-6 py-4 text-white/60">{{ tournament.teams }} équipes</td>
                                    <td class="px-6 py-4">
                                        {% if tournament.status == 'active' %}
                                            <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-semibold bg-green-500/20 text-green-400">
                                                <span class="w-1.5 h-1.5 rounded-full bg-green-400"></span>
                                                Actif
                                            </span>
                                        {% else %}
                                            <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-semibold bg-yellow-500/20 text-yellow-400">
                                                {{ tournament.status }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="text-secondary font-bold">{{ tournament.prize }}</span>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
