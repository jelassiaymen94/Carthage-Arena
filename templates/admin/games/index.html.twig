{% extends 'base.html.twig' %}

{% block title %}Gestion des Jeux - Admin - Carthage Arena{% endblock %}

{% block body %}
<div id="mainContent" class="opacity-0 transition-opacity duration-500">
    <div class="flex min-h-screen bg-background-dark">
        {# Sidebar #}
        {% include 'admin/_sidebar.html.twig' %}

        {# Main Content Area #}
        <main class="flex-1 ml-64 overflow-y-auto h-screen">
            {# Sticky Header #}
            <header class="sticky top-0 z-30 bg-background-dark/80 backdrop-blur-xl border-b border-white/5">
                <div class="flex items-center justify-between px-8 py-4">
                    <div>
                        <h1 class="text-2xl font-bold text-white">Gestion des Jeux</h1>
                        <p class="text-sm text-white/40 mt-0.5">Ajouter et configurer les jeux disponibles</p>
                    </div>
                    <button class="inline-flex items-center gap-2 px-5 py-2.5 bg-primary hover:bg-primary/90 text-white text-sm font-semibold rounded-xl transition-all"
                            onclick="document.getElementById('addGameModal').classList.remove('hidden')">
                        <span class="material-symbols-outlined text-[18px]">add</span>
                        + Ajouter
                    </button>
                </div>
            </header>

            {# Page Content #}
            <div class="p-8 space-y-6">
                {# Flash Messages #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="p-4 rounded-xl {% if label == 'success' %}bg-green-500/10 border border-green-500/20 text-green-400{% else %}bg-red-500/10 border border-red-500/20 text-red-400{% endif %} flex items-center gap-3">
                            <span class="material-symbols-outlined">{% if label == 'success' %}check_circle{% else %}error{% endif %}</span>
                            <span class="text-sm font-medium">{{ message }}</span>
                        </div>
                    {% endfor %}
                {% endfor %}

                {# Search & Filters #}
                <div class="bg-surface-dark border border-white/5 rounded-2xl p-4">
                    <div class="flex items-center gap-4">
                        <div class="flex-1 relative">
                            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-white/30 text-[20px]">search</span>
                            <input type="text" placeholder="Rechercher un jeu..."
                                   class="w-full bg-white/5 border border-white/10 rounded-xl pl-10 pr-4 py-2.5 text-sm text-white placeholder-white/30 focus:border-primary/50 focus:ring-1 focus:ring-primary/30 outline-none transition-all" />
                        </div>
                        <select class="bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white/70 outline-none focus:border-primary/50 w-48">
                            <option>Toutes les catégories</option>
                            <option>FPS</option>
                            <option>MOBA</option>
                            <option>Battle Royale</option>
                            <option>Sports</option>
                        </select>
                        <select class="bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white/70 outline-none focus:border-primary/50 w-48">
                            <option>Tous les statuts</option>
                            <option>Actif</option>
                            <option>Inactif</option>
                        </select>
                    </div>
                </div>

                {# Games Grid #}
                <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                    {% for game in games %}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl overflow-hidden hover:border-white/10 transition-all group">
                        {# Game Header with Illustration #}
                        <div class="relative h-48 bg-background-light flex items-center justify-center overflow-hidden">
                            {% if game.imageUrl %}
                                <img src="{{ game.imageUrl }}" alt="{{ game.name }}" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" />
                            {% else %}
                                <div class="w-full h-full bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
                                    <span class="material-symbols-outlined text-[64px] text-primary/40">sports_esports</span>
                                </div>
                            {% endif %}
                            
                            {# Status Badge #}
                            <div class="absolute top-3 right-3">
                                {% if game.status.value == 'active' %}
                                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-semibold bg-green-500/20 text-green-400 backdrop-blur-md border border-green-500/20">
                                        <span class="w-1.5 h-1.5 rounded-full bg-green-400"></span>
                                        Actif
                                    </span>
                                {% else %}
                                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-semibold bg-red-500/20 text-red-400 backdrop-blur-md border border-red-500/20">
                                        <span class="w-1.5 h-1.5 rounded-full bg-red-400 animate-pulse"></span>
                                        Inactif
                                    </span>
                                {% endif %}
                            </div>
                        </div>

                        {# Game Info #}
                        <div class="p-5">
                            <div class="flex items-center justify-between mb-3">
                                <h3 class="text-lg font-bold text-white">{{ game.name }}</h3>
                                <span class="inline-flex px-2.5 py-1 rounded-full text-[10px] font-bold uppercase tracking-wider bg-primary/20 text-primary border border-primary/20">
                                    {{ game.type.name }}
                                </span>
                            </div>

                            <p class="text-sm text-white/40 mb-4 line-clamp-2 min-h-[40px]">{{ game.description|default('Aucune description disponible.') }}</p>

                            {# Stats #}
                            <div class="grid grid-cols-2 gap-3">
                                <div class="bg-white/5 rounded-xl p-3 text-center border border-white/5">
                                    <p class="text-[10px] text-white/30 uppercase tracking-widest mb-0.5">Tournois</p>
                                    <p class="text-lg font-bold text-secondary">{{ game.tournois|length }}</p>
                                </div>
                                <div class="bg-white/5 rounded-xl p-3 text-center border border-white/5">
                                    <p class="text-[10px] text-white/30 uppercase tracking-widest mb-0.5">Skins</p>
                                    <p class="text-lg font-bold text-green-400">{{ game.skins|length }}</p>
                                </div>
                            </div>

                            {# Actions #}
                            <div class="flex items-center gap-2 mt-4 pt-4 border-t border-white/5">
                                <a href="{{ path('admin_games_edit', {'id': game.id}) }}" class="flex-1 inline-flex items-center justify-center gap-1.5 py-2.5 rounded-xl bg-white/5 hover:bg-white/10 text-xs font-semibold text-white/60 hover:text-white transition-all">
                                    <span class="material-symbols-outlined text-[16px]">edit</span>
                                    Modifier
                                </a>
                                <form method="post" action="{{ path('admin_games_delete', {'id': game.id}) }}" class="flex-1" onsubmit="return confirm('Supprimer ce jeu ainsi que tous ses tournois et skins associés ?');">
                                    <button type="submit" class="w-full inline-flex items-center justify-center gap-1.5 py-2.5 rounded-xl bg-red-500/10 hover:bg-red-500/20 text-xs font-semibold text-red-400 transition-all">
                                        <span class="material-symbols-outlined text-[16px]">delete</span>
                                        Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    {% else %}
                        <div class="col-span-full py-12 text-center">
                            <div class="w-20 h-20 bg-white/5 rounded-2xl flex items-center justify-center mx-auto mb-4 border border-white/10">
                                <span class="material-symbols-outlined text-[40px] text-white/20">search_off</span>
                            </div>
                            <h3 class="text-lg font-bold text-white">Aucun jeu trouvé</h3>
                            <p class="text-white/40 text-sm mt-1">Commencez par ajouter votre premier jeu à la plateforme.</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </main>
    </div>
</div>

{# Add Game Modal #}
<div id="addGameModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm">
    <div class="bg-surface-dark border border-white/10 rounded-2xl w-[560px] max-w-[90vw] max-h-[90vh] overflow-y-auto p-6">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-white">Ajouter un Nouveau Jeu</h2>
            <button onclick="document.getElementById('addGameModal').classList.add('hidden')"
                    class="p-1.5 rounded-lg hover:bg-white/10 text-white/40 hover:text-white transition-all">
                <span class="material-symbols-outlined">close</span>
            </button>
        </div>

        {{ form_start(form, {'attr': {'class': 'space-y-5'}}) }}
            <div>
                {{ form_label(form.name, 'Nom du jeu', {'label_attr': {'class': 'block text-sm font-medium text-white/60 mb-1.5'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white placeholder-white/30 focus:border-primary/50 focus:ring-1 focus:ring-primary/30 outline-none transition-all'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div>
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-white/60 mb-1.5'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white placeholder-white/30 focus:border-primary/50 outline-none transition-all', 'rows': '3'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    {{ form_label(form.type, 'Catégorie', {'label_attr': {'class': 'block text-sm font-medium text-white/60 mb-1.5'}}) }}
                    {{ form_widget(form.type, {'attr': {'class': 'w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white/70 outline-none focus:border-primary/50 form-select [&>option]:text-black'}}) }}
                    {{ form_errors(form.type) }}
                </div>
                <div>
                    {{ form_label(form.status, 'Statut', {'label_attr': {'class': 'block text-sm font-medium text-white/60 mb-1.5'}}) }}
                    {{ form_widget(form.status, {'attr': {'class': 'w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white/70 outline-none focus:border-primary/50 form-select [&>option]:text-black'}}) }}
                    {{ form_errors(form.status) }}
                </div>
            </div>

            <div>
                {{ form_label(form.imageUrl, 'Image URL', {'label_attr': {'class': 'block text-sm font-medium text-white/60 mb-1.5'}}) }}
                {{ form_widget(form.imageUrl, {'attr': {'class': 'w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white placeholder-white/30 focus:border-primary/50 outline-none transition-all'}}) }}
                {{ form_errors(form.imageUrl) }}
            </div>

            <div class="flex items-center gap-3 pt-4">
                <button type="submit" class="flex-1 inline-flex items-center justify-center gap-2 py-2.5 bg-primary hover:bg-primary/90 text-white text-sm font-semibold rounded-xl transition-all shadow-lg shadow-primary/20">
                    <span class="material-symbols-outlined text-[18px]">check</span>
                    Enregistrer le Jeu
                </button>
                <button type="button"
                        onclick="document.getElementById('addGameModal').classList.add('hidden')"
                        class="px-6 py-2.5 bg-white/5 hover:bg-white/10 text-white/60 text-sm font-semibold rounded-xl transition-all">
                    Annuler
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
