{% extends 'base.html.twig' %}

{% block title %}Gestion des Jeux - Admin - Carthage Arena{% endblock %}

{% block body %}
<div class="app-container">
    {% include 'admin/_sidebar.html.twig' %}

    <main class="main-content">
        <div class="page-header">
            <h1 class="page-title">Gestion des Jeux</h1>
            <button class="btn btn-primary" onclick="document.getElementById('addGameModal').style.display='flex'">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="8" x2="12" y2="16"></line>
                    <line x1="8" y1="12" x2="16" y2="12"></line>
                </svg>
                Ajouter un Jeu
            </button>
        </div>

        <div class="stats-grid" style="grid-template-columns: repeat(4, 1fr); margin-bottom: 2rem;">
            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #0099FF 0%, #0066CC 100%);">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="2" y="7" width="20" height="15" rx="2" ry="2"></rect>
                        <polyline points="17 2 12 7 7 2"></polyline>
                    </svg>
                </div>
                <div class="stat-label">Total Jeux</div>
                <div class="stat-value">{{ games|length }}</div>
                <div class="stat-meta">{% set activeGames = games|filter(g => g.status == 'active')|length %}{{ activeGames }} actifs</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"></path>
                        <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"></path>
                        <path d="M4 22h16"></path>
                        <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"></path>
                        <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"></path>
                        <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"></path>
                    </svg>
                </div>
                <div class="stat-label">Tournois Totaux</div>
                <div class="stat-value">{% set totalTournaments = 0 %}{% for game in games %}{% set totalTournaments = totalTournaments + game.tournaments %}{% endfor %}{{ totalTournaments }}</div>
                <div class="stat-meta">Sur tous les jeux</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #00FF88 0%, #00CC6E 100%);">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </div>
                <div class="stat-label">Joueurs Totaux</div>
                <div class="stat-value">{% set totalPlayers = 0 %}{% for game in games %}{% set totalPlayers = totalPlayers + game.players %}{% endfor %}{{ totalPlayers }}</div>
                <div class="stat-meta">Tous jeux confondus</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #FF0022 0%, #CC001C 100%);">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                        <path d="M2 17l10 5 10-5"></path>
                        <path d="M2 12l10 5 10-5"></path>
                    </svg>
                </div>
                <div class="stat-label">Jeu Populaire</div>
                <div class="stat-value" style="font-size: 1.25rem;">Valorant</div>
                <div class="stat-meta">450 joueurs</div>
            </div>
        </div>

        <div class="card" style="margin-bottom: 2rem;">
            <div style="display: flex; gap: 1rem; align-items: center;">
                <div class="form-group" style="flex: 1; margin: 0;">
                    <input type="text" class="form-input" placeholder="Rechercher un jeu...">
                </div>
                <select class="form-input" style="width: 200px;">
                    <option>Toutes les cat√©gories</option>
                    <option>FPS</option>
                    <option>MOBA</option>
                    <option>Battle Royale</option>
                    <option>Sports</option>
                </select>
                <select class="form-input" style="width: 200px;">
                    <option>Tous les statuts</option>
                    <option>Actif</option>
                    <option>Inactif</option>
                </select>
            </div>
        </div>

        <div style="display: grid; gap: 1.5rem;">
            {% for game in games %}
            <div class="card" style="padding: 0; overflow: hidden;">
                <div style="display: grid; grid-template-columns: 100px 1fr auto; gap: 0;">
                    <div style="background: var(--gradient-primary); display: flex; align-items: center; justify-content: center; font-size: 4rem;">
                        {{ game.icon }}
                    </div>

                    <div style="padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                            <h3 style="font-size: 1.75rem; font-weight: 800;">{{ game.name }}</h3>
                            <span class="badge badge-{{ game.category == 'FPS' ? 'legendary' : (game.category == 'MOBA' ? 'epic' : 'premium') }}">
                                {{ game.category }}
                            </span>
                            <span class="badge {% if game.status == 'active' %}badge-legendary{% else %}badge-season{% endif %}">
                                {{ game.status }}
                            </span>
                        </div>

                        <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem;">
                            <div>
                                <div style="font-size: 0.75rem; color: var(--color-text-muted); text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 0.25rem;">√âditeur</div>
                                <div style="font-size: 1rem; font-weight: 600;">{{ game.publisher }}</div>
                            </div>
                            <div>
                                <div style="font-size: 0.75rem; color: var(--color-text-muted); text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 0.25rem;">Tournois</div>
                                <div style="font-size: 1.25rem; font-weight: 700; color: var(--color-warning);">{{ game.tournaments }}</div>
                            </div>
                            <div>
                                <div style="font-size: 0.75rem; color: var(--color-text-muted); text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 0.25rem;">Joueurs</div>
                                <div style="font-size: 1.25rem; font-weight: 700; color: var(--color-success);">{{ game.players }}</div>
                            </div>
                        </div>
                    </div>

                    <div style="padding: 1.5rem; display: flex; flex-direction: column; gap: 0.75rem; background: var(--color-bg-tertiary); border-left: 1px solid var(--color-border); min-width: 200px; justify-content: center;">
                        <button class="btn btn-primary" style="width: 100%; font-size: 0.875rem;">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                            Voir D√©tails
                        </button>
                        <button class="btn btn-secondary" style="width: 100%; font-size: 0.875rem;" onclick="editGame({{ game.id }})">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                            </svg>
                            Modifier
                        </button>
                        <button class="btn" style="width: 100%; font-size: 0.875rem; background-color: var(--color-error); color: white;" onclick="deleteGame({{ game.id }}, '{{ game.name }}')">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            </svg>
                            Supprimer
                        </button>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </main>
</div>

<!-- Add Game Modal -->
<div id="addGameModal" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.8); z-index: 1000; align-items: center; justify-content: center;">
    <div class="card" style="width: 600px; max-width: 90%; max-height: 90vh; overflow-y: auto;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
            <h2 style="font-size: 1.5rem; font-weight: 700;">Ajouter un Nouveau Jeu</h2>
            <button onclick="document.getElementById('addGameModal').style.display='none'" style="background: none; border: none; color: var(--color-text-secondary); cursor: pointer; font-size: 1.5rem;">&times;</button>
        </div>

        <form>
            <div class="form-group">
                <label class="form-label" for="game_name">Nom du jeu</label>
                <input type="text" id="game_name" class="form-input" placeholder="Ex: Valorant">
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                <div class="form-group">
                    <label class="form-label" for="game_publisher">√âditeur</label>
                    <input type="text" id="game_publisher" class="form-input" placeholder="Ex: Riot Games">
                </div>

                <div class="form-group">
                    <label class="form-label" for="game_category">Cat√©gorie</label>
                    <select id="game_category" class="form-input">
                        <option>FPS</option>
                        <option>MOBA</option>
                        <option>Battle Royale</option>
                        <option>Sports</option>
                        <option>RPG</option>
                        <option>Strategy</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label" for="game_icon">Ic√¥ne (emoji)</label>
                <input type="text" id="game_icon" class="form-input" placeholder="Ex: üéØ" maxlength="2">
            </div>

            <div class="form-group">
                <label class="form-label" for="game_status">Statut</label>
                <select id="game_status" class="form-input">
                    <option value="active">Actif</option>
                    <option value="inactive">Inactif</option>
                </select>
            </div>

            <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                <button type="submit" class="btn btn-primary" style="flex: 1;">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    Ajouter le Jeu
                </button>
                <button type="button" class="btn btn-secondary" onclick="document.getElementById('addGameModal').style.display='none'">
                    Annuler
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function editGame(id) {
    alert('Modifier le jeu #' + id);
}

function deleteGame(id, name) {
    if (confirm('√ätes-vous s√ªr de vouloir supprimer le jeu "' + name + '" ?\n\nCette action supprimera √©galement tous les tournois associ√©s.')) {
        alert('Jeu #' + id + ' supprim√©');
    }
}
</script>
{% endblock %}
