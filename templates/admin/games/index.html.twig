{% extends 'base.html.twig' %}

{% block title %}Gestion des Jeux - Admin - Carthage Arena{% endblock %}

{% block body %}
<div id="mainContent" class="opacity-0 transition-opacity duration-500">
    <div class="flex min-h-screen bg-background-dark">
        {# Sidebar #}
        {% include 'admin/_sidebar.html.twig' %}

        {# Main Content Area #}
        <main class="flex-1 ml-64 overflow-y-auto h-screen">
            {# Sticky Header #}
            <header class="sticky top-0 z-30 bg-background-dark/80 backdrop-blur-xl border-b border-white/5">
                <div class="flex items-center justify-between px-8 py-4">
                    <div>
                        <h1 class="text-2xl font-bold text-white">Gestion des Jeux</h1>
                        <p class="text-sm text-white/40 mt-0.5">Ajouter et configurer les jeux disponibles</p>
                    </div>
                    <button class="inline-flex items-center gap-2 px-5 py-2.5 bg-primary hover:bg-primary/90 text-white text-sm font-semibold rounded-xl transition-all"
                            onclick="document.getElementById('addGameModal').classList.remove('hidden')">
                        <span class="material-symbols-outlined text-[18px]">add</span>
                        + Ajouter
                    </button>
                </div>
            </header>

            {# Page Content #}
            <div class="p-8 space-y-6">
                {# Search & Filters #}
                <div class="bg-surface-dark border border-white/5 rounded-2xl p-4">
                    <div class="flex items-center gap-4">
                        <div class="flex-1 relative">
                            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-white/30 text-[20px]">search</span>
                            <input type="text" placeholder="Rechercher un jeu..."
                                   class="w-full bg-white/5 border border-white/10 rounded-xl pl-10 pr-4 py-2.5 text-sm text-white placeholder-white/30 focus:border-primary/50 focus:ring-1 focus:ring-primary/30 outline-none transition-all" />
                        </div>
                        <select class="bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white/70 outline-none focus:border-primary/50 w-48">
                            <option>Toutes les cat√©gories</option>
                            <option>FPS</option>
                            <option>MOBA</option>
                            <option>Battle Royale</option>
                            <option>Sports</option>
                        </select>
                        <select class="bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white/70 outline-none focus:border-primary/50 w-48">
                            <option>Tous les statuts</option>
                            <option>Actif</option>
                            <option>Inactif</option>
                        </select>
                    </div>
                </div>

                {# Games Grid #}
                <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                    {% for game in games %}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl overflow-hidden hover:border-white/10 transition-all group">
                        {# Game Header with Icon #}
                        <div class="relative h-28 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
                            <span class="text-6xl">{{ game.icon }}</span>
                            {# Status Badge #}
                            <div class="absolute top-3 right-3">
                                {% if game.status == 'active' %}
                                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-semibold bg-green-500/20 text-green-400 backdrop-blur-sm">
                                        <span class="w-1.5 h-1.5 rounded-full bg-green-400"></span>
                                        Actif
                                    </span>
                                {% else %}
                                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-semibold bg-red-500/20 text-red-400 backdrop-blur-sm">
                                        <span class="w-1.5 h-1.5 rounded-full bg-red-400"></span>
                                        Inactif
                                    </span>
                                {% endif %}
                            </div>
                        </div>

                        {# Game Info #}
                        <div class="p-5">
                            <div class="flex items-center justify-between mb-3">
                                <h3 class="text-lg font-bold text-white">{{ game.name }}</h3>
                                <span class="inline-flex px-2.5 py-1 rounded-full text-xs font-semibold
                                              {% if game.category == 'FPS' %}bg-primary/20 text-primary
                                              {% elseif game.category == 'MOBA' %}bg-purple-500/20 text-purple-400
                                              {% else %}bg-blue-500/20 text-blue-400{% endif %}">
                                    {{ game.category }}
                                </span>
                            </div>

                            <p class="text-sm text-white/40 mb-4">{{ game.publisher }}</p>

                            {# Stats #}
                            <div class="grid grid-cols-2 gap-3">
                                <div class="bg-white/5 rounded-xl p-3 text-center">
                                    <p class="text-xs text-white/30 mb-0.5">Tournois</p>
                                    <p class="text-lg font-bold text-secondary">{{ game.tournaments }}</p>
                                </div>
                                <div class="bg-white/5 rounded-xl p-3 text-center">
                                    <p class="text-xs text-white/30 mb-0.5">Joueurs</p>
                                    <p class="text-lg font-bold text-green-400">{{ game.players }}</p>
                                </div>
                            </div>

                            {# Actions #}
                            <div class="flex items-center gap-2 mt-4 pt-4 border-t border-white/5">
                                <button class="flex-1 inline-flex items-center justify-center gap-1.5 py-2 rounded-xl bg-white/5 hover:bg-white/10 text-sm text-white/60 hover:text-white transition-all">
                                    <span class="material-symbols-outlined text-[16px]">edit</span>
                                    Modifier
                                </button>
                                <button class="flex-1 inline-flex items-center justify-center gap-1.5 py-2 rounded-xl bg-red-500/10 hover:bg-red-500/20 text-sm text-red-400 transition-all">
                                    <span class="material-symbols-outlined text-[16px]">delete</span>
                                    Supprimer
                                </button>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </main>
    </div>
</div>

{# Add Game Modal #}
<div id="addGameModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm">
    <div class="bg-surface-dark border border-white/10 rounded-2xl w-[560px] max-w-[90vw] max-h-[90vh] overflow-y-auto p-6">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-white">Ajouter un Nouveau Jeu</h2>
            <button onclick="document.getElementById('addGameModal').classList.add('hidden')"
                    class="p-1.5 rounded-lg hover:bg-white/10 text-white/40 hover:text-white transition-all">
                <span class="material-symbols-outlined">close</span>
            </button>
        </div>

        <form class="space-y-5">
            <div>
                <label class="block text-sm font-medium text-white/60 mb-1.5">Nom du jeu</label>
                <input type="text" placeholder="Ex: Valorant"
                       class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white placeholder-white/30 focus:border-primary/50 focus:ring-1 focus:ring-primary/30 outline-none transition-all" />
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-white/60 mb-1.5">√âditeur</label>
                    <input type="text" placeholder="Ex: Riot Games"
                           class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white placeholder-white/30 focus:border-primary/50 focus:ring-1 focus:ring-primary/30 outline-none transition-all" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-white/60 mb-1.5">Cat√©gorie</label>
                    <select class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white/70 outline-none focus:border-primary/50">
                        <option>FPS</option>
                        <option>MOBA</option>
                        <option>Battle Royale</option>
                        <option>Sports</option>
                        <option>RPG</option>
                        <option>Strategy</option>
                    </select>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-white/60 mb-1.5">Ic√¥ne (emoji)</label>
                    <input type="text" placeholder="Ex: üéØ" maxlength="2"
                           class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white placeholder-white/30 focus:border-primary/50 outline-none transition-all" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-white/60 mb-1.5">Statut</label>
                    <select class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white/70 outline-none focus:border-primary/50">
                        <option value="active">Actif</option>
                        <option value="inactive">Inactif</option>
                    </select>
                </div>
            </div>

            <div class="flex items-center gap-3 pt-4">
                <button type="submit" class="flex-1 inline-flex items-center justify-center gap-2 py-2.5 bg-primary hover:bg-primary/90 text-white text-sm font-semibold rounded-xl transition-all">
                    <span class="material-symbols-outlined text-[18px]">check</span>
                    Ajouter le Jeu
                </button>
                <button type="button"
                        onclick="document.getElementById('addGameModal').classList.add('hidden')"
                        class="px-6 py-2.5 bg-white/5 hover:bg-white/10 text-white/60 text-sm font-semibold rounded-xl transition-all">
                    Annuler
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
