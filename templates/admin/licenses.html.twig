{% extends 'base.html.twig' %}

{% block title %}Gestion des Licences - Admin{% endblock %}

{% block body %}
<div class="min-h-screen bg-background-dark text-white p-8">
    <div class="max-w-7xl mx-auto">
        {# Header #}
        <div class="mb-8 flex items-center gap-4">
            <a href="{{ path('app_dashboard') }}" class="p-3 rounded-lg bg-white/5 hover:bg-white/10 text-white hover:text-primary transition-all">
                <span class="material-symbols-outlined text-[24px]">arrow_back</span>
            </a>
            <div class="flex-1">
                <h1 class="text-3xl font-bold text-white mb-2">Gestion des Licences d'Arbitre</h1>
                <p class="text-gray-400">Générez et gérez les licences d'arbitre</p>
            </div>
        </div>

        {# Flash messages #}
        {% for message in app.flashes('success') %}
            <div class="bg-green-500/10 border border-green-500/20 rounded-xl p-4 mb-6 text-sm text-green-400 flex items-start gap-3">
                <span class="material-symbols-outlined text-[20px]">check_circle</span>
                <div>{{ message }}</div>
            </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="bg-red-500/10 border border-red-500/20 rounded-xl p-4 mb-6 text-sm text-red-400 flex items-start gap-3">
                <span class="material-symbols-outlined text-[20px]">error</span>
                <div>{{ message }}</div>
            </div>
        {% endfor %}

        {# Statistics Cards #}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-surface-dark border border-white/5 rounded-2xl p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-400 text-sm mb-1">Total</p>
                        <p class="text-3xl font-bold text-white">{{ stats.total }}</p>
                    </div>
                    <div class="w-12 h-12 rounded-xl bg-blue-500/10 flex items-center justify-center">
                        <span class="material-symbols-outlined text-blue-400 text-[28px]">badge</span>
                    </div>
                </div>
            </div>

            <div class="bg-surface-dark border border-white/5 rounded-2xl p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-400 text-sm mb-1">Utilisées</p>
                        <p class="text-3xl font-bold text-white">{{ stats.used }}</p>
                    </div>
                    <div class="w-12 h-12 rounded-xl bg-green-500/10 flex items-center justify-center">
                        <span class="material-symbols-outlined text-green-400 text-[28px]">check_circle</span>
                    </div>
                </div>
            </div>

            <div class="bg-surface-dark border border-white/5 rounded-2xl p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-400 text-sm mb-1">Disponibles</p>
                        <p class="text-3xl font-bold text-white">{{ stats.available }}</p>
                    </div>
                    <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
                        <span class="material-symbols-outlined text-primary text-[28px]">schedule</span>
                    </div>
                </div>
            </div>
        </div>

        {# Generate Licenses Form #}
        <div class="bg-surface-dark border border-white/5 rounded-2xl p-6 mb-8">
            <h2 class="text-xl font-bold text-white mb-4">Générer de nouvelles licences</h2>
            <form action="{{ path('app_admin_licenses_generate') }}" method="POST" class="flex items-end gap-4">
                <div class="flex-1">
                    <label for="count" class="block text-sm font-medium text-gray-400 mb-2">Nombre de licences à générer</label>
                    <input 
                        type="number" 
                        id="count" 
                        name="count" 
                        min="1" 
                        max="100" 
                        value="1"
                        class="w-full bg-[#161616] border border-white/10 rounded-xl py-3 px-4 text-sm text-white placeholder-gray-500 focus:border-primary focus:outline-none transition-all"
                    >
                </div>
                <button 
                    type="submit"
                    class="rounded-xl bg-primary py-3 px-6 text-sm font-bold text-white shadow-lg shadow-red-900/30 hover:bg-red-600 hover:shadow-red-600/40 hover:-translate-y-0.5 transition-all flex items-center gap-2"
                >
                    <span class="material-symbols-outlined text-[20px]">add</span>
                    Générer
                </button>
            </form>
        </div>

        {# Licenses Table #}
        <div class="bg-surface-dark border border-white/5 rounded-2xl overflow-hidden">
            <div class="p-6 border-b border-white/5">
                <h2 class="text-xl font-bold text-white">Liste des licences</h2>
            </div>
            
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-black/20">
                        <tr>
                            <th class="text-left py-4 px-6 text-sm font-medium text-gray-400">Code de licence</th>
                            <th class="text-left py-4 px-6 text-sm font-medium text-gray-400">Statut</th>
                            <th class="text-left py-4 px-6 text-sm font-medium text-gray-400">Assigné à</th>
                            <th class="text-left py-4 px-6 text-sm font-medium text-gray-400">Créée le</th>
                            <th class="text-left py-4 px-6 text-sm font-medium text-gray-400">Utilisée le</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-white/5">
                        {% for license in licenses %}
                            <tr class="hover:bg-white/5 transition-colors">
                                <td class="py-4 px-6">
                                    <span class="font-mono text-sm text-white">{{ license.licenseCode }}</span>
                                </td>
                                <td class="py-4 px-6">
                                    {% if license.isUsed %}
                                        <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-medium bg-green-500/10 text-green-400 border border-green-500/20">
                                            <span class="w-1.5 h-1.5 rounded-full bg-green-400"></span>
                                            Utilisée
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary border border-primary/20">
                                            <span class="w-1.5 h-1.5 rounded-full bg-primary"></span>
                                            Disponible
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="py-4 px-6">
                                    {% if license.assignedTo %}
                                        <div class="flex items-center gap-2">
                                            <span class="material-symbols-outlined text-gray-400 text-[18px]">person</span>
                                            <span class="text-sm text-white">{{ license.assignedTo.username }}</span>
                                        </div>
                                    {% else %}
                                        <span class="text-sm text-gray-500">—</span>
                                    {% endif %}
                                </td>
                                <td class="py-4 px-6">
                                    <span class="text-sm text-gray-400">{{ license.createdAt|date('d/m/Y H:i') }}</span>
                                </td>
                                <td class="py-4 px-6">
                                    {% if license.usedAt %}
                                        <span class="text-sm text-gray-400">{{ license.usedAt|date('d/m/Y H:i') }}</span>
                                    {% else %}
                                        <span class="text-sm text-gray-500">—</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="py-12 text-center">
                                    <div class="flex flex-col items-center gap-3">
                                        <span class="material-symbols-outlined text-gray-600 text-[48px]">badge</span>
                                        <p class="text-gray-500">Aucune licence générée pour le moment</p>
                                        <p class="text-sm text-gray-600">Utilisez le formulaire ci-dessus pour générer des licences</p>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
