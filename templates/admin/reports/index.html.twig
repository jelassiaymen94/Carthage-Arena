{% extends 'base.html.twig' %}

{% block title %}Rapports & Analyses - Admin - Carthage Arena{% endblock %}

{% block body %}
<div class="app-container">
    {% include 'admin/_sidebar.html.twig' %}

    <main class="main-content">
        <div class="page-header">
            <h1 class="page-title">Rapports & Analyses</h1>
            <div style="display: flex; gap: 1rem;">
                <select class="form-input" style="width: 200px;">
                    <option>Ce mois</option>
                    <option>Cette semaine</option>
                    <option>Aujourd'hui</option>
                    <option>Personnalisé</option>
                </select>
                <button class="btn btn-primary">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                        <polyline points="7 10 12 15 17 10"></polyline>
                        <line x1="12" y1="15" x2="12" y2="3"></line>
                    </svg>
                    Exporter
                </button>
            </div>
        </div>

        <div class="stats-grid" style="grid-template-columns: repeat(3, 1fr); margin-bottom: 2rem;">
            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #00FF88 0%, #00CC6E 100%);">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="1" x2="12" y2="23"></line>
                        <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                    </svg>
                </div>
                <div class="stat-label">Revenus Totaux</div>
                <div class="stat-value">{{ stats.totalRevenue }}</div>
                <div class="stat-meta" style="color: var(--color-success);">
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: inline;">
                        <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
                    </svg>
                    +15% vs mois dernier
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #0099FF 0%, #0066CC 100%);">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                        <line x1="1" y1="10" x2="23" y2="10"></line>
                    </svg>
                </div>
                <div class="stat-label">Transactions</div>
                <div class="stat-value">{{ stats.totalTransactions }}</div>
                <div class="stat-meta">
                    Moyenne: {{ stats.avgTransactionValue }}
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                    </svg>
                </div>
                <div class="stat-label">Revenus Mensuels</div>
                <div class="stat-value">{{ stats.monthlyRevenue }}</div>
                <div class="stat-meta" style="color: var(--color-success);">
                    Semaine: {{ stats.weeklyRevenue }}
                </div>
            </div>
        </div>

        <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem; margin-bottom: 2rem;">
            <div class="card">
                <h2 class="card-title" style="margin-bottom: 1.5rem;">Évolution des Revenus</h2>
                
                <div style="height: 300px; display: flex; align-items: flex-end; gap: 1rem; padding: 1rem; background: var(--color-bg-tertiary); border-radius: var(--radius-lg);">
                    {% set maxRevenue = 25000 %}
                    {% for data in revenueData %}
                    <div style="flex: 1; display: flex; flex-direction: column; align-items: center; gap: 0.5rem;">
                        <div style="font-weight: 700; color: var(--color-warning); font-size: 0.875rem;">{{ (data.revenue / 1000)|round(1) }}k</div>
                        <div style="width: 100%; background: var(--gradient-primary); border-radius: 4px 4px 0 0; height: {{ (data.revenue / maxRevenue * 250) }}px; transition: all 0.3s ease;"></div>
                        <div style="font-size: 0.75rem; color: var(--color-text-muted); font-weight: 600;">{{ data.month }}</div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <div class="card">
                <h2 class="card-title" style="margin-bottom: 1.5rem;">Top Utilisateurs</h2>
                
                <div style="display: flex; flex-direction: column; gap: 1rem;">
                    {% for user in topUsers %}
                    <div style="padding: 1rem; background: var(--color-bg-tertiary); border-radius: var(--radius-lg); border-left: 3px solid var(--color-primary);">
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.5rem;">
                            <div style="font-weight: 700;">{{ user.name }}</div>
                            <div style="font-size: 1.125rem; font-weight: 800; color: var(--color-warning);">{{ user.spent }}</div>
                        </div>
                        <div style="font-size: 0.875rem; color: var(--color-text-secondary);">
                            {{ user.tournaments }} tournois participés
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
            <div class="card">
                <h2 class="card-title" style="margin-bottom: 1.5rem;">Répartition par Jeu</h2>
                
                <div style="display: flex; flex-direction: column; gap: 1.5rem;">
                    <div>
                        <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                            <span style="font-weight: 600;">Valorant</span>
                            <span style="font-weight: 700; color: var(--color-warning);">45%</span>
                        </div>
                        <div style="background: var(--color-bg-tertiary); height: 12px; border-radius: 6px; overflow: hidden;">
                            <div style="background: var(--gradient-primary); height: 100%; width: 45%;"></div>
                        </div>
                    </div>

                    <div>
                        <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                            <span style="font-weight: 600;">League of Legends</span>
                            <span style="font-weight: 700; color: var(--color-warning);">35%</span>
                        </div>
                        <div style="background: var(--color-bg-tertiary); height: 12px; border-radius: 6px; overflow: hidden;">
                            <div style="background: linear-gradient(135deg, #0099FF 0%, #0066CC 100%); height: 100%; width: 35%;"></div>
                        </div>
                    </div>

                    <div>
                        <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                            <span style="font-weight: 600;">CS:GO 2</span>
                            <span style="font-weight: 700; color: var(--color-warning);">20%</span>
                        </div>
                        <div style="background: var(--color-bg-tertiary); height: 12px; border-radius: 6px; overflow: hidden;">
                            <div style="background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%); height: 100%; width: 20%;"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <h2 class="card-title" style="margin-bottom: 1.5rem;">Statistiques Rapides</h2>
                
                <div style="display: grid; gap: 1rem;">
                    <div style="display: flex; justify-content: space-between; padding: 1rem; background: var(--color-bg-tertiary); border-radius: var(--radius-lg);">
                        <span style="color: var(--color-text-secondary);">Taux de conversion</span>
                        <span style="font-weight: 700; color: var(--color-success);">12.5%</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; padding: 1rem; background: var(--color-bg-tertiary); border-radius: var(--radius-lg);">
                        <span style="color: var(--color-text-secondary);">Utilisateurs actifs</span>
                        <span style="font-weight: 700;">892</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; padding: 1rem; background: var(--color-bg-tertiary); border-radius: var(--radius-lg);">
                        <span style="color: var(--color-text-secondary);">Panier moyen</span>
                        <span style="font-weight: 700; color: var(--color-warning);">{{ stats.avgTransactionValue }}</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; padding: 1rem; background: var(--color-bg-tertiary); border-radius: var(--radius-lg);">
                        <span style="color: var(--color-text-secondary);">Revenus aujourd'hui</span>
                        <span style="font-weight: 700; color: var(--color-warning);">{{ stats.dailyRevenue }}</span>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
