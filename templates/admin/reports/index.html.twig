{% extends 'base.html.twig' %}

{% block title %}Rapports & Analyses - Admin - Carthage Arena{% endblock %}

{% block body %}
<div id="mainContent" class="opacity-0 transition-opacity duration-500">
    <div class="flex min-h-screen bg-background-dark">
        {# Sidebar #}
        {% include 'admin/_sidebar.html.twig' %}

        {# Main Content Area #}
        <main class="flex-1 ml-64 overflow-y-auto h-screen">
            {# Sticky Header #}
            <header class="sticky top-0 z-30 bg-background-dark/80 backdrop-blur-xl border-b border-white/5">
                <div class="flex items-center gap-4 px-8 py-4">
                    <a href="{{ path('app_dashboard') }}" class="p-3 rounded-lg bg-white/5 hover:bg-white/10 text-white hover:text-primary transition-all">
                        <span class="material-symbols-outlined text-[24px]">arrow_back</span>
                    </a>
                    <div class="flex-1 flex items-center justify-between">
                        <div>
                            <h1 class="text-2xl font-bold text-white">Rapports & Analyses</h1>
                            <p class="text-sm text-white/40 mt-0.5">Statistiques de revenus et performances</p>
                        </div>
                        <div class="flex items-center gap-3">
                            <select class="bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white/70 outline-none focus:border-primary/50 w-44">
                            <option>Ce mois</option>
                            <option>Cette semaine</option>
                            <option>Aujourd'hui</option>
                            <option>Personnalisé</option>
                        </select>
                        <button class="inline-flex items-center gap-2 px-5 py-2.5 bg-primary hover:bg-primary/90 text-white text-sm font-semibold rounded-xl transition-all">
                            <span class="material-symbols-outlined text-[18px]">download</span>
                            Exporter
                        </button>
                    </div>
                </div>
            </header>

            {# Page Content #}
            <div class="p-8 space-y-8">
                {# Revenue Stats Grid #}
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                    {# Total Revenue #}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl p-6 hover:border-white/10 transition-all">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 rounded-xl bg-green-500/10 flex items-center justify-center">
                                <span class="material-symbols-outlined text-green-400">payments</span>
                            </div>
                            <span class="inline-flex items-center gap-1 text-xs font-semibold text-green-400">
                                <span class="material-symbols-outlined text-[14px]">trending_up</span>
                                +15%
                            </span>
                        </div>
                        <p class="text-sm text-white/40 mb-1">Total</p>
                        <p class="text-2xl font-bold text-white">{{ stats.totalRevenue }}</p>
                    </div>

                    {# Monthly Revenue #}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl p-6 hover:border-white/10 transition-all">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 rounded-xl bg-blue-500/10 flex items-center justify-center">
                                <span class="material-symbols-outlined text-blue-400">calendar_month</span>
                            </div>
                            <span class="material-symbols-outlined text-blue-400 text-[18px]">show_chart</span>
                        </div>
                        <p class="text-sm text-white/40 mb-1">Mensuel</p>
                        <p class="text-2xl font-bold text-white">{{ stats.monthlyRevenue }}</p>
                    </div>

                    {# Weekly Revenue #}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl p-6 hover:border-white/10 transition-all">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 rounded-xl bg-secondary/10 flex items-center justify-center">
                                <span class="material-symbols-outlined text-secondary">date_range</span>
                            </div>
                            <span class="material-symbols-outlined text-secondary text-[18px]">bar_chart</span>
                        </div>
                        <p class="text-sm text-white/40 mb-1">Hebdomadaire</p>
                        <p class="text-2xl font-bold text-white">{{ stats.weeklyRevenue }}</p>
                    </div>

                    {# Daily Revenue #}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl p-6 hover:border-white/10 transition-all">
                        <div class="flex items-center justify-between mb-4">
                            <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
                                <span class="material-symbols-outlined text-primary">today</span>
                            </div>
                            <span class="material-symbols-outlined text-white/30 text-[18px]">schedule</span>
                        </div>
                        <p class="text-sm text-white/40 mb-1">Quotidien</p>
                        <p class="text-2xl font-bold text-white">{{ stats.dailyRevenue }}</p>
                    </div>
                </div>

                {# Revenue Chart + Top Users #}
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    {# Revenue Data Table #}
                    <div class="lg:col-span-2 bg-surface-dark border border-white/5 rounded-2xl overflow-hidden">
                        <div class="flex items-center justify-between px-6 py-4 border-b border-white/5">
                            <h2 class="text-lg font-bold text-white">Évolution des Revenus</h2>
                        </div>
                        <div class="p-6">
                            {# Bar Chart Visualization #}
                            <div class="flex items-end gap-3 h-64 p-4 bg-white/[0.02] rounded-xl">
                                {% set maxRevenue = 25000 %}
                                {% for data in revenueData %}
                                <div class="flex-1 flex flex-col items-center gap-2">
                                    <span class="text-xs font-bold text-secondary">{{ (data.revenue / 1000)|round(1) }}k</span>
                                    <div class="w-full bg-gradient-to-t from-primary to-primary/60 rounded-t-md transition-all duration-500 hover:from-primary hover:to-primary/80"
                                         style="height: {{ (data.revenue / maxRevenue * 200) }}px"></div>
                                    <span class="text-[10px] font-semibold text-white/30">{{ data.month }}</span>
                                </div>
                                {% endfor %}
                            </div>
                        </div>

                        {# Revenue Data as Table #}
                        <div class="overflow-x-auto border-t border-white/5">
                            <table class="w-full text-sm">
                                <thead>
                                    <tr class="border-b border-white/5">
                                        <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Mois</th>
                                        <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Revenus</th>
                                        <th class="text-left px-6 py-3 text-xs font-semibold text-white/30 uppercase tracking-wider">Évolution</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5">
                                    {% for data in revenueData %}
                                    <tr class="hover:bg-surface-hover transition-colors">
                                        <td class="px-6 py-3 font-medium text-white">{{ data.month }}</td>
                                        <td class="px-6 py-3 font-bold text-secondary">{{ data.revenue|number_format(0, ',', '.') }} DT</td>
                                        <td class="px-6 py-3">
                                            <div class="w-24 h-1.5 bg-white/5 rounded-full overflow-hidden">
                                                <div class="h-full rounded-full bg-primary" style="width: {{ (data.revenue / maxRevenue * 100)|round }}%"></div>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                    {# Top Users #}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl p-6">
                        <h2 class="text-lg font-bold text-white mb-5">Top Utilisateurs</h2>

                        <div class="space-y-3">
                            {% for user in topUsers %}
                            <div class="p-4 bg-white/[0.03] rounded-xl border-l-2 border-primary hover:bg-white/[0.05] transition-all">
                                <div class="flex items-center justify-between mb-2">
                                    <div class="flex items-center gap-2">
                                        <div class="w-7 h-7 rounded-full bg-primary/20 flex items-center justify-center">
                                            <span class="text-[10px] font-bold text-primary">{{ user.name|first|upper }}</span>
                                        </div>
                                        <span class="font-semibold text-white text-sm">{{ user.name }}</span>
                                    </div>
                                    <span class="text-sm font-bold text-secondary">{{ user.spent }}</span>
                                </div>
                                <p class="text-xs text-white/40 pl-9">{{ user.tournaments }} tournois participés</p>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                {# Game Distribution + Quick Stats #}
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    {# Game Distribution #}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl p-6">
                        <h2 class="text-lg font-bold text-white mb-5">Répartition par Jeu</h2>

                        <div class="space-y-5">
                            <div>
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm font-semibold text-white">Valorant</span>
                                    <span class="text-sm font-bold text-secondary">45%</span>
                                </div>
                                <div class="w-full h-3 bg-white/5 rounded-full overflow-hidden">
                                    <div class="h-full rounded-full bg-gradient-to-r from-primary to-primary/60" style="width: 45%"></div>
                                </div>
                            </div>
                            <div>
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm font-semibold text-white">League of Legends</span>
                                    <span class="text-sm font-bold text-secondary">35%</span>
                                </div>
                                <div class="w-full h-3 bg-white/5 rounded-full overflow-hidden">
                                    <div class="h-full rounded-full bg-gradient-to-r from-blue-500 to-blue-500/60" style="width: 35%"></div>
                                </div>
                            </div>
                            <div>
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm font-semibold text-white">CS:GO 2</span>
                                    <span class="text-sm font-bold text-secondary">20%</span>
                                </div>
                                <div class="w-full h-3 bg-white/5 rounded-full overflow-hidden">
                                    <div class="h-full rounded-full bg-gradient-to-r from-secondary to-secondary/60" style="width: 20%"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Quick Stats #}
                    <div class="bg-surface-dark border border-white/5 rounded-2xl p-6">
                        <h2 class="text-lg font-bold text-white mb-5">Statistiques Rapides</h2>

                        <div class="space-y-3">
                            <div class="flex items-center justify-between p-4 bg-white/[0.03] rounded-xl">
                                <span class="text-sm text-white/50">Taux de conversion</span>
                                <span class="text-sm font-bold text-green-400">12.5%</span>
                            </div>
                            <div class="flex items-center justify-between p-4 bg-white/[0.03] rounded-xl">
                                <span class="text-sm text-white/50">Utilisateurs actifs</span>
                                <span class="text-sm font-bold text-white">892</span>
                            </div>
                            <div class="flex items-center justify-between p-4 bg-white/[0.03] rounded-xl">
                                <span class="text-sm text-white/50">Panier moyen</span>
                                <span class="text-sm font-bold text-secondary">{{ stats.avgTransactionValue }}</span>
                            </div>
                            <div class="flex items-center justify-between p-4 bg-white/[0.03] rounded-xl">
                                <span class="text-sm text-white/50">Revenus aujourd'hui</span>
                                <span class="text-sm font-bold text-secondary">{{ stats.dailyRevenue }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
