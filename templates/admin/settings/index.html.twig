{% extends 'base.html.twig' %}

{% block title %}Paramètres Admin - Carthage Arena{% endblock %}

{% block body %}
<div class="app-container">
    {% include 'admin/_sidebar.html.twig' %}

    <main class="main-content">
        <div class="page-header">
            <h1 class="page-title">Paramètres Administrateur</h1>
            <p class="page-subtitle">Configuration de la plateforme et paramètres système</p>
        </div>

        <div style="display: grid; gap: 2rem;">
            <div class="card">
                <h2 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.75rem;">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-primary)" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="2" y1="12" x2="22" y2="12"></line>
                        <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                    </svg>
                    Configuration Générale
                </h2>

                <form>
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                        <div class="form-group">
                            <label class="form-label" for="site_name">Nom du site</label>
                            <input type="text" id="site_name" class="form-input" value="Carthage Arena">
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="site_url">URL du site</label>
                            <input type="text" id="site_url" class="form-input" value="https://carthage-arena.gg">
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="contact_email">Email de contact</label>
                            <input type="email" id="contact_email" class="form-input" value="contact@carthage-arena.gg">
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="timezone">Fuseau horaire</label>
                            <select id="timezone" class="form-input">
                                <option selected>Africa/Tunis (GMT+1)</option>
                                <option>Europe/Paris (GMT+1)</option>
                                <option>UTC (GMT+0)</option>
                            </select>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                </form>
            </div>

            <div class="card">
                <h2 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.75rem;">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-primary)" stroke-width="2">
                        <circle cx="9" cy="21" r="1"></circle>
                        <circle cx="20" cy="21" r="1"></circle>
                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                    </svg>
                    Configuration Boutique
                </h2>

                <form>
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                        <div class="form-group">
                            <label class="form-label" for="cp_rate">Taux de conversion CP (1 DT = X CP)</label>
                            <input type="number" id="cp_rate" class="form-input" value="100">
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="min_purchase">Achat minimum (CP)</label>
                            <input type="number" id="min_purchase" class="form-input" value="500">
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="commission">Commission plateforme (%)</label>
                            <input type="number" id="commission" class="form-input" value="15">
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="tax">Taxe (%)</label>
                            <input type="number" id="tax" class="form-input" value="19">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                </form>
            </div>

            <div class="card">
                <h2 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.75rem;">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-primary)" stroke-width="2">
                        <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"></path>
                        <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"></path>
                        <path d="M4 22h16"></path>
                        <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"></path>
                        <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"></path>
                        <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"></path>
                    </svg>
                    Configuration Tournois
                </h2>

                <form>
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                        <div class="form-group">
                            <label class="form-label" for="max_teams">Nombre max d'équipes par défaut</label>
                            <input type="number" id="max_teams" class="form-input" value="16">
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="min_prize">Prize pool minimum (DT)</label>
                            <input type="number" id="min_prize" class="form-input" value="1000">
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="registration_days">Durée inscription (jours)</label>
                            <input type="number" id="registration_days" class="form-input" value="7">
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="auto_bracket">Génération bracket automatique</label>
                            <select id="auto_bracket" class="form-input">
                                <option selected>Activé</option>
                                <option>Désactivé</option>
                            </select>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                </form>
            </div>

            <div class="card">
                <h2 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.75rem;">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-primary)" stroke-width="2">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                    Sécurité & Maintenance
                </h2>

                <div style="display: flex; flex-direction: column; gap: 1.5rem;">
                    <div style="display: flex; justify-content: space-between; align-items: center; padding: 1rem; background: var(--color-bg-tertiary); border-radius: var(--radius-lg);">
                        <div>
                            <div style="font-weight: 600; margin-bottom: 0.25rem;">Mode Maintenance</div>
                            <div style="font-size: 0.875rem; color: var(--color-text-secondary);">Désactiver temporairement le site pour maintenance</div>
                        </div>
                        <label style="position: relative; display: inline-block; width: 60px; height: 34px;">
                            <input type="checkbox" style="opacity: 0; width: 0; height: 0;">
                            <span style="position: absolute; cursor: pointer; top: 0; left: 0; right: 0; bottom: 0; background-color: var(--color-bg-input); transition: .4s; border-radius: 34px;"></span>
                        </label>
                    </div>

                    <div style="display: flex; justify-content: space-between; align-items: center; padding: 1rem; background: var(--color-bg-tertiary); border-radius: var(--radius-lg);">
                        <div>
                            <div style="font-weight: 600; margin-bottom: 0.25rem;">Nouvelles inscriptions</div>
                            <div style="font-size: 0.875rem; color: var(--color-text-secondary);">Autoriser les nouveaux utilisateurs à s'inscrire</div>
                        </div>
                        <label style="position: relative; display: inline-block; width: 60px; height: 34px;">
                            <input type="checkbox" checked style="opacity: 0; width: 0; height: 0;">
                            <span style="position: absolute; cursor: pointer; top: 0; left: 0; right: 0; bottom: 0; background-color: var(--color-primary); transition: .4s; border-radius: 34px;"></span>
                        </label>
                    </div>

                    <div style="padding: 1.5rem; background: rgba(255, 0, 34, 0.1); border-radius: var(--radius-lg); border: 1px solid var(--color-error);">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                <div style="font-weight: 600; margin-bottom: 0.5rem; color: var(--color-error);">Nettoyer le cache</div>
                                <div style="font-size: 0.875rem; color: var(--color-text-secondary);">Supprimer tous les fichiers de cache temporaires</div>
                            </div>
                            <button class="btn" style="background-color: var(--color-error); color: white;">
                                Nettoyer
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
