{% extends 'base.html.twig' %}

{% block title %}Paramètres Admin - Carthage Arena{% endblock %}

{% block body %}
<div id="mainContent" class="opacity-0 transition-opacity duration-500">
    <div class="flex min-h-screen bg-background-dark">
        {# Sidebar #}
        {% include 'admin/_sidebar.html.twig' %}

        {# Main Content Area #}
        <main class="flex-1 ml-64 overflow-y-auto h-screen">
            {# Sticky Header #}
            <header class="sticky top-0 z-30 bg-background-dark/80 backdrop-blur-xl border-b border-white/5">
                <div class="flex items-center gap-4 px-8 py-4">
                    <a href="{{ path('app_dashboard') }}" class="p-3 rounded-lg bg-white/5 hover:bg-white/10 text-white hover:text-primary transition-all">
                        <span class="material-symbols-outlined text-[24px]">arrow_back</span>
                    </a>
                    <div class="flex-1">
                        <h1 class="text-2xl font-bold text-white">Paramètres Administrateur</h1>
                        <p class="text-sm text-white/40 mt-0.5">Configuration de la plateforme et paramètres système</p>
                    </div>
                </div>
            </header>

            {# Page Content #}
            <div class="p-8 space-y-8">
                {# Site Settings #}
                <div class="bg-surface-dark border border-white/5 rounded-2xl p-6">
                    <div class="flex items-center gap-3 mb-6">
                        <div class="w-10 h-10 rounded-xl bg-primary/10 flex items-center justify-center">
                            <span class="material-symbols-outlined text-primary">language</span>
                        </div>
                        <div>
                            <h2 class="text-lg font-bold text-white">Configuration du Site</h2>
                            <p class="text-xs text-white/30">Paramètres généraux de la plateforme</p>
                        </div>
                    </div>

                    <form class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div>
                                <label for="site_name" class="block text-sm font-medium text-white/60 mb-1.5">Nom du site</label>
                                <input type="text" id="site_name" value="Carthage Arena"
                                       class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white focus:border-primary/50 focus:ring-1 focus:ring-primary/30 outline-none transition-all" />
                            </div>
                            <div>
                                <label for="site_url" class="block text-sm font-medium text-white/60 mb-1.5">URL du site</label>
                                <input type="text" id="site_url" value="https://carthage-arena.gg"
                                       class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white focus:border-primary/50 focus:ring-1 focus:ring-primary/30 outline-none transition-all" />
                            </div>
                        </div>

                        <div>
                            <label for="site_description" class="block text-sm font-medium text-white/60 mb-1.5">Description du site</label>
                            <textarea id="site_description" rows="3" placeholder="Description de la plateforme..."
                                      class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white placeholder-white/30 focus:border-primary/50 focus:ring-1 focus:ring-primary/30 outline-none transition-all resize-none">Plateforme e-sport tunisienne pour les tournois compétitifs.</textarea>
                        </div>

                        {# Maintenance Toggle #}
                        <div class="flex items-center justify-between p-4 bg-white/[0.03] rounded-xl">
                            <div>
                                <p class="text-sm font-semibold text-white">Mode Maintenance</p>
                                <p class="text-xs text-white/40 mt-0.5">Désactiver temporairement le site pour maintenance</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" class="sr-only peer" />
                                <div class="w-11 h-6 bg-white/10 rounded-full peer peer-checked:bg-primary peer-focus:ring-2 peer-focus:ring-primary/30 after:content-[''] after:absolute after:top-0.5 after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:after:translate-x-full"></div>
                            </label>
                        </div>

                        <button type="submit" class="inline-flex items-center gap-2 px-6 py-2.5 bg-primary hover:bg-primary/90 text-white text-sm font-semibold rounded-xl transition-all">
                            <span class="material-symbols-outlined text-[18px]">save</span>
                            Enregistrer les modifications
                        </button>
                    </form>
                </div>

                {# Email Settings #}
                <div class="bg-surface-dark border border-white/5 rounded-2xl p-6">
                    <div class="flex items-center gap-3 mb-6">
                        <div class="w-10 h-10 rounded-xl bg-blue-500/10 flex items-center justify-center">
                            <span class="material-symbols-outlined text-blue-400">mail</span>
                        </div>
                        <div>
                            <h2 class="text-lg font-bold text-white">Configuration Email</h2>
                            <p class="text-xs text-white/30">Paramètres du serveur de messagerie</p>
                        </div>
                    </div>

                    <form class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div>
                                <label for="smtp_host" class="block text-sm font-medium text-white/60 mb-1.5">Serveur SMTP</label>
                                <input type="text" id="smtp_host" value="smtp.carthage-arena.gg"
                                       class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white focus:border-primary/50 focus:ring-1 focus:ring-primary/30 outline-none transition-all" />
                            </div>
                            <div>
                                <label for="smtp_port" class="block text-sm font-medium text-white/60 mb-1.5">Port SMTP</label>
                                <input type="number" id="smtp_port" value="587"
                                       class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white focus:border-primary/50 focus:ring-1 focus:ring-primary/30 outline-none transition-all" />
                            </div>
                            <div>
                                <label for="contact_email" class="block text-sm font-medium text-white/60 mb-1.5">Email de contact</label>
                                <input type="email" id="contact_email" value="contact@carthage-arena.gg"
                                       class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white focus:border-primary/50 focus:ring-1 focus:ring-primary/30 outline-none transition-all" />
                            </div>
                            <div>
                                <label for="noreply_email" class="block text-sm font-medium text-white/60 mb-1.5">Email noreply</label>
                                <input type="email" id="noreply_email" value="noreply@carthage-arena.gg"
                                       class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white focus:border-primary/50 focus:ring-1 focus:ring-primary/30 outline-none transition-all" />
                            </div>
                        </div>

                        <button type="submit" class="inline-flex items-center gap-2 px-6 py-2.5 bg-primary hover:bg-primary/90 text-white text-sm font-semibold rounded-xl transition-all">
                            <span class="material-symbols-outlined text-[18px]">save</span>
                            Enregistrer les modifications
                        </button>
                    </form>
                </div>

                {# Security Settings #}
                <div class="bg-surface-dark border border-white/5 rounded-2xl p-6">
                    <div class="flex items-center gap-3 mb-6">
                        <div class="w-10 h-10 rounded-xl bg-red-500/10 flex items-center justify-center">
                            <span class="material-symbols-outlined text-red-400">shield</span>
                        </div>
                        <div>
                            <h2 class="text-lg font-bold text-white">Sécurité & Maintenance</h2>
                            <p class="text-xs text-white/30">Paramètres de sécurité et actions système</p>
                        </div>
                    </div>

                    <div class="space-y-4">
                        {# New Registrations Toggle #}
                        <div class="flex items-center justify-between p-4 bg-white/[0.03] rounded-xl">
                            <div>
                                <p class="text-sm font-semibold text-white">Nouvelles inscriptions</p>
                                <p class="text-xs text-white/40 mt-0.5">Autoriser les nouveaux utilisateurs à s'inscrire</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" checked class="sr-only peer" />
                                <div class="w-11 h-6 bg-white/10 rounded-full peer peer-checked:bg-primary peer-focus:ring-2 peer-focus:ring-primary/30 after:content-[''] after:absolute after:top-0.5 after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:after:translate-x-full"></div>
                            </label>
                        </div>

                        {# Two-Factor Authentication Toggle #}
                        <div class="flex items-center justify-between p-4 bg-white/[0.03] rounded-xl">
                            <div>
                                <p class="text-sm font-semibold text-white">Authentification à deux facteurs</p>
                                <p class="text-xs text-white/40 mt-0.5">Exiger la 2FA pour les comptes admin</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" checked class="sr-only peer" />
                                <div class="w-11 h-6 bg-white/10 rounded-full peer peer-checked:bg-primary peer-focus:ring-2 peer-focus:ring-primary/30 after:content-[''] after:absolute after:top-0.5 after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:after:translate-x-full"></div>
                            </label>
                        </div>

                        {# Session Timeout #}
                        <div class="flex items-center justify-between p-4 bg-white/[0.03] rounded-xl">
                            <div>
                                <p class="text-sm font-semibold text-white">Délai d'expiration de session</p>
                                <p class="text-xs text-white/40 mt-0.5">Durée avant déconnexion automatique</p>
                            </div>
                            <select class="bg-white/5 border border-white/10 rounded-xl px-4 py-2 text-sm text-white/70 outline-none focus:border-primary/50 w-40">
                                <option>30 minutes</option>
                                <option selected>1 heure</option>
                                <option>2 heures</option>
                                <option>4 heures</option>
                            </select>
                        </div>

                        {# Clear Cache - Danger Zone #}
                        <div class="p-5 bg-red-500/5 border border-red-500/20 rounded-xl mt-6">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-semibold text-red-400">Nettoyer le cache</p>
                                    <p class="text-xs text-white/40 mt-0.5">Supprimer tous les fichiers de cache temporaires</p>
                                </div>
                                <button class="inline-flex items-center gap-2 px-5 py-2 bg-red-500 hover:bg-red-600 text-white text-sm font-semibold rounded-xl transition-all">
                                    <span class="material-symbols-outlined text-[18px]">delete_sweep</span>
                                    Nettoyer
                                </button>
                            </div>
                        </div>

                        {# Reset Platform - Danger Zone #}
                        <div class="p-5 bg-red-500/5 border border-red-500/20 rounded-xl">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-semibold text-red-400">Réinitialiser la plateforme</p>
                                    <p class="text-xs text-white/40 mt-0.5">Remettre tous les paramètres aux valeurs par défaut</p>
                                </div>
                                <button class="inline-flex items-center gap-2 px-5 py-2 bg-red-500/20 hover:bg-red-500/30 text-red-400 text-sm font-semibold rounded-xl border border-red-500/30 transition-all">
                                    <span class="material-symbols-outlined text-[18px]">restart_alt</span>
                                    Réinitialiser
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
