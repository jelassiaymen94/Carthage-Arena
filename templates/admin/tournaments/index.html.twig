{% extends 'base.html.twig' %}

{% block title %}Gestion Tournois - Admin - Carthage Arena{% endblock %}

{% block body %}
<div class="app-container">
    {% include 'admin/_sidebar.html.twig' %}

    <main class="main-content">
        <div class="page-header">
            <h1 class="page-title">Gestion des Tournois</h1>
            <button class="btn btn-primary">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="8" x2="12" y2="16"></line>
                    <line x1="8" y1="12" x2="16" y2="12"></line>
                </svg>
                Créer un Tournoi
            </button>
        </div>

        <div class="card" style="margin-bottom: 2rem;">
            <div style="display: flex; gap: 1rem; align-items: center;">
                <div class="form-group" style="flex: 1; margin: 0;">
                    <input type="text" class="form-input" placeholder="Rechercher un tournoi...">
                </div>
                <select class="form-input" style="width: 200px;">
                    <option>Tous les jeux</option>
                    <option>League of Legends</option>
                    <option>Valorant</option>
                    <option>CS:GO 2</option>
                </select>
                <select class="form-input" style="width: 200px;">
                    <option>Tous les statuts</option>
                    <option>Actif</option>
                    <option>En attente</option>
                    <option>Terminé</option>
                </select>
            </div>
        </div>

        <div style="display: grid; gap: 1.5rem;">
            {% for tournament in tournaments %}
            <div class="card" style="padding: 0; overflow: hidden;">
                <div style="display: grid; grid-template-columns: auto 1fr auto; gap: 0;">
                    <div style="width: 80px; background: var(--gradient-primary); display: flex; align-items: center; justify-content: center; font-size: 2rem; font-weight: 800;">
                        #{{ tournament.id }}
                    </div>

                    <div style="padding: 1.5rem;">
                        <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                            <h3 style="font-size: 1.5rem; font-weight: 700;">{{ tournament.name }}</h3>
                            <span class="badge badge-{{ tournament.game == 'LoL' ? 'epic' : (tournament.game == 'Valorant' ? 'legendary' : 'secret') }}">
                                {{ tournament.game }}
                            </span>
                            <span class="badge {% if tournament.status == 'active' %}badge-legendary{% elseif tournament.status == 'pending' %}badge-season{% else %}badge-premium{% endif %}">
                                {{ tournament.status }}
                            </span>
                        </div>

                        <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 2rem;">
                            <div>
                                <div style="font-size: 0.75rem; color: var(--color-text-muted); text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 0.25rem;">Équipes</div>
                                <div style="font-size: 1.25rem; font-weight: 700;">{{ tournament.teams }}/{{ tournament.maxTeams }}</div>
                            </div>
                            <div>
                                <div style="font-size: 0.75rem; color: var(--color-text-muted); text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 0.25rem;">Prize Pool</div>
                                <div style="font-size: 1.25rem; font-weight: 700; color: var(--color-warning);">{{ tournament.prize }}</div>
                            </div>
                            <div>
                                <div style="font-size: 0.75rem; color: var(--color-text-muted); text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 0.25rem;">Date</div>
                                <div style="font-size: 1rem; font-weight: 600;">{{ tournament.date }}</div>
                            </div>
                            <div>
                                <div style="font-size: 0.75rem; color: var(--color-text-muted); text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 0.25rem;">Progression</div>
                                <div style="background: var(--color-bg-tertiary); height: 8px; border-radius: 4px; overflow: hidden; margin-top: 0.5rem;">
                                    <div style="background: var(--color-primary); height: 100%; width: {{ (tournament.teams / tournament.maxTeams * 100)|round }}%;"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div style="padding: 1.5rem; display: flex; flex-direction: column; gap: 0.75rem; background: var(--color-bg-tertiary); border-left: 1px solid var(--color-border); min-width: 200px; justify-content: center;">
                        <button class="btn btn-primary" style="width: 100%; font-size: 0.875rem;">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                            Voir Détails
                        </button>
                        <button class="btn btn-secondary" style="width: 100%; font-size: 0.875rem;">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                            </svg>
                            Modifier
                        </button>
                        <button class="btn" style="width: 100%; font-size: 0.875rem; background-color: var(--color-error); color: white;">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            </svg>
                            Supprimer
                        </button>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </main>
</div>
{% endblock %}
