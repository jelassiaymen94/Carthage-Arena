{% extends 'base.html.twig' %}

{% block title %}Attribuer une Licence - Admin{% endblock %}

{% block body %}
<div id="mainContent" class="opacity-0 transition-opacity duration-500">
    <div class="flex min-h-screen bg-background-dark">
        {# Sidebar #}
        {% include 'admin/_sidebar.html.twig' %}

        {# Main Content #}
        <main class="flex-1 ml-72 p-8">
            <div class="max-w-xl mx-auto">
                <a href="{{ path('admin_users') }}" class="inline-flex items-center text-sm text-gray-400 hover:text-white mb-6 transition-colors">
                    <span class="material-symbols-outlined text-[20px] mr-1">arrow_back</span>
                    Retour aux utilisateurs
                </a>

                <div class="bg-surface-dark border border-white/5 rounded-2xl p-8">
                    <div class="flex items-center gap-4 mb-6">
                        <div class="w-12 h-12 rounded-full bg-purple-500/20 flex items-center justify-center">
                            <span class="material-symbols-outlined text-purple-400">badge</span>
                        </div>
                        <div>
                            <h1 class="text-2xl font-bold text-white">Attribuer une Licence</h1>
                            <p class="text-sm text-white/40">Pour l'arbitre : <span class="text-purple-400 font-semibold">{{ user.username }}</span></p>
                        </div>
                    </div>

                    <form method="post" action="{{ path('admin_users_assign_license', {'id': user.id}) }}" class="space-y-6">
                        <input type="hidden" name="_token" value="{{ csrf_token('assign' ~ user.id) }}">
                        
                        <div>
                            <label for="license_code" class="block text-sm font-medium text-gray-400 mb-2">Code de Licence</label>
                            <input type="text" 
                                   name="license_code" 
                                   id="license_code" 
                                   placeholder="Ex: ARB-2026-001"
                                   class="w-full bg-[#161616] border border-white/10 rounded-xl py-3.5 px-4 text-sm text-white placeholder-gray-500 focus:border-primary focus:outline-none input-glow transition-all"
                                   required>
                            <p class="text-xs text-white/40 mt-2">Entrez un code de licence valide et non utilis√©.</p>
                        </div>

                        <div class="pt-4 flex items-center justify-end gap-4">
                            <a href="{{ path('admin_users') }}" class="px-4 py-2 rounded-xl text-sm font-semibold text-white/50 hover:text-white hover:bg-white/5 transition-all">
                                Annuler
                            </a>
                            <button type="submit" class="px-6 py-2 rounded-xl bg-purple-500 text-sm font-bold text-white shadow-lg shadow-purple-900/20 hover:bg-purple-600 hover:shadow-purple-600/30 hover:-translate-y-0.5 transition-all">
                                Attribuer la licence
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
