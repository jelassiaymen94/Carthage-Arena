{% extends 'base.html.twig' %}

{% block title %}Modifier Utilisateur - Admin{% endblock %}

{% block body %}
<div id="mainContent" class="opacity-0 transition-opacity duration-500">
    <div class="flex min-h-screen bg-background-dark">
        {# Sidebar #}
        {% include 'admin/_sidebar.html.twig' %}

        {# Main Content #}
        <main class="flex-1 ml-72 p-8">
            <div class="max-w-2xl mx-auto">
                <a href="{{ path('admin_users') }}" class="inline-flex items-center text-sm text-gray-400 hover:text-white mb-6 transition-colors">
                    <span class="material-symbols-outlined text-[20px] mr-1">arrow_back</span>
                    Retour aux utilisateurs
                </a>

                <div class="bg-surface-dark border border-white/5 rounded-2xl p-8">
                    <h1 class="text-2xl font-bold text-white mb-6">Modifier l'Utilisateur : {{ user.username }}</h1>

                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                        
                        {# Username #}
                        <div>
                            {{ form_label(form.username, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-400 mb-2'}}) }}
                            {{ form_widget(form.username) }}
                            {{ form_errors(form.username) }}
                        </div>

                        {# Email #}
                        <div>
                            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-400 mb-2'}}) }}
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>

                        {# Roles #}
                        <div>
                            {{ form_label(form.roles, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-400 mb-2'}}) }}
                            <div class="flex flex-col gap-3">
                            {% for child in form.roles %}
                                <div class="flex items-center">
                                    {{ form_widget(child, {'attr': {'class': 'w-4 h-4 bg-transparent border-gray-600 rounded focus:ring-primary focus:ring-2'}}) }}
                                    {{ form_label(child, null, {'label_attr': {'class': 'ml-2 text-sm text-gray-300'}}) }}
                                </div>
                            {% endfor %}
                            </div>
                            {{ form_errors(form.roles) }}
                        </div>

                        {# Status #}
                        <div>
                            {{ form_label(form.status, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-400 mb-2'}}) }}
                            {{ form_widget(form.status) }}
                            {{ form_errors(form.status) }}
                        </div>

                         {# Balance #}
                        <div>
                            {{ form_label(form.balance, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-400 mb-2'}}) }}
                            {{ form_widget(form.balance) }}
                            {{ form_errors(form.balance) }}
                        </div>

                        <div class="pt-4 flex items-center justify-end gap-4">
                            <a href="{{ path('admin_users') }}" class="px-4 py-2 rounded-xl text-sm font-semibold text-white/50 hover:text-white hover:bg-white/5 transition-all">
                                Annuler
                            </a>
                            <button type="submit" class="px-6 py-2 rounded-xl bg-primary text-sm font-bold text-white shadow-lg shadow-red-900/20 hover:bg-red-600 hover:shadow-red-600/30 hover:-translate-y-0.5 transition-all">
                                Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
