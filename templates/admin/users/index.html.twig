{% extends 'base.html.twig' %}

{% block title %}Gestion Utilisateurs - Admin - Carthage Arena{% endblock %}

{% block body %}
<div id="mainContent" class="opacity-0 transition-opacity duration-500">
    <div class="flex min-h-screen bg-background-dark">
        {# Sidebar #}
        {% include 'admin/_sidebar.html.twig' %}

        {# Main Content Area #}
        <main class="flex-1 ml-64 overflow-y-auto h-screen">
            {# Sticky Header #}
            <header class="sticky top-0 z-30 bg-background-dark/80 backdrop-blur-xl border-b border-white/5">
                <div class="flex items-center justify-between px-8 py-4">
                    <div>
                        <h1 class="text-2xl font-bold text-white">Gestion des Utilisateurs</h1>
                        <p class="text-sm text-white/40 mt-0.5">Gérer tous les comptes utilisateurs de la plateforme</p>
                    </div>
                    <button class="inline-flex items-center gap-2 px-5 py-2.5 bg-primary hover:bg-primary/90 text-white text-sm font-semibold rounded-xl transition-all">
                        <span class="material-symbols-outlined text-[18px]">person_add</span>
                        + Ajouter
                    </button>
                </div>
            </header>

            {# Page Content #}
            <div class="p-8 space-y-6">
                {# Search & Filters #}
                <div class="bg-surface-dark border border-white/5 rounded-2xl p-4">
                    <form method="get" action="{{ path('admin_users') }}" class="flex items-center gap-4">
                        <div class="flex-1 relative">
                            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-white/30 text-[20px]">search</span>
                            <input type="text" name="search" value="{{ app.request.query.get('search') }}" placeholder="Rechercher par nom ou email..."
                                   class="w-full bg-white/5 border border-white/10 rounded-xl pl-10 pr-4 py-2.5 text-sm text-white placeholder-white/30 focus:border-primary/50 focus:ring-1 focus:ring-primary/30 outline-none transition-all" />
                        </div>
                        <select name="status" class="bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white/70 outline-none focus:border-primary/50 w-48">
                            <option value="">Tous les statuts</option>
                            <option value="active" {% if app.request.query.get('status') == 'active' %}selected{% endif %}>Actif</option>
                            <option value="suspended" {% if app.request.query.get('status') == 'suspended' %}selected{% endif %}>Suspendu</option>
                        </select>
                        <select name="role" class="bg-white/5 border border-white/10 rounded-xl px-4 py-2.5 text-sm text-white/70 outline-none focus:border-primary/50 w-48">
                            <option value="">Tous les rôles</option>
                            <option value="ROLE_USER" {% if app.request.query.get('role') == 'ROLE_USER' %}selected{% endif %}>Joueur</option>
                            <option value="ROLE_PRO" {% if app.request.query.get('role') == 'ROLE_PRO' %}selected{% endif %}>Joueur Pro</option>
                            <option value="ROLE_REFEREE" {% if app.request.query.get('role') == 'ROLE_REFEREE' %}selected{% endif %}>Arbitre</option>
                            <option value="ROLE_ADMIN" {% if app.request.query.get('role') == 'ROLE_ADMIN' %}selected{% endif %}>Admin</option>
                        </select>
                        <div class="flex items-center gap-2">
                            <button type="submit" class="p-2.5 rounded-xl bg-primary/10 text-primary hover:bg-primary/20 transition-all" title="Filtrer">
                                <span class="material-symbols-outlined">filter_list</span>
                            </button>
                            {% if app.request.query.all|length > 0 %}
                                <a href="{{ path('admin_users') }}" class="p-2.5 rounded-xl bg-white/5 text-white/50 hover:bg-white/10 hover:text-white transition-all" title="Réinitialiser">
                                    <span class="material-symbols-outlined">close</span>
                                </a>
                            {% endif %}
                        </div>
                    </form>
                </div>

                {# Users Table #}
                <div class="bg-surface-dark border border-white/5 rounded-2xl overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm">
                            <thead>
                                <tr class="border-b border-white/10">
                                    <th class="text-left px-6 py-4 text-xs font-semibold text-white/30 uppercase tracking-wider">ID</th>
                                    <th class="text-left px-6 py-4 text-xs font-semibold text-white/30 uppercase tracking-wider">Nom</th>
                                    <th class="text-left px-6 py-4 text-xs font-semibold text-white/30 uppercase tracking-wider">Email</th>
                                    <th class="text-left px-6 py-4 text-xs font-semibold text-white/30 uppercase tracking-wider">Rôle</th>
                                    <th class="text-left px-6 py-4 text-xs font-semibold text-white/30 uppercase tracking-wider">Statut</th>
                                    <th class="text-left px-6 py-4 text-xs font-semibold text-white/30 uppercase tracking-wider">Solde</th>
                                    <th class="text-left px-6 py-4 text-xs font-semibold text-white/30 uppercase tracking-wider">Inscrit</th>
                                    <th class="text-left px-6 py-4 text-xs font-semibold text-white/30 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-white/5">
                                {% for user in users %}
                                <tr class="hover:bg-surface-hover transition-colors">
                                    <td class="px-6 py-4 text-white/40 font-mono text-xs">
                                        <span title="{{ user.id }}">#...{{ user.id|slice(-8) }}</span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-3">
                                            <div class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center">
                                                <span class="text-xs font-bold text-primary">{{ user.username|first|upper }}</span>
                                            </div>
                                            <span class="font-semibold text-white">{{ user.username }}</span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-white/50">{{ user.email }}</td>
                                    <td class="px-6 py-4">
                                        <div class="flex gap-1 flex-wrap">
                                            {% for role in user.roles %}
                                                {% if role != 'ROLE_USER' %}
                                                    <span class="inline-flex px-2.5 py-1 rounded-full text-xs font-semibold
                                                        {% if role == 'ROLE_ADMIN' %}bg-primary/20 text-primary
                                                        {% elseif role == 'ROLE_PRO' %}bg-secondary/20 text-secondary
                                                        {% elseif role == 'ROLE_REFEREE' %}bg-purple-500/20 text-purple-400
                                                        {% else %}bg-blue-500/20 text-blue-400{% endif %}">
                                                        {{ role|replace({'ROLE_': ''}) }}
                                                    </span>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        {% if user.status.value == 'active' %}
                                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-semibold bg-green-500/20 text-green-400">
                                                <span class="w-1.5 h-1.5 rounded-full bg-green-400"></span>
                                                Actif
                                            </span>
                                        {% else %}
                                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-semibold bg-red-500/20 text-red-400">
                                                <span class="w-1.5 h-1.5 rounded-full bg-red-400"></span>
                                                Suspendu
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="font-semibold text-secondary">{{ user.balance }}</span>
                                    </td>
                                    <td class="px-6 py-4 text-white/40 text-xs">{{ user.createdAt|date('d/m/Y') }}</td>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-2">
                                            <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="p-2 rounded-lg bg-white/5 hover:bg-white/10 text-white/50 hover:text-white transition-all" title="Modifier">
                                                <span class="material-symbols-outlined text-[18px]">edit</span>
                                            </a>
                                            
                                            <form method="post" action="{{ path('admin_users_ban', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir {% if user.status.value == 'active' %}bannir{% else %}réactiver{% endif %} cet utilisateur ?');" class="inline">
                                                 <input type="hidden" name="_token" value="{{ csrf_token('ban' ~ user.id) }}">
                                                 {% if user.status.value == 'active' %}
                                                    <button type="submit" class="p-2 rounded-lg bg-red-500/10 hover:bg-red-500/20 text-red-400 transition-all" title="Bannir">
                                                        <span class="material-symbols-outlined text-[18px]">block</span>
                                                    </button>
                                                {% else %}
                                                    <button type="submit" class="p-2 rounded-lg bg-green-500/10 hover:bg-green-500/20 text-green-400 transition-all" title="Débannir">
                                                        <span class="material-symbols-outlined text-[18px]">check_circle</span>
                                                    </button>
                                                {% endif %}
                                            </form>

                                            {% if 'ROLE_REFEREE' in user.roles and user.license %}
                                                 <form method="post" action="{{ path('admin_users_revoke_license', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir révoquer la licence de cet arbitre ?');" class="inline">
                                                     <input type="hidden" name="_token" value="{{ csrf_token('revoke' ~ user.id) }}">
                                                     <button type="submit" class="p-2 rounded-lg bg-orange-500/10 hover:bg-orange-500/20 text-orange-400 transition-all" title="Révoquer Licence">
                                                        <span class="material-symbols-outlined text-[18px]">gavel</span>
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {# Pagination #}
                    <div class="flex items-center justify-between px-6 py-4 border-t border-white/5">
                        <p class="text-sm text-white/40">
                            {% if users|length > 0 %}
                                Affichage de 1 à {{ users|length }} sur {{ users|length }} utilisateurs
                            {% else %}
                                Aucun utilisateur trouvé
                            {% endif %}
                        </p>
                        <div class="flex items-center gap-2">
                            <button class="px-3 py-1.5 rounded-lg text-sm text-white/30 bg-white/5 cursor-not-allowed" disabled>Précédent</button>
                            <button class="px-3 py-1.5 rounded-lg text-sm font-semibold bg-primary text-white">1</button>
                            <button class="px-3 py-1.5 rounded-lg text-sm text-white/60 bg-white/5 hover:bg-white/10 transition-all">2</button>
                            <button class="px-3 py-1.5 rounded-lg text-sm text-white/60 bg-white/5 hover:bg-white/10 transition-all">3</button>
                            <button class="px-3 py-1.5 rounded-lg text-sm text-white/60 bg-white/5 hover:bg-white/10 transition-all">Suivant</button>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
