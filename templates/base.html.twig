<!doctype html>
<html class="dark" lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>{% block title %}Carthage Arena{% endblock %}</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link
      href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;700;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              primary: "#e60013",
              secondary: "#FFD700",
              "background-light": "#f8f5f6",
              "background-dark": "#121212",
              "surface-dark": "#1E1E1E",
              "surface-hover": "#2A2A2A",
              "rarity-legendary": "#ffb900",
              "rarity-epic": "#a335ee",
              "rarity-rare": "#0099e4",
            },
            fontFamily: {
              display: ["Be Vietnam Pro", "sans-serif"],
            },
            borderRadius: {
              DEFAULT: "1rem",
              lg: "1.5rem",
              xl: "2rem",
              "2xl": "3rem",
              full: "9999px",
            },
          },
        },
      };
    </script>
    <style>
      /* Custom scrollbar for webkit browsers */
      ::-webkit-scrollbar {
        width: 8px;
      }
      ::-webkit-scrollbar-track {
        background: #121212;
      }
      ::-webkit-scrollbar-thumb {
        background: #2a2a2a;
        border-radius: 4px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #e60013;
      }

      .glass-effect {
        background: rgba(30, 30, 30, 0.6);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.05);
      }

      /* Fix dropdown select menus - clean dark background with white text */
      select {
        background: rgba(30, 30, 30, 0.9) !important;
        color: white !important;
      }

      select option {
        background: #1a1a1a !important;
        color: white !important;
      }
      
      select option:hover,
      select option:checked {
        background: rgba(230, 0, 19, 0.4) !important;
      }

      /* Focus indicators for accessibility */
      a:focus-visible,
      button:focus-visible {
        outline: 2px solid #e60013;
        outline-offset: 2px;
      }

      input:focus-visible {
        border-color: #e60013;
        box-shadow: 0 0 0 2px rgba(230, 0, 19, 0.3);
      }

      .tab-active {
        background: linear-gradient(135deg, #e60013 0%, #ff4444 100%);
        box-shadow: 0 0 20px rgba(230, 0, 19, 0.4);
      }
      .input-glow:focus {
        box-shadow: 0 0 0 2px rgba(230, 0, 19, 0.3);
      }

      /* ===================================
         CARTHAGE VISUAL SIGNATURE
         Inspired by: Carthaginian mosaics, amphitheater arches,
         Mediterranean terracotta, and ancient Punic geometry.
         =================================== */

      /* Mosaic grid pattern — subtle background texture for section headers */
      .carthage-mosaic {
        background-image:
          linear-gradient(45deg, rgba(230, 0, 19, 0.03) 25%, transparent 25%),
          linear-gradient(-45deg, rgba(230, 0, 19, 0.03) 25%, transparent 25%),
          linear-gradient(45deg, transparent 75%, rgba(230, 0, 19, 0.03) 75%),
          linear-gradient(-45deg, transparent 75%, rgba(230, 0, 19, 0.03) 75%);
        background-size: 20px 20px;
        background-position: 0 0, 0 10px, 10px -10px, -10px 0;
      }

      /* Amphitheater arch — curved top accent for hero cards & headers */
      .carthage-arch {
        position: relative;
        overflow: hidden;
      }
      .carthage-arch::before {
        content: "";
        position: absolute;
        top: -60%;
        left: 50%;
        transform: translateX(-50%);
        width: 140%;
        height: 80%;
        border-radius: 0 0 50% 50%;
        background: radial-gradient(
          ellipse at center bottom,
          rgba(230, 0, 19, 0.08) 0%,
          transparent 70%
        );
        pointer-events: none;
      }


      /* Mediterranean gold shimmer — for rarity badges & special items */
      .carthage-gold {
        background: linear-gradient(135deg, #c8a455 0%, #f5d88e 40%, #c8a455 60%, #f5d88e 100%);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: gold-shimmer 3s ease-in-out infinite;
      }

      @keyframes gold-shimmer {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
      }

      /* Arena glow — pulsing red accent for live/active elements */
      .carthage-glow {
        box-shadow: 0 0 15px rgba(230, 0, 19, 0.2),
                    0 0 30px rgba(230, 0, 19, 0.1);
        animation: arena-pulse 2.5s ease-in-out infinite;
      }

      @keyframes arena-pulse {
        0%, 100% {
          box-shadow: 0 0 15px rgba(230, 0, 19, 0.2),
                      0 0 30px rgba(230, 0, 19, 0.1);
        }
        50% {
          box-shadow: 0 0 20px rgba(230, 0, 19, 0.35),
                      0 0 40px rgba(230, 0, 19, 0.15);
        }
      }

      /* Terracotta divider — Mediterranean-inspired section separator */
      .carthage-divider {
        height: 1px;
        background: linear-gradient(
          90deg,
          transparent 0%,
          rgba(200, 164, 85, 0.3) 20%,
          rgba(230, 0, 19, 0.4) 50%,
          rgba(200, 164, 85, 0.3) 80%,
          transparent 100%
        );
        border: none;
        margin: 1.5rem 0;
      }

      /* Colosseum columns — subtle vertical line accents for sidebars */
      .carthage-columns {
        background-image: repeating-linear-gradient(
          90deg,
          transparent,
          transparent 71px,
          rgba(255, 255, 255, 0.02) 71px,
          rgba(255, 255, 255, 0.02) 72px
        );
      }

      /* Loading Screen Styles - MonsterPlay Inspired */
      .loading-screen {
        position: fixed;
        inset: 0;
        background: #0a0a0a;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        transition:
          opacity 0.6s ease,
          visibility 0.6s ease;
        overflow: hidden;
      }

      .loading-screen.hidden {
        opacity: 0;
        visibility: hidden;
      }

      /* Scan Lines Overlay */
      .loading-screen::before {
        content: "";
        position: absolute;
        inset: 0;
        background: repeating-linear-gradient(
          0deg,
          transparent,
          transparent 2px,
          rgba(0, 0, 0, 0.3) 2px,
          rgba(0, 0, 0, 0.3) 4px
        );
        pointer-events: none;
        z-index: 10;
      }

      /* Animated Background Glow */
      .loading-screen::after {
        content: "";
        position: absolute;
        width: 600px;
        height: 600px;
        background: radial-gradient(
          circle,
          rgba(230, 0, 19, 0.15) 0%,
          transparent 70%
        );
        animation: pulse-bg 3s ease-in-out infinite;
        pointer-events: none;
      }

      @keyframes pulse-bg {
        0%,
        100% {
          transform: scale(1);
          opacity: 0.5;
        }
        50% {
          transform: scale(1.2);
          opacity: 0.8;
        }
      }

      .preloader-content {
        position: relative;
        z-index: 5;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
      }

      /* Logo with Pulse */
      .preloader-logo {
        width: 120px;
        height: auto;
        animation: logo-pulse 2s ease-in-out infinite;
        filter: drop-shadow(0 0 30px rgba(230, 0, 19, 0.6));
      }

      @keyframes logo-pulse {
        0%,
        100% {
          transform: scale(1);
          filter: drop-shadow(0 0 20px rgba(230, 0, 19, 0.4));
        }
        50% {
          transform: scale(1.05);
          filter: drop-shadow(0 0 40px rgba(230, 0, 19, 0.8));
        }
      }

      /* Glitch Text Effect */
      .glitch-wrapper {
        position: relative;
        display: inline-block;
      }

      .glitch-text {
        font-size: 2rem;
        font-weight: 900;
        text-transform: uppercase;
        font-style: italic;
        letter-spacing: 0.1em;
        color: #fff;
        position: relative;
        animation: glitch-skew 4s infinite linear alternate-reverse;
      }

      .glitch-text::before,
      .glitch-text::after {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }

      .glitch-text::before {
        color: #00ffff;
        animation: glitch-effect 3s infinite linear alternate-reverse;
        clip-path: polygon(0 0, 100% 0, 100% 35%, 0 35%);
        transform: translateX(-2px);
      }

      .glitch-text::after {
        color: #ff00ff;
        animation: glitch-effect 2s infinite linear alternate-reverse;
        clip-path: polygon(0 65%, 100% 65%, 100% 100%, 0 100%);
        transform: translateX(2px);
      }

      @keyframes glitch-effect {
        0% {
          transform: translateX(0);
        }
        20% {
          transform: translateX(-3px);
        }
        40% {
          transform: translateX(3px);
        }
        60% {
          transform: translateX(-2px);
        }
        80% {
          transform: translateX(2px);
        }
        100% {
          transform: translateX(0);
        }
      }

      @keyframes glitch-skew {
        0%,
        100% {
          transform: skewX(0deg);
        }
        20% {
          transform: skewX(-0.5deg);
        }
        40% {
          transform: skewX(0.5deg);
        }
        60% {
          transform: skewX(-0.3deg);
        }
        80% {
          transform: skewX(0.3deg);
        }
      }

      /* Progress Container */
      .preloader-progress {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
        width: 280px;
      }

      /* Progress Bar */
      .progress-bar-container {
        width: 100%;
        height: 4px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 2px;
        overflow: hidden;
        position: relative;
      }

      .progress-bar {
        height: 100%;
        width: 0%;
        background: linear-gradient(90deg, #e60013, #ff6644);
        border-radius: 2px;
        box-shadow:
          0 0 10px rgba(230, 0, 19, 0.5),
          0 0 20px rgba(230, 0, 19, 0.3);
        transition: width 0.1s linear;
      }

      /* Percentage Counter */
      .preloader-percentage {
        font-size: 1.5rem;
        font-weight: 900;
        font-family: "Be Vietnam Pro", monospace;
        color: #e60013;
        text-shadow: 0 0 10px rgba(230, 0, 19, 0.5);
        letter-spacing: 0.05em;
      }

      /* Loading Text */
      .preloader-status {
        font-size: 0.75rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.3em;
        color: rgba(255, 255, 255, 0.5);
        animation: blink 1.5s ease-in-out infinite;
      }

      @keyframes blink {
        0%,
        100% {
          opacity: 0.5;
        }
        50% {
          opacity: 1;
        }
      }

      /* Bracket connector styles */
      .bracket-connector-up {
        border-right: 2px solid #333;
        border-top: 2px solid #333;
        border-top-right-radius: 8px;
      }
      .bracket-connector-down {
        border-right: 2px solid #333;
        border-bottom: 2px solid #333;
        border-bottom-right-radius: 8px;
      }
      .bracket-line {
        height: 2px;
        background-color: #333;
      }

      {% block stylesheets %}{% endblock %}
    </style>
  </head>
  <body class="{% block body_class %}bg-background-dark text-white font-display overflow-hidden{% endblock %}">
    <!-- Loading Screen - MonsterPlay Style -->
    <div id="loadingScreen" class="loading-screen">
      <div class="preloader-content">
        <img
          src="{{ asset('assets/logo.webp') }}"
          alt="Carthage Arena"
          class="preloader-logo"
        />
        <div class="glitch-wrapper">
          <span class="glitch-text" data-text="CARTHAGE ARENA"
            >CARTHAGE ARENA</span
          >
        </div>
        <div class="preloader-progress">
          <div class="progress-bar-container">
            <div class="progress-bar" id="progressBar"></div>
          </div>
          <span class="preloader-percentage" id="percentageText">0%</span>
        </div>
        <span class="preloader-status">Chargement...</span>
      </div>
    </div>

    <div id="flash-messages" class="fixed top-24 right-8 z-[100] flex flex-col gap-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flex items-center gap-3 px-6 py-4 rounded-xl border backdrop-blur-md shadow-2xl animate-slide-in
                    {% if label == 'success' %}bg-green-500/10 border-green-500/20 text-green-400
                    {% elseif label == 'error' %}bg-red-500/10 border-red-500/20 text-red-400
                    {% elseif label == 'warning' %}bg-yellow-500/10 border-yellow-500/20 text-yellow-400
                    {% else %}bg-blue-500/10 border-blue-500/20 text-blue-400{% endif %}">
                    <span class="material-symbols-outlined">
                        {% if label == 'success' %}check_circle
                        {% elseif label == 'error' %}error
                        {% elseif label == 'warning' %}warning
                        {% else %}info{% endif %}
                    </span>
                    <p class="text-sm font-semibold">{{ message }}</p>
                    <button onclick="this.parentElement.remove()" class="ml-4 text-white/40 hover:text-white transition-colors">
                        <span class="material-symbols-outlined text-[18px]">close</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    {% block body %}{% endblock %}

    <script>
        // Auto dismiss flash messages
        setTimeout(() => {
            const flashes = document.getElementById('flash-messages');
            if (flashes) {
                Array.from(flashes.children).forEach(flash => {
                    flash.style.opacity = '0';
                    flash.style.transform = 'translateX(100%)';
                    setTimeout(() => flash.remove(), 500);
                });
            }
        }, 5000);
    </script>

    <script>
      // Loading screen animation with percentage counter
      window.addEventListener("load", function () {
        const loadingScreen = document.getElementById("loadingScreen");
        const mainContent = document.getElementById("mainContent");
        const progressBar = document.getElementById("progressBar");
        const percentageText = document.getElementById("percentageText");

        let progress = 0;
        const duration = 2500; // 2.5 seconds total
        const interval = 25; // Update every 25ms
        const increment = 100 / (duration / interval);

        const progressInterval = setInterval(function () {
          progress += increment;
          if (progress >= 100) {
            progress = 100;
            clearInterval(progressInterval);

            // Hide loading screen after reaching 100%
            setTimeout(function () {
              loadingScreen.classList.add("hidden");
              mainContent.classList.remove("opacity-0");
              mainContent.classList.add("opacity-100");
            }, 200);
          }

          progressBar.style.width = progress + "%";
          percentageText.textContent = Math.floor(progress) + "%";
        }, interval);
      });
    </script>
    {# Button loading state handler #}
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Button loading states
        document.querySelectorAll("[data-loading-btn]").forEach(function (btn) {
          btn.addEventListener("click", function () {
            const form = btn.closest("form");
            if (form && !form.checkValidity()) return;

            const defaultState = btn.querySelector(".btn-default-state");
            const loadingState = btn.querySelector(".btn-loading-state");

            if (defaultState && loadingState) {
              defaultState.classList.add("hidden");
              loadingState.classList.remove("hidden");
            }
            btn.disabled = true;
          });
        });

        // Form submit loading (for forms with data-loading-btn buttons)
        document.querySelectorAll("form").forEach(function (form) {
          form.addEventListener("submit", function () {
            const btn = form.querySelector("[data-loading-btn]");
            if (btn) {
              const defaultState = btn.querySelector(".btn-default-state");
              const loadingState = btn.querySelector(".btn-loading-state");
              if (defaultState && loadingState) {
                defaultState.classList.add("hidden");
                loadingState.classList.remove("hidden");
              }
              btn.disabled = true;
            }
          });
        });
      });
    </script>
    {% block javascripts %}{% endblock %}
  </body>
</html>
