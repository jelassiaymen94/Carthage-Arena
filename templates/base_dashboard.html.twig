{% extends 'base.html.twig' %}

{% block body %}
    <div id="mainContent" class="flex h-screen w-full opacity-0 transition-opacity duration-500" style="opacity: 1;">
      <!-- Sidebar -->
      {% embed 'components/_sidebar.html.twig' %}
        {% block sidebar_bottom %}
        <!-- Bottom Ad/Recommendation (Sidebar Widget) -->
        {% if featuredSkin is defined and featuredSkin %}
        <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-gray-900 to-black p-4 border border-white/10">
          <div class="absolute -right-6 -top-6 h-24 w-24 rounded-full bg-primary/20 blur-2xl"></div>
          <div class="relative z-10 flex flex-col gap-3">
            <div class="flex items-center justify-between">
              <p class="text-[10px] font-bold uppercase tracking-widest text-primary">Recommandation IA</p>
              <span class="material-symbols-outlined text-primary text-sm">auto_awesome</span>
            </div>
            <div class="h-24 w-full rounded-lg bg-cover bg-center shadow-inner"
              style="background-image: url('{{ featuredSkin.imageUrl }}');"
            ></div>
            <div>
              <h4 class="text-sm font-bold text-white line-clamp-1">{{ featuredSkin.name }}</h4>
              <p class="text-xs text-gray-400 mt-1">
                Recommand√© pour vous ({{ featuredSkin.game.name|default('Jeu') }})
              </p>
            </div>
            <a href="{{ path('app_shop_item', {'id': featuredSkin.id}) }}" class="mt-1 w-full flex items-center justify-center rounded-full bg-white/5 py-2 px-4 text-xs font-bold text-white hover:bg-white/10 transition-colors">
              Voir en Boutique
            </a>
          </div>
        </div>
        {% endif %}
        {% endblock %}
      {% endembed %}

      <!-- Main Content -->
      <main class="flex flex-1 flex-col overflow-y-auto bg-background-dark relative">
        <!-- Header -->
        <header class="sticky top-0 z-50 flex h-20 items-center justify-between border-b border-white/5 bg-background-dark/80 backdrop-blur-md px-8 py-4">
          <div class="flex flex-col">
            <h2 class="text-2xl font-bold text-white">{% block dashboard_title %}Titre de la page{% endblock %}</h2>
            <p class="text-xs text-gray-400">{% block dashboard_subtitle %}{% endblock %}</p>
          </div>
          <div class="flex items-center gap-6">
            {% include 'components/_header_user_info.html.twig' %}
          </div>
        </header>

        <div class="flex flex-col gap-8 p-8 max-w-7xl mx-auto w-full">
            {% block dashboard_content %}{% endblock %}
        </div>

        <!-- Mobile Bottom Nav (Visible only on small screens) -->
        <div class="lg:hidden fixed bottom-0 w-full bg-[#161616] border-t border-white/10 px-6 py-3 flex justify-between items-center z-50" role="navigation" aria-label="Navigation mobile">
          <a class="flex flex-col items-center gap-1 {{ app.request.get('_route') == 'app_dashboard' ? 'text-primary' : 'text-gray-500' }}" href="{{ path('app_dashboard') }}">
            <span class="material-symbols-outlined">home</span>
            <span class="text-[10px]">Accueil</span>
          </a>
          <a class="flex flex-col items-center gap-1 {{ app.request.get('_route') starts with 'app_tournament' ? 'text-primary' : 'text-gray-500' }}" href="{{ path('app_tournaments') }}">
            <span class="material-symbols-outlined">trophy</span>
            <span class="text-[10px]">Tournois</span>
          </a>
          <a class="flex flex-col items-center gap-1 {{ app.request.get('_route') starts with 'app_shop' ? 'text-primary' : 'text-gray-500' }}" href="{{ path('app_shop') }}">
            <span class="material-symbols-outlined">shopping_bag</span>
            <span class="text-[10px]">Boutique</span>
          </a>
          <a class="flex flex-col items-center gap-1 {{ app.request.get('_route') starts with 'app_profile' ? 'text-primary' : 'text-gray-500' }}" href="{{ path('app_profile') }}">
            <span class="material-symbols-outlined">person</span>
            <span class="text-[10px]">Profil</span>
          </a>
        </div>
      </main>
    </div>
{% endblock %}
