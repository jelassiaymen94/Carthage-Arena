{# Reusable button with loading state
   Usage:
   {% include 'components/_button_loading.html.twig' with {
       text: 'Confirmer',
       loadingText: 'Chargement...',
       type: 'submit',
       class: 'w-full',
       icon: 'check_circle'
   } %}

   Add data-loading-btn to any existing button to enable loading state via JS.
#}
{% set btnType = type|default('submit') %}
{% set btnClass = class|default('') %}
{% set btnIcon = icon|default(null) %}
{% set btnLoadingText = loadingText|default('Chargement...') %}

<button
  type="{{ btnType }}"
  class="group relative inline-flex items-center justify-center gap-2 rounded-xl bg-primary px-6 py-3 text-sm font-bold text-white transition-all hover:brightness-110 active:scale-[0.98] disabled:opacity-60 disabled:cursor-not-allowed {{ btnClass }}"
  data-loading-btn
>
  {# Default state #}
  <span class="btn-default-state flex items-center gap-2">
    {% if btnIcon %}
      <span class="material-symbols-outlined text-[18px]">{{ btnIcon }}</span>
    {% endif %}
    {{ text }}
  </span>

  {# Loading state (hidden by default) #}
  <span class="btn-loading-state hidden flex items-center gap-2">
    <svg class="animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
    </svg>
    {{ btnLoadingText }}
  </span>
</button>
