<div class="flex items-center gap-6">
  <button class="relative rounded-full p-2 text-gray-400 hover:bg-white/5 hover:text-white transition-colors" aria-label="Notifications">
    <span class="material-symbols-outlined">notifications</span>
    <span class="absolute right-2 top-2 h-2 w-2 rounded-full bg-primary"></span>
  </button>
  
  {% if app.user %}
  <div class="flex items-center gap-4 rounded-full border border-white/5 bg-surface-dark py-1.5 pl-4 pr-1.5 shadow-lg">
    <div class="flex flex-col items-end mr-2">
      <span class="text-sm font-bold text-white leading-none">
        {{ app.user.nickname ?: app.user.username }}
      </span>
      <span class="text-[10px] text-gray-400 uppercase tracking-wider">
        {% if 'ROLE_ADMIN' in app.user.roles %}
          Admin
        {% elseif 'ROLE_PRO_PLAYER' in app.user.roles %}
          Joueur Pro
        {% else %}
          Joueur
        {% endif %}
      </span>
    </div>
    
    <div class="flex items-center gap-1 rounded-full bg-gradient-to-r from-yellow-600 to-yellow-400 px-3 py-1 text-black shadow-[0_0_10px_rgba(255,215,0,0.3)]" title="Carthage Points">
      <span class="material-symbols-outlined text-[16px] font-bold">payments</span>
      <span class="text-xs font-black">{{ app.user.balance|number_format(0, ',', ' ') }} CP</span>
    </div>
    
    <div class="h-9 w-9 overflow-hidden rounded-full border-2 border-primary bg-gray-800"
         style="background-image: url('{{ app.user.avatar ?: 'https://api.dicebear.com/7.x/avataaars/svg?seed=' ~ app.user.username }}'); background-size: cover; background-position: center;">
    </div>
  </div>
  {% else %}
  <a href="{{ path('app_login') }}" class="flex items-center gap-2 rounded-full bg-primary px-5 py-2.5 text-sm font-bold text-white shadow-lg shadow-red-900/30 hover:bg-red-600 transition-all">
    <span class="material-symbols-outlined text-[20px]">login</span>
    Connexion
  </a>
  {% endif %}
</div>
