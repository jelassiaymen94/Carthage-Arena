<aside
  class="flex w-72 flex-col border-r border-white/5 bg-[#161616] p-6 hidden lg:flex overflow-y-auto"
  role="navigation"
  aria-label="Navigation principale"
>
  <div class="flex flex-col gap-6 flex-1">
    <!-- Logo Area -->
    <div class="flex flex-col items-center gap-2 px-2">
      <img
        src="{{ asset('assets/logo.webp') }}"
        alt="Carthage Arena Logo"
        class="h-32 w-auto"
      />
      <h1
        class="text-xl font-black tracking-tight text-white uppercase italic"
      >
        Carthage <span class="text-primary">Arena</span>
      </h1>
    </div>
    <!-- Navigation -->
    <nav class="flex flex-col gap-2">
      <a
        class="group flex items-center gap-4 rounded-full px-4 py-3 transition-all hover:bg-surface-hover hover:text-white {{ app.request.get('_route') == 'app_dashboard' ? 'bg-primary/10 text-primary' : 'text-gray-400' }}"
        href="{{ path('app_dashboard') }}"
      >
        <span class="material-symbols-outlined text-[24px]" {{ app.request.get('_route') == 'app_dashboard' ? 'data-weight="fill"' : '' }}>home</span>
        <span class="text-sm font-medium tracking-wide">Accueil</span>
      </a>
      <a
        class="group flex items-center gap-4 rounded-full px-4 py-3 transition-all hover:bg-surface-hover hover:text-white {{ app.request.get('_route') starts with 'app_tournament' ? 'bg-primary/10 text-primary' : 'text-gray-400' }}"
        href="{{ path('app_tournaments') }}"
      >
        <span class="material-symbols-outlined text-[24px]" {{ app.request.get('_route') starts with 'app_tournament' ? 'data-weight="fill"' : '' }}>trophy</span>
        <span class="text-sm font-medium tracking-wide">Mes Tournois</span>
      </a>
      <a
        class="group flex items-center gap-4 rounded-full px-4 py-3 transition-all hover:bg-surface-hover hover:text-white {{ app.request.get('_route') starts with 'app_shop' ? 'bg-primary/10 text-primary' : 'text-gray-400' }}"
        href="{{ path('app_shop') }}"
      >
        <span class="material-symbols-outlined text-[24px]" {{ app.request.get('_route') starts with 'app_shop' ? 'data-weight="fill"' : '' }}>shopping_bag</span>
        <span class="text-sm font-medium tracking-wide">Boutique</span>
      </a>

      <!-- Team Link -->
      <a
        class="group flex items-center gap-4 rounded-full px-4 py-3 transition-all hover:bg-surface-hover hover:text-white {{ app.request.get('_route') starts with 'app_team' ? 'bg-primary/10 text-primary' : 'text-gray-400' }}"
        href="{{ path('app_team') }}"
      >
        <span class="material-symbols-outlined text-[24px]" {{ app.request.get('_route') starts with 'app_team' ? 'data-weight="fill"' : '' }}>groups</span>
        <span class="text-sm font-medium tracking-wide">Équipe</span>
      </a>

      <a
        class="group flex items-center gap-4 rounded-full px-4 py-3 transition-all hover:bg-surface-hover hover:text-white {{ app.request.get('_route') starts with 'app_profile' ? 'bg-primary/10 text-primary' : 'text-gray-400' }}"
        href="{{ path('app_profile') }}"
      >
        <span class="material-symbols-outlined text-[24px]" {{ app.request.get('_route') starts with 'app_profile' ? 'data-weight="fill"' : '' }}>person</span>
        <span class="text-sm font-medium tracking-wide">Profil</span>
      </a>
      <a
        class="group flex items-center gap-4 rounded-full px-4 py-3 transition-all hover:bg-surface-hover hover:text-white mt-4 {{ app.request.get('_route') starts with 'app_settings' ? 'bg-primary/10 text-primary' : 'text-gray-400' }}"
        href="{{ path('app_settings') }}"
      >
        <span class="material-symbols-outlined text-[24px]" {{ app.request.get('_route') starts with 'app_settings' ? 'data-weight="fill"' : '' }}>settings</span>
        <span class="text-sm font-medium tracking-wide">Param&egrave;tres</span>
      </a>
      {% if app.user %}
      <a
        class="group flex items-center gap-4 rounded-full px-4 py-3 text-gray-400 transition-all hover:bg-red-500/10 hover:text-red-400 mt-2"
        href="{{ path('app_logout') }}"
      >
        <span class="material-symbols-outlined text-[24px]">logout</span>
        <span class="text-sm font-medium tracking-wide">Déconnexion</span>
      </a>
      {% endif %}
    </nav>
  </div>

  <!-- Bottom Widget Block -->
  {% block sidebar_bottom %}
  <div
    class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-gray-900 to-black p-4 border border-white/10"
  >
    <div
      class="absolute -right-6 -top-6 h-24 w-24 rounded-full bg-primary/20 blur-2xl"
    ></div>
    <div class="relative z-10 flex flex-col gap-3">
      <div class="flex items-center justify-between">
        <p class="text-[10px] font-bold uppercase tracking-widest text-primary">
          Carthage Arena
        </p>
        <span class="material-symbols-outlined text-primary text-sm">sports_esports</span>
      </div>
      <div>
        <h4 class="text-sm font-bold text-white">Bienvenue</h4>
        <p class="text-xs text-gray-400 mt-1">
          Prêt à jouer ?
        </p>
      </div>
    </div>
  </div>
  {% endblock %}
</aside>
