{# Skeleton loading placeholder
   Usage:
   {% include 'components/_skeleton.html.twig' with { type: 'card' } %}
   {% include 'components/_skeleton.html.twig' with { type: 'table', rows: 5 } %}
   {% include 'components/_skeleton.html.twig' with { type: 'stat', count: 4 } %}
   {% include 'components/_skeleton.html.twig' with { type: 'text', lines: 3 } %}
#}
{% set skeletonType = type|default('card') %}

{% if skeletonType == 'card' %}
  <div class="animate-pulse rounded-2xl border border-white/5 bg-surface-dark p-6">
    <div class="h-40 rounded-xl bg-white/5 mb-4"></div>
    <div class="h-4 rounded bg-white/10 mb-2 w-3/4"></div>
    <div class="h-3 rounded bg-white/5 w-1/2"></div>
    <div class="flex justify-between items-center mt-4">
      <div class="h-5 rounded bg-white/10 w-20"></div>
      <div class="h-8 rounded-lg bg-white/5 w-24"></div>
    </div>
  </div>

{% elseif skeletonType == 'table' %}
  {% set rowCount = rows|default(5) %}
  <div class="animate-pulse rounded-2xl border border-white/5 bg-surface-dark overflow-hidden">
    {# Header #}
    <div class="flex gap-4 p-4 border-b border-white/5">
      <div class="h-3 rounded bg-white/10 w-1/4"></div>
      <div class="h-3 rounded bg-white/10 w-1/4"></div>
      <div class="h-3 rounded bg-white/10 w-1/4"></div>
      <div class="h-3 rounded bg-white/10 w-1/4"></div>
    </div>
    {# Rows #}
    {% for i in 1..rowCount %}
    <div class="flex items-center gap-4 p-4 border-b border-white/5 last:border-0">
      <div class="h-8 w-8 rounded-full bg-white/5 flex-shrink-0"></div>
      <div class="h-3 rounded bg-white/5 w-1/3"></div>
      <div class="h-3 rounded bg-white/5 w-1/5"></div>
      <div class="h-5 rounded-full bg-white/5 w-16"></div>
    </div>
    {% endfor %}
  </div>

{% elseif skeletonType == 'stat' %}
  {% set statCount = count|default(4) %}
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-{{ statCount }} gap-4">
    {% for i in 1..statCount %}
    <div class="animate-pulse rounded-2xl border border-white/5 bg-surface-dark p-6">
      <div class="flex items-center gap-3 mb-3">
        <div class="h-10 w-10 rounded-xl bg-white/5"></div>
        <div class="h-3 rounded bg-white/10 w-20"></div>
      </div>
      <div class="h-7 rounded bg-white/10 w-16 mb-1"></div>
      <div class="h-3 rounded bg-white/5 w-24"></div>
    </div>
    {% endfor %}
  </div>

{% elseif skeletonType == 'text' %}
  {% set lineCount = lines|default(3) %}
  <div class="animate-pulse space-y-2">
    {% for i in 1..lineCount %}
      <div class="h-3 rounded bg-white/{{ i == lineCount ? '5' : '10' }} w-{{ i == lineCount ? '2/3' : 'full' }}"></div>
    {% endfor %}
  </div>
{% endif %}
