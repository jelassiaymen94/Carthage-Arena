{% extends 'base.html.twig' %}

{% block title %}Carthage Arena - Tableau de Bord Joueur{% endblock %}

{% block body %}
    <div
      id="mainContent"
      class="flex min-h-screen w-full opacity-0 transition-opacity duration-500"
    >
      <!-- Sidebar -->
      {% embed 'components/_sidebar.html.twig' %}
        {% block sidebar_bottom %}{% endblock %}
      {% endembed %}
      <!-- Main Content -->
      <main
        class="flex flex-1 flex-col ml-72 bg-background-dark relative"
      >
        <!-- Header -->
        <header
          class="sticky top-0 z-50 flex h-20 items-center justify-between border-b border-white/5 bg-background-dark/80 backdrop-blur-md px-8 py-4 carthage-mosaic"
        >
          <div class="flex flex-col">
            <h2 class="text-2xl font-bold text-white">Tableau de Bord</h2>
            <p class="text-xs text-gray-400">Bon retour, Champion.</p>
          </div>
          {% include 'components/_header_user_pill.html.twig' %}
        </header>
        <div class="flex flex-col gap-8 p-8 max-w-7xl mx-auto w-full">
          <!-- Stats Grid -->
          <section
            class="grid grid-cols-1 gap-4 md:grid-cols-3"
            aria-label="Statistiques du joueur"
          >
            <!-- Rank Card -->
            <div
              class="group relative overflow-hidden rounded-2xl bg-surface-dark p-6 transition-transform hover:-translate-y-1 hover:shadow-lg border border-white/5"
            >
              <div
                class="absolute -right-4 -top-4 h-24 w-24 rounded-full bg-secondary/10 blur-xl transition-all group-hover:bg-secondary/20"
              ></div>
              <div
                class="relative z-10 flex flex-col justify-between h-full gap-4"
              >
                <div class="flex items-start justify-between">
                  <div class="rounded-full bg-secondary/20 p-2 text-secondary">
                    <span class="material-symbols-outlined">military_tech</span>
                  </div>
                  <span
                    class="rounded-full bg-white/5 px-2 py-1 text-[10px] font-bold uppercase tracking-wider text-gray-400"
                    >Saison 5</span
                  >
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-400">Rang Actuel</p>
                  <div class="flex items-baseline gap-2">
                    <h3 class="text-3xl font-black text-white">{{ user.rank }}</h3>
                  </div>
                  <div class="mt-2 h-1 w-full rounded-full bg-white/10">
                    <div
                      class="h-1 w-[{{ user.rankProgress }}%] rounded-full bg-secondary shadow-[0_0_8px_rgba(255,215,0,0.5)]"
                    ></div>
                  </div>
                  <p class="mt-1 text-right text-[10px] text-secondary">
                    {{ user.rankProgress }}/100 LP
                  </p>
                </div>
              </div>
            </div>
            <!-- Matches Card -->
            <div
              class="group relative overflow-hidden rounded-2xl bg-surface-dark p-6 transition-transform hover:-translate-y-1 hover:shadow-lg border border-white/5"
            >
              <div
                class="absolute -right-4 -top-4 h-24 w-24 rounded-full bg-primary/10 blur-xl transition-all group-hover:bg-primary/20"
              ></div>
              <div
                class="relative z-10 flex flex-col justify-between h-full gap-4"
              >
                <div class="flex items-start justify-between">
                  <div class="rounded-full bg-primary/20 p-2 text-primary">
                    <span class="material-symbols-outlined">swords</span>
                  </div>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-400">Matchs Joués</p>
                  <h3 class="text-4xl font-black text-white">{{ user.matchesPlayed }}</h3>
                  <p
                    class="mt-1 text-xs text-green-400 flex items-center gap-1"
                  >
                    <span class="material-symbols-outlined text-[14px]"
                      >trending_up</span
                    >
                    +12 cette semaine
                  </p>
                </div>
              </div>
            </div>
            <!-- Winrate Card -->
            <div
              class="group relative overflow-hidden rounded-2xl bg-surface-dark p-6 transition-transform hover:-translate-y-1 hover:shadow-lg border border-white/5"
            >
              <div
                class="absolute -right-4 -top-4 h-24 w-24 rounded-full bg-blue-500/10 blur-xl transition-all group-hover:bg-blue-500/20"
              ></div>
              <div
                class="relative z-10 flex flex-col justify-between h-full gap-4"
              >
                <div class="flex items-start justify-between">
                  <div class="rounded-full bg-blue-500/20 p-2 text-blue-500">
                    <span class="material-symbols-outlined">query_stats</span>
                  </div>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-400">
                    Taux de Victoire
                  </p>
                  <h3 class="text-4xl font-black text-white">
                    {{ user.winRate }}<span class="text-2xl text-gray-500">%</span>
                  </h3>
                  <p class="mt-1 text-xs text-gray-400">Top 5% des joueurs</p>
                </div>
              </div>
            </div>
          </section>
          <!-- Upcoming Matches Section -->
          <section class="flex flex-col gap-6" aria-label="Prochains matchs">
            <div class="flex items-center justify-between">
              <h2
                class="text-xl font-bold tracking-tight text-white flex items-center gap-2"
              >
                <span class="h-6 w-1 rounded-full bg-primary"></span>
                Prochains Matchs
              </h2>
              <button
                class="text-sm font-medium text-primary hover:text-white transition-colors"
                aria-label="Voir tous les matchs à venir"
              >
                Voir Tout
              </button>
            </div>
            <div class="flex flex-col gap-4">
              {% for match in upcomingMatches %}
              <div
                class="group flex flex-col items-center justify-between gap-4 rounded-2xl border border-white/5 bg-surface-dark p-4 transition-all hover:border-primary/50 hover:shadow-[0_0_20px_rgba(230,0,19,0.1)] md:flex-row md:gap-8 {{ loop.last ? 'opacity-60 hover:opacity-100' : '' }}"
              >
                <div class="flex items-center gap-6 w-full md:w-auto">
                  <div
                    class="flex h-16 w-16 flex-shrink-0 items-center justify-center rounded-xl bg-black/40 border border-white/10"
                    data-alt="{{ match.opponent }} logo placeholder"
                    style="
                      background-image: url(&quot;{{ match.logo }}&quot;);
                      background-size: cover;
                      background-position: center;
                    "
                  ></div>
                  <div class="flex flex-col">
                    <p class="text-xs font-bold uppercase {% if match.tournament == 'VALORANT TOURNAMENT' %}text-primary{% elseif match.tournament == 'LEAGUE OF LEGENDS' %}text-purple-400{% else %}text-blue-400{% endif %}">
                      {{ match.tournament }}
                    </p>
                    <h4
                      class="text-lg font-bold text-white group-hover:text-primary transition-colors"
                    >
                      vs. {{ match.opponent }}
                    </h4>
                    <div class="flex items-center gap-2 mt-1">
                      <span
                        class="material-symbols-outlined text-[14px] text-gray-400"
                        >calendar_today</span
                      >
                      <p class="text-xs text-gray-400">{{ match.date }}</p>
                    </div>
                  </div>
                </div>
                <!-- Divider (Desktop) -->
                <div class="hidden h-12 w-px bg-white/10 md:block"></div>
                <!-- Opponent/Details Stats -->
                <div class="grid grid-cols-2 gap-8 md:flex md:gap-12 flex-1">
                  <div class="flex flex-col">
                    <span class="text-[10px] uppercase text-gray-500 font-bold"
                      >Format</span
                    >
                    <span class="text-sm font-medium text-white"
                      >{{ match.format }}</span
                    >
                  </div>
                  <div class="flex flex-col">
                    {% if match.maps is defined %}
                    <span class="text-[10px] uppercase text-gray-500 font-bold"
                      >Cartes</span
                    >
                    <span class="text-sm font-medium text-white"
                      >{{ match.maps }}</span
                    >
                    {% elseif match.prize is defined %}
                    <span class="text-[10px] uppercase text-gray-500 font-bold"
                      >Cagnotte</span
                    >
                    <span class="text-sm font-medium text-secondary"
                      >{{ match.prize }}</span
                    >
                    {% elseif match.region is defined %}
                    <span class="text-[10px] uppercase text-gray-500 font-bold"
                      >Région</span
                    >
                    <span class="text-sm font-medium text-white"
                      >{{ match.region }}</span
                    >
                    {% endif %}
                  </div>
                </div>
                {% if loop.last %}
                <button
                  class="w-full flex-shrink-0 cursor-not-allowed rounded-full border border-white/5 bg-transparent py-2 px-4 text-sm font-bold text-gray-600 md:w-auto"
                  disabled=""
                >
                  Verrouillé
                </button>
                {% else %}
                <button
                  class="w-full flex-shrink-0 rounded-full border border-white/10 bg-surface-hover py-2 px-4 text-sm font-bold text-gray-300 transition-all hover:bg-white/10 hover:text-white md:w-auto"
                  aria-label="Voir les détails du match contre {{ match.opponent }}"
                >
                  Détails
                </button>
                {% endif %}
              </div>
              {% endfor %}
            </div>
          </section>
        </div>
        {% include 'components/_mobile_nav.html.twig' %}

        <!-- AI Recommendation Widget (Bottom Right - Collapsible) -->
        <div class="fixed bottom-6 right-6 z-40" id="ai-widget">
          <!-- Toggle Button -->
          <button
            onclick="document.getElementById('ai-panel').classList.toggle('hidden'); document.getElementById('ai-btn').classList.toggle('hidden');"
            id="ai-btn"
            class="w-12 h-12 rounded-full bg-primary/20 border border-primary/30 flex items-center justify-center text-primary hover:bg-primary/30 hover:scale-110 transition-all duration-200 shadow-lg shadow-primary/10"
            title="Recommandation IA"
          >
            <span class="material-symbols-outlined text-[22px]">auto_awesome</span>
          </button>
          <!-- Expandable Panel -->
          <div id="ai-panel" class="hidden w-72 absolute bottom-0 right-0">
            <div class="relative overflow-hidden rounded-2xl bg-surface-dark border border-white/10 p-5 shadow-2xl shadow-black/40">
              <div class="absolute -right-6 -top-6 h-24 w-24 rounded-full bg-primary/10 blur-2xl"></div>
              <div class="relative z-10 flex flex-col gap-3">
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-2">
                    <span class="material-symbols-outlined text-primary text-lg">auto_awesome</span>
                    <p class="text-xs font-bold uppercase tracking-widest text-primary">Recommandation IA</p>
                  </div>
                  <button
                    onclick="document.getElementById('ai-panel').classList.toggle('hidden'); document.getElementById('ai-btn').classList.toggle('hidden');"
                    class="text-white/30 hover:text-white transition-colors"
                  >
                    <span class="material-symbols-outlined text-[18px]">close</span>
                  </button>
                </div>
                <p class="text-sm text-white/50">
                  Les recommandations personnalisées arrivent bientôt.
                </p>
                <div class="flex items-center gap-2 mt-1 px-3 py-2 rounded-xl bg-white/5 border border-white/5">
                  <span class="material-symbols-outlined text-white/30 text-[18px]">schedule</span>
                  <span class="text-xs font-semibold text-white/30">Bientôt disponible</span>
                </div>
              </div>
            </div>
          </div>
        </div>
</main>
    </div>
{% endblock %}
