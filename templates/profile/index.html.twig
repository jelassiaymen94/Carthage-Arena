{% extends 'base.html.twig' %}

{% block title %}Profil - {{ user.name }} - Carthage Arena{% endblock %}

{% block body %}
    <div
      id="mainContent"
      class="flex h-screen w-full opacity-0 transition-opacity duration-500"
    >
      <!-- Sidebar -->
      {% embed 'components/_sidebar.html.twig' %}
        {% block sidebar_bottom %}
        <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-gray-900 to-black p-4 border border-white/10">
          <div class="absolute -right-6 -top-6 h-24 w-24 rounded-full bg-primary/20 blur-2xl"></div>
          <div class="relative z-10 flex flex-col gap-3">
            <div class="flex items-center justify-between">
              <p class="text-[10px] font-bold uppercase tracking-widest text-primary">
                Rang Actuel
              </p>
              <span class="material-symbols-outlined text-primary text-sm">military_tech</span>
            </div>
            <div>
              <h4 class="text-sm font-bold text-white">{{ user.rank }}</h4>
              <p class="text-xs text-gray-400 mt-1">
                Niveau {{ user.level }}
              </p>
            </div>
          </div>
        </div>
        {% endblock %}
      {% endembed %}

      <!-- Main Content -->
      <main
        class="flex flex-1 flex-col overflow-y-auto bg-background-dark relative"
      >
        <!-- Header -->
        <header
          class="sticky top-0 z-50 flex h-20 items-center justify-between border-b border-white/5 bg-background-dark/80 backdrop-blur-md px-8 py-4"
        >
          <div class="flex flex-col">
            <h2 class="text-2xl font-bold text-white">Profil</h2>
            <p class="text-xs text-gray-400">G&eacute;rez votre profil de joueur.</p>
          </div>
          {% include 'components/_header_user_pill.html.twig' %}
        </header>

        <div class="flex flex-col gap-8 p-8 max-w-7xl mx-auto w-full">
          <!-- Profile Header Card -->
          <section class="relative overflow-hidden rounded-2xl bg-surface-dark border border-white/5 p-8">
            <div class="absolute -right-10 -top-10 h-40 w-40 rounded-full bg-primary/10 blur-3xl"></div>
            <div class="relative z-10 flex flex-col md:flex-row gap-8 items-start">
              <!-- Avatar -->
              <div class="relative flex-shrink-0">
                <div
                  class="h-36 w-36 rounded-2xl border-4 border-primary bg-gray-800 overflow-hidden"
                  style="background-image: url('{{ user.avatar }}'); background-size: cover; background-position: center;"
                ></div>
                <div class="absolute -bottom-2 -right-2 w-12 h-12 rounded-full bg-primary flex items-center justify-center text-white font-black text-lg border-4 border-surface-dark">
                  {{ user.level }}
                </div>
              </div>
              <!-- User Info -->
              <div class="flex-1">
                <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4 mb-4">
                  <div>
                    <h1 class="text-3xl font-black text-white mb-2">{{ user.name }}</h1>
                    <div class="flex flex-wrap items-center gap-3 mb-3">
                      <span class="rounded-full bg-primary/20 px-3 py-1 text-xs font-bold text-primary uppercase">{{ user.role }}</span>
                      <span class="flex items-center gap-1 text-sm text-gray-400">
                        <span class="material-symbols-outlined text-[16px]">location_on</span>
                        {{ user.country }}
                      </span>
                      <span class="flex items-center gap-1 text-sm text-gray-400">
                        <span class="material-symbols-outlined text-[16px]">calendar_today</span>
                        Membre depuis {{ user.joinDate }}
                      </span>
                    </div>
                    <p class="text-gray-400 max-w-xl">{{ user.bio }}</p>
                  </div>
                  <a
                    href="{{ path('app_settings') }}"
                    class="flex items-center gap-2 rounded-full border border-white/10 bg-surface-hover px-5 py-2.5 text-sm font-bold text-gray-300 hover:bg-white/10 hover:text-white transition-all"
                  >
                    <span class="material-symbols-outlined text-[18px]">edit</span>
                    Modifier le Profil
                  </a>
                </div>
                <!-- Quick Info Row -->
                <div class="flex flex-wrap gap-3">
                  <div class="rounded-xl bg-white/5 px-4 py-2 text-center">
                    <p class="text-[10px] uppercase text-gray-500 font-bold tracking-wider">Rang</p>
                    <p class="text-lg font-bold text-secondary">{{ user.rank }}</p>
                  </div>
                  <div class="rounded-xl bg-white/5 px-4 py-2 text-center">
                    <p class="text-[10px] uppercase text-gray-500 font-bold tracking-wider">Balance</p>
                    <p class="text-lg font-bold text-secondary">{{ user.balance }} CP</p>
                  </div>
                  <div class="rounded-xl bg-white/5 px-4 py-2 text-center">
                    <p class="text-[10px] uppercase text-gray-500 font-bold tracking-wider">Email</p>
                    <p class="text-sm font-medium text-white">{{ user.email }}</p>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <!-- Stats & Achievements Grid -->
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Stats Section (2/3) -->
            <div class="lg:col-span-2 flex flex-col gap-6">
              <h2 class="text-xl font-bold tracking-tight text-white flex items-center gap-2">
                <span class="h-6 w-1 rounded-full bg-primary"></span>
                Statistiques
              </h2>
              <!-- Stats Grid -->
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                <div class="group relative overflow-hidden rounded-2xl bg-surface-dark p-6 border border-white/5 text-center transition-transform hover:-translate-y-1">
                  <div class="absolute -right-4 -top-4 h-20 w-20 rounded-full bg-blue-500/10 blur-xl"></div>
                  <div class="relative z-10">
                    <p class="text-4xl font-black text-white mb-1">{{ stats.matchesPlayed }}</p>
                    <p class="text-sm text-gray-400">Matchs Jou&eacute;s</p>
                  </div>
                </div>
                <div class="group relative overflow-hidden rounded-2xl bg-surface-dark p-6 border border-white/5 text-center transition-transform hover:-translate-y-1">
                  <div class="absolute -right-4 -top-4 h-20 w-20 rounded-full bg-green-500/10 blur-xl"></div>
                  <div class="relative z-10">
                    <p class="text-4xl font-black text-green-400 mb-1">{{ stats.wins }}</p>
                    <p class="text-sm text-gray-400">Victoires</p>
                  </div>
                </div>
                <div class="group relative overflow-hidden rounded-2xl bg-surface-dark p-6 border border-white/5 text-center transition-transform hover:-translate-y-1">
                  <div class="absolute -right-4 -top-4 h-20 w-20 rounded-full bg-red-500/10 blur-xl"></div>
                  <div class="relative z-10">
                    <p class="text-4xl font-black text-red-400 mb-1">{{ stats.losses }}</p>
                    <p class="text-sm text-gray-400">D&eacute;faites</p>
                  </div>
                </div>
              </div>
              <!-- Winrate & Tournaments -->
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="rounded-2xl bg-surface-dark p-6 border border-white/5">
                  <div class="flex items-center gap-4 mb-4">
                    <div class="rounded-full bg-green-500/20 p-3">
                      <span class="material-symbols-outlined text-green-400">query_stats</span>
                    </div>
                    <div>
                      <p class="text-sm text-gray-400">Taux de Victoire</p>
                      <p class="text-3xl font-black text-white">{{ stats.winRate }}<span class="text-xl text-gray-500">%</span></p>
                    </div>
                  </div>
                  <div class="h-2 w-full rounded-full bg-white/10">
                    <div class="h-2 rounded-full bg-green-400 shadow-[0_0_8px_rgba(74,222,128,0.5)]" style="width: {{ stats.winRate }}%"></div>
                  </div>
                </div>
                <div class="rounded-2xl bg-surface-dark p-6 border border-white/5">
                  <div class="flex items-center gap-4 mb-4">
                    <div class="rounded-full bg-secondary/20 p-3">
                      <span class="material-symbols-outlined text-secondary">trophy</span>
                    </div>
                    <div>
                      <p class="text-sm text-gray-400">Tournois Gagn&eacute;s</p>
                      <p class="text-3xl font-black text-white">{{ stats.tournamentsWon }}</p>
                    </div>
                  </div>
                  <p class="text-sm text-gray-400">
                    Gains totaux: <span class="text-secondary font-bold">{{ stats.totalEarnings }}</span>
                  </p>
                </div>
              </div>

              <!-- Recent Matches -->
              <h2 class="text-xl font-bold tracking-tight text-white flex items-center gap-2 mt-4">
                <span class="h-6 w-1 rounded-full bg-primary"></span>
                Matchs R&eacute;cents
              </h2>
              <div class="flex flex-col gap-3">
                {% for match in recentMatches %}
                <div class="flex items-center justify-between rounded-2xl bg-surface-dark border border-white/5 p-4 transition-all hover:border-{{ match.result == 'Victoire' ? 'green' : 'red' }}-500/30">
                  <div class="flex items-center gap-4">
                    <div class="h-10 w-10 rounded-full flex items-center justify-center {{ match.result == 'Victoire' ? 'bg-green-500/20 text-green-400' : 'bg-red-500/20 text-red-400' }}">
                      <span class="material-symbols-outlined text-[20px]">{{ match.result == 'Victoire' ? 'check_circle' : 'cancel' }}</span>
                    </div>
                    <div>
                      <p class="font-bold text-white">{{ match.game }}</p>
                      <p class="text-sm text-gray-400">{{ match.result }} - {{ match.score }}</p>
                    </div>
                  </div>
                  <span class="text-sm text-gray-500">{{ match.date }}</span>
                </div>
                {% endfor %}
              </div>
            </div>

            <!-- Achievements (1/3) -->
            <div class="flex flex-col gap-6">
              <h2 class="text-xl font-bold tracking-tight text-white flex items-center gap-2">
                <span class="h-6 w-1 rounded-full bg-secondary"></span>
                Succ&egrave;s
              </h2>
              <div class="flex flex-col gap-3">
                {% for achievement in achievements %}
                <div class="rounded-2xl bg-surface-dark border border-white/5 p-4 border-l-4 border-l-primary transition-transform hover:-translate-y-0.5">
                  <div class="flex items-center gap-3">
                    <span class="text-2xl">{{ achievement.icon }}</span>
                    <div class="flex-1">
                      <p class="font-bold text-white text-sm">{{ achievement.name }}</p>
                      <p class="text-xs text-gray-500">{{ achievement.date }}</p>
                    </div>
                  </div>
                </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>

        <!-- Mobile Bottom Nav -->
        <div
          class="lg:hidden fixed bottom-0 w-full bg-[#161616] border-t border-white/10 px-6 py-3 flex justify-between items-center z-50"
          role="navigation"
          aria-label="Navigation mobile"
        >
          <a class="flex flex-col items-center gap-1 text-gray-500" href="{{ path('app_dashboard') }}">
            <span class="material-symbols-outlined">home</span>
            <span class="text-[10px]">Accueil</span>
          </a>
          <a class="flex flex-col items-center gap-1 text-gray-500" href="{{ path('app_tournaments') }}">
            <span class="material-symbols-outlined">trophy</span>
            <span class="text-[10px]">Tournois</span>
          </a>
          <a class="flex flex-col items-center gap-1 text-gray-500" href="{{ path('app_shop') }}">
            <span class="material-symbols-outlined">shopping_bag</span>
            <span class="text-[10px]">Boutique</span>
          </a>
          <a class="flex flex-col items-center gap-1 text-primary" href="{{ path('app_profile') }}">
            <span class="material-symbols-outlined">person</span>
            <span class="text-[10px]">Profil</span>
          </a>
        </div>
      </main>
    </div>
{% endblock %}
