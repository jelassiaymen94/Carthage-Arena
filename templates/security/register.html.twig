{% extends 'base.html.twig' %}

{% block title %}Carthage Arena - Inscription{% endblock %}

{% block body_class %}bg-background-dark text-white font-display min-h-screen flex items-center justify-center p-4{% endblock %}

{% block body %}
    <div
      id="mainContent"
      class="contents opacity-0 transition-opacity duration-500"
    >
      <!-- Background Effects -->
      <div class="fixed inset-0 overflow-hidden pointer-events-none">
        <div
          class="absolute -top-40 -left-40 w-96 h-96 bg-primary/20 rounded-full blur-3xl"
        ></div>
        <div
          class="absolute -bottom-40 -right-40 w-96 h-96 bg-primary/10 rounded-full blur-3xl"
        ></div>
        <div
          class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-secondary/5 rounded-full blur-3xl"
        ></div>
      </div>

      <!-- Main Container -->
      <div class="relative z-10 w-full max-w-md">
        <!-- Logo -->
        <div class="flex flex-col items-center gap-3 mb-8">
          <img
            src="{{ asset('assets/logo.webp') }}"
            alt="Carthage Arena Logo"
            class="h-52 w-auto"
          />
          <h1
            class="text-2xl font-black tracking-tight text-white uppercase italic"
          >
            Carthage <span class="text-primary">Arena</span>
          </h1>
        </div>

        <!-- Clerk Sign-Up Component -->
        <div
          id="clerk-sign-up"
          class="flex items-center justify-center min-h-[400px]"
        >
          <div class="flex flex-col items-center gap-4 text-gray-400">
            <div class="w-8 h-8 border-2 border-primary border-t-transparent rounded-full animate-spin"></div>
            <p class="text-sm">Chargement...</p>
          </div>
        </div>

        <!-- Footer -->
        <p class="text-center text-xs text-gray-500 mt-6">
          Déjà un compte ?
          <a href="{{ path('app_login') }}" class="text-primary hover:text-white transition-colors"
            >Se connecter</a
          >
        </p>
      </div>
    </div>
{% endblock %}

{% block clerk_script %}
    <script>
      (function() {
        const clerkKey = '{{ clerk_publishable_key|default("") }}';
        if (!clerkKey || clerkKey.indexOf('your-clerk') !== -1) {
          document.getElementById('clerk-sign-up').innerHTML =
            '<div class="bg-surface-dark border border-white/5 rounded-3xl p-8 text-center">' +
            '<span class="material-symbols-outlined text-primary text-4xl mb-4">warning</span>' +
            '<h2 class="text-lg font-bold text-white mb-2">Configuration requise</h2>' +
            '<p class="text-gray-400 text-sm">Ajoutez vos clés Clerk dans le fichier <code class="text-primary">.env</code> :</p>' +
            '<div class="bg-[#161616] rounded-xl p-4 mt-4 text-left text-xs text-gray-300 font-mono">' +
            'CLERK_PUBLISHABLE_KEY=pk_test_...<br>CLERK_SECRET_KEY=sk_test_...' +
            '</div>' +
            '<p class="text-gray-500 text-xs mt-4">Obtenez vos clés sur <a href="https://dashboard.clerk.com" target="_blank" class="text-primary hover:text-white">dashboard.clerk.com</a></p>' +
            '</div>';
          return;
        }

        const script = document.createElement('script');
        script.setAttribute('data-clerk-publishable-key', clerkKey);
        script.async = true;
        script.src = 'https://cdn.jsdelivr.net/npm/@clerk/clerk-js@latest/dist/clerk.browser.js';
        script.addEventListener('load', async function() {
          await window.Clerk.load({
            appearance: {
              variables: {
                colorPrimary: '#e60013',
                colorBackground: '#1E1E1E',
                colorText: '#ffffff',
                colorTextSecondary: '#9ca3af',
                colorInputBackground: '#161616',
                colorInputText: '#ffffff',
                borderRadius: '0.75rem',
              },
              elements: {
                card: 'bg-transparent shadow-none',
                rootBox: 'w-full',
                formButtonPrimary: 'bg-primary hover:bg-red-600 shadow-lg shadow-red-900/30',
              }
            }
          });

          const signUpDiv = document.getElementById('clerk-sign-up');
          if (signUpDiv) {
            window.Clerk.mountSignUp(signUpDiv, {
              afterSignUpUrl: '{{ path("app_dashboard") }}',
              signInUrl: '{{ path("app_login") }}',
            });
          }
        });
        document.head.appendChild(script);
      })();
    </script>
{% endblock %}
