{% extends 'base.html.twig' %}

{% block title %}{{ item.name }} - Carthage Arena{% endblock %}

{% block body %}
<div class="app-container">
    {% include 'components/_sidebar.html.twig' %}

    <main class="main-content">
        <div style="margin-bottom: 2rem;">
            <a href="{{ path('app_shop') }}" style="display: inline-flex; align-items: center; gap: 0.5rem; color: var(--color-text-secondary); font-size: 0.875rem; font-weight: 600;">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
                Retour à la boutique
            </a>
        </div>

        <div style="display: grid; grid-template-columns: 1.5fr 1fr; gap: 2rem; margin-bottom: 2rem;">
            <div>
                <div style="background: var(--color-bg-card); border: 1px solid var(--color-border); border-radius: var(--radius-xl); overflow: hidden; margin-bottom: 1rem;">
                    <img src="{{ item.images[0] }}" alt="{{ item.name }}" style="width: 100%; aspect-ratio: 16/9; object-fit: cover;">
                </div>

                <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem;">
                    {% for image in item.images %}
                    <div style="background: var(--color-bg-card); border: 2px solid {% if loop.first %}var(--color-primary){% else %}var(--color-border){% endif %}; border-radius: var(--radius-lg); overflow: hidden; cursor: pointer;">
                        <img src="{{ image }}" alt="{{ item.name }} {{ loop.index }}" style="width: 100%; aspect-ratio: 16/9; object-fit: cover;">
                    </div>
                    {% endfor %}
                </div>
            </div>

            <div>
                <div class="card" style="position: sticky; top: 2rem;">
                    <div style="margin-bottom: 1.5rem;">
                        <div style="display: flex; gap: 0.5rem; margin-bottom: 1rem;">
                            <span class="badge badge-{{ item.game == 'VALORANT' ? 'legendary' : (item.game == 'LOL' ? 'epic' : 'secret') }}">{{ item.game }}</span>
                            <span class="badge badge-{% if item.rarity == 'LÉGENDAIRE' %}legendary{% elseif item.rarity == 'ÉPIQUE' %}epic{% elseif item.rarity == 'PREMIUM' %}premium{% else %}legendary{% endif %}">
                                {{ item.rarity }}
                            </span>
                        </div>
                        <h1 style="font-size: 2rem; font-weight: 800; margin-bottom: 1rem;">{{ item.name }}</h1>
                        <p style="color: var(--color-text-secondary); line-height: 1.6;">{{ item.description }}</p>
                    </div>

                    <div style="border-top: 1px solid var(--color-border); border-bottom: 1px solid var(--color-border); padding: 1.5rem 0; margin-bottom: 1.5rem;">
                        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 1rem;">
                            <span style="color: var(--color-text-secondary);">Prix</span>
                            <div style="display: flex; align-items: center; gap: 0.5rem;">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="var(--color-warning)">
                                    <circle cx="12" cy="12" r="10"></circle>
                                </svg>
                                <span style="font-size: 2rem; font-weight: 800; color: var(--color-warning);">{{ item.price }}</span>
                            </div>
                        </div>
                        <div style="font-size: 0.875rem; color: var(--color-text-muted);">
                            Votre solde: <span style="color: var(--color-warning); font-weight: 700;">2,450 CP</span>
                        </div>
                    </div>

                    <button class="btn btn-primary" style="width: 100%; margin-bottom: 1rem;">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="9" cy="21" r="1"></circle>
                            <circle cx="20" cy="21" r="1"></circle>
                            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                        </svg>
                        Acheter maintenant
                    </button>

                    <button class="btn btn-secondary" style="width: 100%;">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                        </svg>
                        Ajouter aux favoris
                    </button>
                </div>
            </div>
        </div>

        <div class="card">
            <h2 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem;">Caractéristiques</h2>
            <div style="display: grid; gap: 1rem;">
                {% for feature in item.features %}
                <div style="display: flex; align-items: start; gap: 1rem; padding: 1rem; background: var(--color-bg-tertiary); border-radius: var(--radius-lg);">
                    <div style="width: 32px; height: 32px; background: var(--gradient-primary); border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                    </div>
                    <div style="flex: 1; padding-top: 0.25rem;">{{ feature }}</div>
                </div>
                {% endfor %}
            </div>
        </div>

        <div class="card" style="margin-top: 2rem;">
            <h2 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem;">Articles Similaires</h2>
            <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 1.5rem;">
                {% for i in 1..4 %}
                <div class="shop-item" style="cursor: pointer;">
                    <div class="shop-item-image" style="background: linear-gradient(135deg, var(--color-bg-tertiary) 0%, var(--color-bg-secondary) 100%);">
                        <div style="position: absolute; top: 1rem; left: 1rem;">
                            <span class="badge badge-legendary">{{ item.game }}</span>
                        </div>
                    </div>
                    <div class="shop-item-content">
                        <div class="shop-item-title">Skin Similaire {{ i }}</div>
                        <span class="badge badge-premium">PREMIUM</span>
                        <div class="shop-item-footer" style="margin-top: 1rem;">
                            <div class="shop-item-price">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                    <circle cx="12" cy="12" r="10"></circle>
                                </svg>
                                {{ (item.price - 200 + (i * 100)) }}
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </main>
</div>
{% endblock %}
