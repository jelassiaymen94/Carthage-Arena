{% extends 'base.html.twig' %}

{% block title %}{{ item.name }} - Boutique - Carthage Arena{% endblock %}

{% block body %}
    <div
      id="mainContent"
      class="flex h-screen w-full opacity-0 transition-opacity duration-500"
    >
      <!-- Sidebar -->
      <aside
        class="flex w-72 flex-col border-r border-white/5 bg-[#161616] p-6 hidden lg:flex overflow-y-auto"
        role="navigation"
        aria-label="Navigation principale"
      >
        <div class="flex flex-col gap-6 flex-1">
          <div class="flex flex-col items-center gap-2 px-2">
            <img src="{{ asset('assets/logo.webp') }}" alt="Carthage Arena Logo" class="h-32 w-auto" />
            <h1 class="text-xl font-black tracking-tight text-white uppercase italic">
              Carthage <span class="text-primary">Arena</span>
            </h1>
          </div>
          <nav class="flex flex-col gap-2">
            <a class="group flex items-center gap-4 rounded-full px-4 py-3 text-gray-400 transition-all hover:bg-surface-hover hover:text-white" href="{{ path('app_dashboard') }}">
              <span class="material-symbols-outlined text-[24px]">home</span>
              <span class="text-sm font-medium tracking-wide">Accueil</span>
            </a>
            <a class="group flex items-center gap-4 rounded-full px-4 py-3 text-gray-400 transition-all hover:bg-surface-hover hover:text-white" href="{{ path('app_tournaments') }}">
              <span class="material-symbols-outlined text-[24px]">trophy</span>
              <span class="text-sm font-medium tracking-wide">Mes Tournois</span>
            </a>
            <a class="group flex items-center gap-4 rounded-full bg-primary/10 px-4 py-3 text-primary transition-all hover:bg-primary hover:text-white" href="{{ path('app_shop') }}">
              <span class="material-symbols-outlined text-[24px]" data-weight="fill">shopping_bag</span>
              <span class="text-sm font-bold tracking-wide">Boutique</span>
            </a>
            <a class="group flex items-center gap-4 rounded-full px-4 py-3 text-gray-400 transition-all hover:bg-surface-hover hover:text-white" href="{{ path('app_profile') }}">
              <span class="material-symbols-outlined text-[24px]">person</span>
              <span class="text-sm font-medium tracking-wide">Profil</span>
            </a>
            <a class="group flex items-center gap-4 rounded-full px-4 py-3 text-gray-400 transition-all hover:bg-surface-hover hover:text-white mt-4" href="{{ path('app_settings') }}">
              <span class="material-symbols-outlined text-[24px]">settings</span>
              <span class="text-sm font-medium tracking-wide">Param&egrave;tres</span>
            </a>
            {% if app.user %}
            <a
              class="group flex items-center gap-4 rounded-full px-4 py-3 text-gray-400 transition-all hover:bg-red-500/10 hover:text-red-400 mt-2"
              href="{{ path('app_logout') }}"
            >
              <span class="material-symbols-outlined text-[24px]">logout</span>
              <span class="text-sm font-medium tracking-wide">DÃ©connexion</span>
            </a>
            {% endif %}
          </nav>
        </div>
        <!-- Bottom Widget -->
        <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-gray-900 to-black p-4 border border-white/10">
          <div class="absolute -right-6 -top-6 h-24 w-24 rounded-full bg-secondary/20 blur-2xl"></div>
          <div class="relative z-10 flex flex-col gap-3">
            <div class="flex items-center justify-between">
              <p class="text-[10px] font-bold uppercase tracking-widest text-secondary">Boutique</p>
              <span class="material-symbols-outlined text-secondary text-sm">shopping_bag</span>
            </div>
            <div>
              <h4 class="text-sm font-bold text-white">Offres du jour</h4>
              <p class="text-xs text-gray-400 mt-1">D&eacute;couvrez les nouveaut&eacute;s.</p>
            </div>
          </div>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex flex-1 flex-col overflow-y-auto bg-background-dark relative">
        <!-- Header -->
        <header class="sticky top-0 z-50 flex h-20 items-center justify-between border-b border-white/5 bg-background-dark/80 backdrop-blur-md px-8 py-4">
          <div class="flex flex-col">
            <h2 class="text-2xl font-bold text-white">{{ item.name }}</h2>
            <p class="text-xs text-gray-400">D&eacute;tail de l'article</p>
          </div>
          <div class="flex items-center gap-6">
            <button class="relative rounded-full p-2 text-gray-400 hover:bg-white/5 hover:text-white transition-colors" aria-label="Notifications">
              <span class="material-symbols-outlined">notifications</span>
              <span class="absolute right-2 top-2 h-2 w-2 rounded-full bg-primary"></span>
            </button>
            <div class="flex items-center gap-4 rounded-full border border-white/5 bg-surface-dark py-1.5 pl-4 pr-1.5 shadow-lg">
              <div class="flex items-center gap-1 rounded-full bg-gradient-to-r from-yellow-600 to-yellow-400 px-3 py-1 text-black shadow-[0_0_10px_rgba(255,215,0,0.3)]" title="Carthage Points">
                <span class="material-symbols-outlined text-[16px] font-bold">payments</span>
                <span class="text-xs font-black">CP</span>
              </div>
              <div class="h-9 w-9 overflow-hidden rounded-full border-2 border-primary bg-gray-800"></div>
            </div>
          </div>
        </header>

        <div class="flex flex-col gap-8 p-8 max-w-7xl mx-auto w-full">
          <!-- Back Link -->
          <a
            href="{{ path('app_shop') }}"
            class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors text-sm font-medium w-fit"
          >
            <span class="material-symbols-outlined text-[18px]">arrow_back</span>
            Retour &agrave; la boutique
          </a>

          <!-- Product Layout -->
          <div class="grid grid-cols-1 lg:grid-cols-5 gap-8">
            <!-- Image Gallery (3/5) -->
            <div class="lg:col-span-3 flex flex-col gap-4">
              <!-- Main Image -->
              <div class="relative overflow-hidden rounded-2xl bg-surface-dark border border-white/5">
                {% if item.images is defined and item.images|length > 0 %}
                <img
                  src="{{ item.images[0] }}"
                  alt="{{ item.name }}"
                  class="w-full aspect-video object-cover"
                  id="mainProductImage"
                />
                {% else %}
                <div class="w-full aspect-video bg-gradient-to-br from-surface-dark to-background-dark flex items-center justify-center">
                  <span class="material-symbols-outlined text-gray-600 text-[64px]">image</span>
                </div>
                {% endif %}
              </div>
              <!-- Thumbnails -->
              {% if item.images is defined and item.images|length > 1 %}
              <div class="grid grid-cols-3 sm:grid-cols-4 gap-3">
                {% for image in item.images %}
                <div
                  class="overflow-hidden rounded-xl border-2 cursor-pointer transition-all hover:border-primary/50 {{ loop.first ? 'border-primary' : 'border-white/10' }}"
                  onclick="document.getElementById('mainProductImage').src='{{ image }}'; this.parentNode.querySelectorAll('div').forEach(el => el.classList.remove('border-primary')); this.classList.add('border-primary');"
                >
                  <img
                    src="{{ image }}"
                    alt="{{ item.name }} {{ loop.index }}"
                    class="w-full aspect-video object-cover"
                  />
                </div>
                {% endfor %}
              </div>
              {% endif %}
            </div>

            <!-- Product Info (2/5) -->
            <div class="lg:col-span-2">
              <div class="rounded-2xl bg-surface-dark border border-white/5 p-6 sticky top-24">
                <!-- Badges -->
                <div class="flex flex-wrap gap-2 mb-4">
                  <span class="rounded-full px-3 py-1 text-[10px] font-bold uppercase tracking-wider
                    {% if item.game == 'VALORANT' %}bg-red-500/20 text-red-400 border border-red-500/30
                    {% elseif item.game == 'LOL' %}bg-blue-500/20 text-blue-400 border border-blue-500/30
                    {% else %}bg-purple-500/20 text-purple-400 border border-purple-500/30{% endif %}
                  ">{{ item.game }}</span>
                  <span class="rounded-full px-3 py-1 text-[10px] font-bold uppercase tracking-wider
                    {% if item.rarity == 'LEGENDAIRE' or item.rarity == 'L&Eacute;GENDAIRE' %}bg-secondary/20 text-secondary border border-secondary/30
                    {% elseif item.rarity == 'EPIQUE' or item.rarity == '&Eacute;PIQUE' %}bg-purple-500/20 text-purple-400 border border-purple-500/30
                    {% elseif item.rarity == 'PREMIUM' %}bg-cyan-500/20 text-cyan-400 border border-cyan-500/30
                    {% else %}bg-white/5 text-gray-400 border border-white/10{% endif %}
                  ">{{ item.rarity }}</span>
                </div>

                <!-- Title & Description -->
                <h1 class="text-2xl font-black text-white mb-3">{{ item.name }}</h1>
                <p class="text-sm text-gray-400 leading-relaxed mb-6">{{ item.description }}</p>

                <!-- Price Section -->
                <div class="border-t border-b border-white/5 py-5 mb-6">
                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm text-gray-400">Prix</span>
                    <div class="flex items-center gap-2">
                      <div class="h-6 w-6 rounded-full bg-gradient-to-r from-yellow-600 to-yellow-400 flex items-center justify-center">
                        <span class="material-symbols-outlined text-black text-[14px]">payments</span>
                      </div>
                      <span class="text-2xl font-black text-secondary">{{ item.price }}</span>
                    </div>
                  </div>
                  <p class="text-xs text-gray-500 text-right">
                    Votre solde: <span class="text-secondary font-bold">2,450 CP</span>
                  </p>
                </div>

                <!-- Actions -->
                <div class="flex flex-col gap-3">
                  <button class="w-full rounded-full bg-primary py-3 text-sm font-bold text-white shadow-lg shadow-red-900/30 hover:bg-red-600 hover:shadow-red-600/40 hover:-translate-y-0.5 transition-all flex items-center justify-center gap-2">
                    <span class="material-symbols-outlined text-[20px]">shopping_cart</span>
                    Acheter maintenant
                  </button>
                  <button class="w-full rounded-full bg-white/5 border border-white/10 py-3 text-sm font-bold text-gray-300 hover:bg-white/10 hover:text-white transition-all flex items-center justify-center gap-2">
                    <span class="material-symbols-outlined text-[20px]">favorite</span>
                    Ajouter aux favoris
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Features Section -->
          {% if item.features is defined and item.features|length > 0 %}
          <section class="rounded-2xl bg-surface-dark border border-white/5 p-8">
            <h2 class="text-xl font-bold text-white flex items-center gap-2 mb-6">
              <span class="h-6 w-1 rounded-full bg-primary"></span>
              Caract&eacute;ristiques
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {% for feature in item.features %}
              <div class="flex items-start gap-3 rounded-xl bg-white/5 p-4">
                <div class="flex-shrink-0 h-8 w-8 rounded-full bg-primary/20 flex items-center justify-center">
                  <span class="material-symbols-outlined text-primary text-[16px]">check</span>
                </div>
                <p class="text-sm text-gray-300 pt-1">{{ feature }}</p>
              </div>
              {% endfor %}
            </div>
          </section>
          {% endif %}

          <!-- Similar Items -->
          <section class="rounded-2xl bg-surface-dark border border-white/5 p-8">
            <h2 class="text-xl font-bold text-white flex items-center gap-2 mb-6">
              <span class="h-6 w-1 rounded-full bg-secondary"></span>
              Articles Similaires
            </h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
              {% for i in 1..4 %}
              <div class="group overflow-hidden rounded-2xl bg-white/5 border border-white/5 transition-all hover:border-primary/30 hover:-translate-y-1 cursor-pointer">
                <div class="h-32 bg-gradient-to-br from-surface-dark to-background-dark relative overflow-hidden">
                  <div class="absolute top-2 left-2">
                    <span class="rounded-full bg-black/60 backdrop-blur-sm px-2 py-0.5 text-[8px] font-bold uppercase text-white">{{ item.game }}</span>
                  </div>
                </div>
                <div class="p-3">
                  <p class="text-sm font-bold text-white group-hover:text-primary transition-colors mb-1">Skin Similaire {{ i }}</p>
                  <span class="rounded-full bg-cyan-500/20 text-cyan-400 border border-cyan-500/30 px-2 py-0.5 text-[8px] font-bold uppercase">PREMIUM</span>
                  <div class="flex items-center gap-1 mt-2 text-secondary">
                    <span class="material-symbols-outlined text-[14px]">payments</span>
                    <span class="text-sm font-black">{{ (item.price - 200 + (i * 100)) }}</span>
                  </div>
                </div>
              </div>
              {% endfor %}
            </div>
          </section>
        </div>

        <!-- Mobile Bottom Nav -->
        <div class="lg:hidden fixed bottom-0 w-full bg-[#161616] border-t border-white/10 px-6 py-3 flex justify-between items-center z-50" role="navigation" aria-label="Navigation mobile">
          <a class="flex flex-col items-center gap-1 text-gray-500" href="{{ path('app_dashboard') }}">
            <span class="material-symbols-outlined">home</span>
            <span class="text-[10px]">Accueil</span>
          </a>
          <a class="flex flex-col items-center gap-1 text-gray-500" href="{{ path('app_tournaments') }}">
            <span class="material-symbols-outlined">trophy</span>
            <span class="text-[10px]">Tournois</span>
          </a>
          <a class="flex flex-col items-center gap-1 text-primary" href="{{ path('app_shop') }}">
            <span class="material-symbols-outlined">shopping_bag</span>
            <span class="text-[10px]">Boutique</span>
          </a>
          <a class="flex flex-col items-center gap-1 text-gray-500" href="{{ path('app_profile') }}">
            <span class="material-symbols-outlined">person</span>
            <span class="text-[10px]">Profil</span>
          </a>
        </div>
      </main>
    </div>
{% endblock %}
