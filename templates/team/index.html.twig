{% extends 'base.html.twig' %}

{% block title %}Mon &Eacute;quipe - {{ team.name }} - Carthage Arena{% endblock %}

{% block body %}
    <div
      id="mainContent"
      class="flex h-screen w-full opacity-0 transition-opacity duration-500"
    >
      <!-- Sidebar -->
      {% embed 'components/_sidebar.html.twig' %}
        {% block sidebar_bottom %}
        <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-gray-900 to-black p-4 border border-white/10">
          <div class="absolute -right-6 -top-6 h-24 w-24 rounded-full bg-primary/20 blur-2xl"></div>
          <div class="relative z-10 flex flex-col gap-3">
            <div class="flex items-center justify-between">
              <p class="text-[10px] font-bold uppercase tracking-widest text-primary">&Eacute;quipe</p>
              <span class="material-symbols-outlined text-primary text-sm">groups</span>
            </div>
            <div>
              <h4 class="text-sm font-bold text-white">{{ team.name }} [{{ team.tag }}]</h4>
              <p class="text-xs text-gray-400 mt-1">Niveau {{ team.level }}</p>
            </div>
          </div>
        </div>
        {% endblock %}
      {% endembed %}

      <!-- Main Content -->
      <main class="flex flex-1 flex-col overflow-y-auto bg-background-dark relative">
        <!-- Header -->
        <header class="sticky top-0 z-50 flex h-20 items-center justify-between border-b border-white/5 bg-background-dark/80 backdrop-blur-md px-8 py-4">
          <div class="flex flex-col">
            <h2 class="text-2xl font-bold text-white">Mon &Eacute;quipe</h2>
            <p class="text-xs text-gray-400">G&eacute;rez vos co&eacute;quipiers et vos inscriptions aux tournois.</p>
          </div>
          {% include 'components/_header_user_pill.html.twig' %}
        </header>

        <div class="flex flex-col gap-8 p-8 max-w-7xl mx-auto w-full">
          <!-- Team Header Card -->
          <section class="relative overflow-hidden rounded-2xl bg-surface-dark border border-white/5 border-l-4 border-l-primary p-8">
            <div class="absolute -right-10 -top-10 h-40 w-40 rounded-full bg-primary/10 blur-3xl"></div>
            <div class="relative z-10 flex flex-col md:flex-row items-start gap-8">
              <div class="flex-1">
                <div class="flex items-center gap-4 mb-3">
                  <h1 class="text-3xl font-black text-white">{{ team.name }}</h1>
                  <span class="text-xl font-bold text-gray-500">[{{ team.tag }}]</span>
                  <span class="rounded-full bg-secondary/20 px-3 py-1 text-xs font-bold text-secondary">LVL {{ team.level }}</span>
                </div>
                <p class="text-gray-400 mb-4 max-w-xl">{{ team.description }}</p>
                <div class="flex flex-wrap items-center gap-4 text-sm text-gray-400">
                  <span class="flex items-center gap-1.5">
                    <span class="material-symbols-outlined text-[16px]">groups</span>
                    {{ team.members|length }} Membres
                  </span>
                  <span class="flex items-center gap-1.5">
                    <span class="material-symbols-outlined text-[16px]">shield_person</span>
                    Leader: {{ team.leader }}
                  </span>
                </div>
              </div>
              <div class="flex flex-col items-end gap-2 text-right">
                <div>
                  <p class="text-[10px] uppercase text-gray-500 font-bold tracking-wider">Victoires</p>
                  <p class="text-3xl font-black text-green-400">{{ team.wins }}</p>
                </div>
                <p class="text-sm text-gray-400">
                  D&eacute;faites: <span class="text-red-400 font-bold">{{ team.losses }}</span>
                </p>
              </div>
            </div>
          </section>

          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left Column (2/3) -->
            <div class="lg:col-span-2 flex flex-col gap-8">
              <!-- Roster -->
              <section class="rounded-2xl bg-surface-dark border border-white/5 p-6">
                <div class="flex items-center justify-between mb-6">
                  <h3 class="text-lg font-bold text-white flex items-center gap-2">
                    <span class="h-6 w-1 rounded-full bg-primary"></span>
                    Effectif
                  </h3>
                  <span class="rounded-full bg-white/5 px-3 py-1 text-xs font-bold text-gray-400">{{ team.members|length }} / 8</span>
                </div>
                <div class="flex flex-col gap-3">
                  {% for member in team.members %}
                  <div class="flex items-center justify-between rounded-xl bg-white/5 p-4 transition-all hover:bg-white/10">
                    <div class="flex items-center gap-4">
                      <div class="relative">
                        <div
                          class="h-12 w-12 rounded-full bg-gray-800 border-2 border-white/10"
                          style="background-image: url('{{ member.avatar }}'); background-size: cover; background-position: center;"
                        ></div>
                        <span class="absolute bottom-0 right-0 w-3 h-3 rounded-full border-2 border-surface-dark
                          {% if member.status == 'online' %}bg-green-400{% elseif member.status == 'in-game' %}bg-secondary{% else %}bg-gray-500{% endif %}
                        "></span>
                      </div>
                      <div>
                        <div class="flex items-center gap-2">
                          <p class="font-bold text-white">{{ member.name }}</p>
                          {% if member.role == 'Leader' %}
                            <span class="material-symbols-outlined text-secondary text-[16px]">star</span>
                          {% endif %}
                        </div>
                        <p class="text-xs text-gray-400">{{ member.rank }}</p>
                      </div>
                    </div>
                    <div class="flex items-center gap-3">
                      <span class="rounded-full px-3 py-1 text-[10px] font-bold uppercase tracking-wider
                        {% if member.role == 'Leader' %}bg-secondary/20 text-secondary border border-secondary/30
                        {% elseif member.role == 'Co-Leader' %}bg-purple-500/20 text-purple-400 border border-purple-500/30
                        {% else %}bg-white/5 text-gray-400 border border-white/10{% endif %}
                      ">
                        {{ member.role }}
                      </span>
                      {% if is_leader and member.role != 'Leader' %}
                      <form method="post" action="{{ path('app_team_kick', {'id': member.id}) }}" onsubmit="return confirm('Expulser ce membre ?');" class="inline-block">
                          <input type="hidden" name="_csrf_token" value="{{ csrf_token('kick_member') }}">
                          <button type="submit" class="rounded-full p-1.5 text-gray-500 hover:bg-red-500/20 hover:text-red-400 transition-all" title="Expulser">
                            <span class="material-symbols-outlined text-[18px]">person_remove</span>
                          </button>
                      </form>
                      {% endif %}
                    </div>
                  </div>
                  {% endfor %}
                </div>
              </section>

              <!-- Upcoming Tournaments -->
              <section class="rounded-2xl bg-surface-dark border border-white/5 p-6">
                <h3 class="text-lg font-bold text-white flex items-center gap-2 mb-6">
                  <span class="h-6 w-1 rounded-full bg-secondary"></span>
                  Inscriptions Tournois
                </h3>
                {% if team.upcoming_tournaments is defined and team.upcoming_tournaments is not empty %}
                  <div class="flex flex-col gap-3">
                    {% for tourn in team.upcoming_tournaments %}
                    <div class="flex items-center justify-between rounded-xl bg-white/5 p-4 border border-white/5">
                      <div>
                        <p class="font-bold text-white">{{ tourn.name }}</p>
                        <p class="text-xs text-gray-400 mt-0.5">{{ tourn.date }}</p>
                      </div>
                      <span class="rounded-full bg-green-500/20 text-green-400 border border-green-500/30 px-3 py-1 text-[10px] font-bold uppercase tracking-wider">
                        {{ tourn.status }}
                      </span>
                    </div>
                    {% endfor %}
                  </div>
                {% else %}
                  <div class="text-center py-8">
                    <span class="material-symbols-outlined text-gray-600 text-[48px] mb-3">event_busy</span>
                    <p class="text-gray-400">Aucune inscription en cours.</p>
                    {% if is_leader %}
                    <a href="{{ path('app_tournaments') }}" class="inline-flex items-center gap-2 mt-4 rounded-full bg-primary px-6 py-2.5 text-sm font-bold text-white hover:bg-red-600 transition-all">
                      <span class="material-symbols-outlined text-[18px]">search</span>
                      Parcourir les tournois
                    </a>
                    {% endif %}
                  </div>
                {% endif %}

                {% if is_leader %}
                <div class="mt-4 flex items-center gap-3 rounded-xl bg-green-500/5 border border-green-500/20 p-4">
                  <span class="material-symbols-outlined text-green-400">verified</span>
                  <div>
                    <p class="text-sm font-bold text-green-400">Droit d'inscription activ&eacute;</p>
                    <p class="text-xs text-gray-400">En tant que Leader, vous pouvez inscrire votre &eacute;quipe aux tournois.</p>
                  </div>
                </div>
                {% else %}
                <div class="mt-4 flex items-center gap-3 rounded-xl bg-secondary/5 border border-secondary/20 p-4">
                  <span class="material-symbols-outlined text-secondary">info</span>
                  <div>
                    <p class="text-sm font-bold text-secondary">Droit d'inscription restreint</p>
                    <p class="text-xs text-gray-400">Seul le Leader de l'&eacute;quipe peut effectuer les inscriptions aux tournois.</p>
                  </div>
                </div>
                {% endif %}
              </section>
            </div>

            <!-- Right Column (1/3) -->
            <div class="flex flex-col gap-8">
              <!-- Quick Stats -->
              <section class="rounded-2xl bg-surface-dark border border-white/5 p-6">
                <h3 class="text-lg font-bold text-white mb-4">Statistiques Saison</h3>
                <div class="flex flex-col gap-3">
                  <div class="flex items-center justify-between rounded-xl bg-white/5 p-3">
                    <span class="text-sm text-gray-400">Win Rate</span>
                    <span class="font-bold text-white">
                      {% if (team.wins + team.losses) > 0 %}
                        {{ ((team.wins / (team.wins + team.losses)) * 100)|round }}%
                      {% else %}
                        0%
                      {% endif %}
                    </span>
                  </div>
                  <div class="flex items-center justify-between rounded-xl bg-white/5 p-3">
                    <span class="text-sm text-gray-400">S&eacute;rie actuelle</span>
                    <span class="font-bold text-green-400 flex items-center gap-1">
                      <span class="material-symbols-outlined text-[16px]">local_fire_department</span>
                      3 Victoires
                    </span>
                  </div>
                </div>
              </section>

              <!-- Invite Code -->
              {% if is_leader and team.invites is defined %}
              <section id="invite-section" class="rounded-2xl bg-surface-dark border border-white/5 p-6">
                <h3 class="text-lg font-bold text-white mb-4">Code d'invitation</h3>
                <div class="flex items-center gap-2 rounded-xl bg-white/5 border border-white/10 p-3">
                  <span class="text-lg font-black text-primary tracking-widest flex-1 text-center">{{ team.invites }}</span>
                  <button class="rounded-full p-2 text-gray-400 hover:bg-white/10 hover:text-white transition-all" title="Copier le code" onclick="navigator.clipboard.writeText('{{ team.invites }}');">
                    <span class="material-symbols-outlined text-[18px]">content_copy</span>
                  </button>
                </div>
                <form method="post" action="{{ path('app_team_regenerate_invite') }}" class="mt-3 text-center">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('regenerate_invite') }}">
                    <button type="submit" class="text-xs text-primary hover:text-red-400 underline transition-colors">
                        Générer un nouveau code
                    </button>
                </form>
                <p class="text-xs text-gray-500 mt-2 text-center">Partagez ce code pour inviter des joueurs.</p>
              </section>
              {% endif %}

              <!-- Management -->
              {% if is_leader %}
              <section class="rounded-2xl bg-surface-dark border border-white/5 p-6">
                <h3 class="text-lg font-bold text-white mb-4">Gestion</h3>
                <div class="flex flex-col gap-2">
                  <a href="{{ path('app_team_edit') }}" class="w-full flex items-center gap-3 rounded-xl bg-white/5 px-4 py-3 text-sm font-medium text-gray-300 hover:bg-white/10 hover:text-white transition-all">
                    <span class="material-symbols-outlined text-[18px]">edit</span>
                    Modifier l'&eacute;quipe
                  </a>
                  <button onclick="document.getElementById('invite-section').scrollIntoView({behavior: 'smooth'})" class="w-full flex items-center gap-3 rounded-xl bg-white/5 px-4 py-3 text-sm font-medium text-gray-300 hover:bg-white/10 hover:text-white transition-all">
                    <span class="material-symbols-outlined text-[18px]">person_add</span>
                    G&eacute;rer les invitations
                  </button>
                  <form method="post" action="{{ path('app_team_disband') }}" onsubmit="return confirm('Êtes-vous sûr de vouloir dissoudre l\'équipe ? Cette action est irréversible.');">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('disband_team') }}">
                    <button type="submit" class="w-full flex items-center gap-3 rounded-xl bg-red-500/10 border border-red-500/20 px-4 py-3 text-sm font-medium text-red-400 hover:bg-red-500/20 transition-all">
                        <span class="material-symbols-outlined text-[18px]">logout</span>
                        Dissoudre l'&eacute;quipe
                    </button>
                  </form>
                </div>
              </section>
              {% else %}
              <section class="rounded-2xl bg-surface-dark border border-white/5 p-6">
                <form method="post" action="{{ path('app_team_leave') }}" onsubmit="return confirm('Êtes-vous sûr de vouloir quitter l\'équipe ?');">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('leave_team') }}">
                    <button type="submit" class="w-full flex items-center justify-center gap-2 rounded-full bg-red-500 px-6 py-3 text-sm font-bold text-white hover:bg-red-600 transition-all">
                    <span class="material-symbols-outlined text-[18px]">logout</span>
                    Quitter l'&eacute;quipe
                    </button>
                </form>
              </section>
              {% endif %}
            </div>
          </div>
        </div>

        <!-- Mobile Bottom Nav -->
        <div class="lg:hidden fixed bottom-0 w-full bg-[#161616] border-t border-white/10 px-6 py-3 flex justify-between items-center z-50" role="navigation" aria-label="Navigation mobile">
          <a class="flex flex-col items-center gap-1 text-gray-500" href="{{ path('app_dashboard') }}">
            <span class="material-symbols-outlined">home</span>
            <span class="text-[10px]">Accueil</span>
          </a>
          <a class="flex flex-col items-center gap-1 text-gray-500" href="{{ path('app_tournaments') }}">
            <span class="material-symbols-outlined">trophy</span>
            <span class="text-[10px]">Tournois</span>
          </a>
          <a class="flex flex-col items-center gap-1 text-gray-500" href="{{ path('app_shop') }}">
            <span class="material-symbols-outlined">shopping_bag</span>
            <span class="text-[10px]">Boutique</span>
          </a>
          <a class="flex flex-col items-center gap-1 text-gray-500" href="{{ path('app_profile') }}">
            <span class="material-symbols-outlined">person</span>
            <span class="text-[10px]">Profil</span>
          </a>
        </div>
      </main>
    </div>
{% endblock %}
