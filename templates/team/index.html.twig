{% extends 'base.html.twig' %}

{% block title %}Mon √âquipe - Carthage Arena{% endblock %}

{% block body %}
<div class="app-container">
    {% include 'components/_sidebar.html.twig' %}

    <main class="main-content">
        <div class="page-header">
            <div>
                <h1 class="page-title">Mon √âquipe</h1>
                <p class="page-subtitle">G√©rez vos co√©quipiers et vos inscriptions aux tournois.</p>
            </div>
            {% if is_leader %}
            <button class="btn btn-primary">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="8.5" cy="7" r="4"></circle>
                    <line x1="20" y1="8" x2="20" y2="14"></line>
                    <line x1="23" y1="11" x2="17" y2="11"></line>
                </svg>
                Inviter un joueur
            </button>
            {% endif %}
        </div>

        <!-- Team Header Card -->
        <div class="card" style="margin-bottom: 2rem; background: var(--gradient-card); border-left: 4px solid var(--color-primary);">
            <div style="display: flex; align-items: center; gap: 2rem;">
                <div style="position: relative;">
                    <img src="{{ team.logo }}" alt="{{ team.name }}" style="width: 120px; height: 120px; border-radius: 50%; border: 4px solid var(--color-bg-card); object-fit: cover;">
                    <span class="badge badge-legendary" style="position: absolute; bottom: 0; right: 0; font-size: 0.75rem;">LVL {{ team.level }}</span>
                </div>
                
                <div style="flex: 1;">
                    <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.5rem;">
                        <h2 style="font-size: 2rem; font-weight: 800; margin: 0;">{{ team.name }}</h2>
                        <span style="font-size: 1.25rem; font-weight: 700; color: var(--color-text-secondary);">[{{ team.tag }}]</span>
                    </div>
                    <p style="color: var(--color-text-secondary); margin-bottom: 1rem; max-width: 600px;">
                        {{ team.description }}
                    </p>
                    <div style="display: flex; gap: 2rem;">
                        <div style="display: flex; align-items: center; gap: 0.5rem;">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                            </svg>
                            <span style="font-weight: 600;">{{ team.members|length }} Membres</span>
                        </div>
                        <div style="display: flex; align-items: center; gap: 0.5rem;">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12 6 12 12 16 14"></polyline>
                            </svg>
                            <span style="color: var(--color-text-secondary);">Cr√©√©e le {{ team.created_at }}</span>
                        </div>
                    </div>
                </div>

                <div style="text-align: right; min-width: 150px;">
                    <div style="font-size: 0.75rem; color: var(--color-text-muted); text-transform: uppercase;">Victoires</div>
                    <div style="font-size: 2rem; font-weight: 800; color: var(--color-success);">{{ team.wins }}</div>
                    <div style="font-size: 0.875rem; color: var(--color-text-secondary);">D√©faits: <span style="color: var(--color-error);">{{ team.losses }}</span></div>
                </div>
            </div>
        </div>

        <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem;">
            
            <!-- Left Column: Roster & Activities -->
            <div style="display: flex; flex-direction: column; gap: 2rem;">
                
                <!-- Roster Section -->
                <div class="card">
                    <h3 style="margin-bottom: 1.5rem; font-size: 1.25rem; font-weight: 700; display: flex; justify-content: space-between; align-items: center;">
                        Effectif
                        <span class="badge badge-premium">{{ team.members|length }} / 8</span>
                    </h3>
                    
                    <div style="display: flex; flex-direction: column; gap: 1rem;">
                        {% for member in team.members %}
                        <div style="display: flex; align-items: center; justify-content: space-between; padding: 1rem; background: var(--color-bg-tertiary); border-radius: var(--radius-lg); transition: transform 0.2s;">
                            <div style="display: flex; align-items: center; gap: 1rem;">
                                <div style="position: relative;">
                                    <img src="{{ member.avatar }}" alt="{{ member.name }}" style="width: 48px; height: 48px; border-radius: 50%;">
                                    <span style="position: absolute; bottom: 0; right: 0; width: 12px; height: 12px; border-radius: 50%; border: 2px solid var(--color-bg-tertiary); background-color: {% if member.status == 'online' %}var(--color-success){% elseif member.status == 'in-game' %}var(--color-warning){% else %}var(--color-text-muted){% endif %};"></span>
                                </div>
                                <div>
                                    <div style="font-weight: 700;">
                                        {{ member.name }}
                                        {% if member.role == 'Leader' %}
                                            <span style="color: var(--color-warning); margin-left: 0.5rem;">üëë</span>
                                        {% endif %}
                                    </div>
                                    <div style="font-size: 0.875rem; color: var(--color-text-secondary);">{{ member.rank }}</div>
                                </div>
                            </div>
                            
                            <div style="display: flex; align-items: center; gap: 1rem;">
                                <span class="badge {% if member.role == 'Leader' %}badge-legendary{% elseif member.role == 'Co-Leader' %}badge-epic{% else %}badge-season{% endif %}">
                                    {{ member.role }}
                                </span>
                                {% if is_leader and member.role != 'Leader' %}
                                <button class="btn btn-secondary" style="padding: 0.5rem;">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="1"></circle>
                                        <circle cx="19" cy="12" r="1"></circle>
                                        <circle cx="5" cy="12" r="1"></circle>
                                    </svg>
                                </button>
                                {% endif %}
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Upcoming Tournaments -->
                <div class="card">
                     <h3 style="margin-bottom: 1.5rem; font-size: 1.25rem; font-weight: 700;">Inscriptions Tournois</h3>
                     {% if team.upcoming_tournaments is empty %}
                        <div style="text-align: center; padding: 2rem; color: var(--color-text-secondary);">
                            Aucune inscription en cours.
                            <br>
                            {% if is_leader %}
                            <a href="{{ path('app_tournaments') }}" class="btn btn-primary" style="margin-top: 1rem;">Parcourir les tournois</a>
                            {% endif %}
                        </div>
                     {% else %}
                        <div style="display: grid; gap: 1rem;">
                            {% for tourn in team.upcoming_tournaments %}
                            <div style="padding: 1rem; border: 1px solid var(--color-border); border-radius: var(--radius-lg); display: flex; justify-content: space-between; align-items: center;">
                                <div>
                                    <div style="font-weight: 700;">{{ tourn.name }}</div>
                                    <div style="font-size: 0.875rem; color: var(--color-text-secondary);">{{ tourn.date }}</div>
                                </div>
                                <span class="badge badge-success">{{ tourn.status }}</span>
                            </div>
                            {% endfor %}
                        </div>
                     {% endif %}

                     {% if is_leader %}
                     <div style="margin-top: 1.5rem; padding: 1rem; background: rgba(0, 255, 136, 0.1); border: 1px solid var(--color-success); border-radius: var(--radius-lg); display: flex; gap: 1rem; align-items: center;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-success)" stroke-width="2">
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                            <polyline points="22 4 12 14.01 9 11.01"></polyline>
                        </svg>
                        <div>
                            <div style="font-weight: 700; color: var(--color-success);">Droit d'inscription activ√©</div>
                            <div style="font-size: 0.875rem; color: var(--color-text-secondary);">En tant que Leader, vous pouvez inscrire votre √©quipe aux tournois.</div>
                        </div>
                     </div>
                     {% else %}
                     <div style="margin-top: 1.5rem; padding: 1rem; background: rgba(255, 215, 0, 0.1); border: 1px solid var(--color-warning); border-radius: var(--radius-lg); display: flex; gap: 1rem; align-items: center;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-warning)" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="8" x2="12" y2="12"></line>
                            <line x1="12" y1="16" x2="12.01" y2="16"></line>
                        </svg>
                        <div>
                            <div style="font-weight: 700; color: var(--color-warning);">Droit d'inscription restreint</div>
                            <div style="font-size: 0.875rem; color: var(--color-text-secondary);">Seul le Leader de l'√©quipe peut effectuer les inscriptions aux tournois.</div>
                        </div>
                     </div>
                     {% endif %}
                </div>
            </div>

            <!-- Right Column: Stats & Settings -->
            <div style="display: flex; flex-direction: column; gap: 2rem;">
                
                <!-- Quick Stats -->
                <div class="card">
                    <h3 style="margin-bottom: 1.5rem; font-size: 1.25rem; font-weight: 700;">Statistiques Saison</h3>
                    <div style="display: grid; gap: 1rem;">
                         <div style="display: flex; justify-content: space-between; padding: 0.75rem; background: var(--color-bg-tertiary); border-radius: var(--radius-md);">
                             <span style="color: var(--color-text-secondary);">Tournois Gagn√©s</span>
                             <span style="font-weight: 700; color: var(--color-warning);">üèÜ {{ team.tournaments_won }}</span>
                         </div>
                         <div style="display: flex; justify-content: space-between; padding: 0.75rem; background: var(--color-bg-tertiary); border-radius: var(--radius-md);">
                             <span style="color: var(--color-text-secondary);">Win Rate</span>
                             <span style="font-weight: 700;">{{ (team.wins / (team.wins + team.losses) * 100)|round }}%</span>
                         </div>
                         <div style="display: flex; justify-content: space-between; padding: 0.75rem; background: var(--color-bg-tertiary); border-radius: var(--radius-md);">
                             <span style="color: var(--color-text-secondary);">S√©rie actuelle</span>
                             <span style="font-weight: 700; color: var(--color-success);">üî• 3 Victoires</span>
                         </div>
                    </div>
                </div>

                <!-- Team Settings Actions -->
                {% if is_leader %}
                <div class="card">
                    <h3 style="margin-bottom: 1.5rem; font-size: 1.25rem; font-weight: 700;">Gestion</h3>
                    <div style="display: flex; flex-direction: column; gap: 1rem;">
                        <button class="btn btn-secondary" style="width: 100%; justify-content: flex-start;">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 0.5rem;">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                            </svg>
                            Modifier l'√©quipe
                        </button>
                        <button class="btn btn-secondary" style="width: 100%; justify-content: flex-start;">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 0.5rem;">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="8.5" cy="7" r="4"></circle>
                                <line x1="20" y1="8" x2="20" y2="14"></line>
                                <line x1="23" y1="11" x2="17" y2="11"></line>
                            </svg>
                            G√©rer les invitations
                        </button>
                        <button class="btn" style="width: 100%; justify-content: flex-start; background-color: var(--color-error); color: white;">
                             <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 0.5rem;">
                                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                                <polyline points="16 17 21 12 16 7"></polyline>
                                <line x1="21" y1="12" x2="9" y2="12"></line>
                            </svg>
                            Dissoudre l'√©quipe
                        </button>
                    </div>
                </div>
                {% else %}
                <div class="card">
                    <button class="btn" style="width: 100%; background-color: var(--color-error); color: white;">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 0.5rem;">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16 17 21 12 16 7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                        Quitter l'√©quipe
                    </button>
                </div>
                {% endif %}

            </div>
        </div>
    </main>
</div>
{% endblock %}
