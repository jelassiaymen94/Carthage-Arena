{% extends 'base.html.twig' %}

{% block title %}Mes Tournois - Carthage Arena{% endblock %}

{% block body %}
<div class="app-container">
    {% include 'components/_sidebar.html.twig' %}

    <main class="main-content">
        <div class="page-header">
            <h1 class="page-title">Mes Tournois</h1>
            <p class="page-subtitle">Gérez vos inscriptions et découvrez de nouveaux tournois.</p>
        </div>

        <div style="display: flex; gap: 1rem; margin-bottom: 2rem;">
            <button class="btn btn-primary">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="8" x2="12" y2="16"></line>
                    <line x1="8" y1="12" x2="16" y2="12"></line>
                </svg>
                Créer un Tournoi
            </button>
            <button class="btn btn-secondary">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
                </svg>
                Filtrer
            </button>
        </div>

        <div style="margin-bottom: 2rem;">
            <div style="display: flex; gap: 1rem; border-bottom: 2px solid var(--color-border); margin-bottom: 1.5rem;">
                <button style="padding: 1rem 1.5rem; background: none; border: none; color: var(--color-text-primary); font-weight: 600; border-bottom: 3px solid var(--color-primary); margin-bottom: -2px;">
                    Tous les Tournois
                </button>
                <button style="padding: 1rem 1.5rem; background: none; border: none; color: var(--color-text-secondary); font-weight: 600;">
                    Mes Inscriptions
                </button>
                <button style="padding: 1rem 1.5rem; background: none; border: none; color: var(--color-text-secondary); font-weight: 600;">
                    Terminés
                </button>
            </div>
        </div>

        <div style="display: grid; gap: 1.5rem;">
            {% set tournaments = [
                {
                    'id': 1,
                    'name': 'Carthage Championship Season 1',
                    'game': 'League of Legends',
                    'status': 'OUVERT',
                    'prize': '10,000 DT',
                    'teams': '12/16',
                    'date': 'Oct 24, 2000',
                    'format': 'BO3',
                    'image': 'https://via.placeholder.com/400x200/1A1A1A/FF0022?text=LoL+Championship'
                },
                {
                    'id': 2,
                    'name': 'Valorant Tournament Pro',
                    'game': 'Valorant',
                    'status': 'EN COURS',
                    'prize': '5,000 DT',
                    'teams': '8/8',
                    'date': 'Oct 21, 18:00',
                    'format': 'BO5',
                    'image': 'https://via.placeholder.com/400x200/2A1A1A/FF0022?text=Valorant+Pro'
                },
                {
                    'id': 3,
                    'name': 'CS:GO Masters Cup',
                    'game': 'CS:GO 2',
                    'status': 'BIENTÔT',
                    'prize': '15,000 DT',
                    'teams': '4/16',
                    'date': 'Nov 5, 14:00',
                    'format': 'BO3',
                    'image': 'https://via.placeholder.com/400x200/1A2A2A/FF0022?text=CS+Masters'
                },
                {
                    'id': 4,
                    'name': 'Rocket League Arena',
                    'game': 'Rocket League',
                    'status': 'OUVERT',
                    'prize': '3,000 DT',
                    'teams': '10/12',
                    'date': 'Oct 28, 16:00',
                    'format': 'BO5',
                    'image': 'https://via.placeholder.com/400x200/1A1A2A/FF0022?text=Rocket+League'
                }
            ] %}

            {% for tournament in tournaments %}
            <div class="card" style="padding: 0; overflow: hidden; cursor: pointer; transition: all 0.3s ease;" onclick="window.location.href='{{ path('app_tournament_details', {id: tournament.id}) }}'">
                <div style="display: grid; grid-template-columns: 300px 1fr auto; gap: 0;">
                    <div style="background-image: url('{{ tournament.image }}'); background-size: cover; background-position: center; position: relative;">
                        <div style="position: absolute; top: 1rem; left: 1rem;">
                            <span class="badge {% if tournament.status == 'OUVERT' %}badge-open{% elseif tournament.status == 'EN COURS' %}badge-legendary{% else %}badge-season{% endif %}">
                                {{ tournament.status }}
                            </span>
                        </div>
                    </div>

                    <div style="padding: 1.5rem;">
                        <div style="font-size: 0.875rem; color: var(--color-text-muted); text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 0.5rem;">
                            {{ tournament.game }}
                        </div>
                        <h3 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1rem;">
                            {{ tournament.name }}
                        </h3>
                        <div style="display: flex; gap: 2rem; color: var(--color-text-secondary); font-size: 0.875rem;">
                            <div style="display: flex; align-items: center; gap: 0.5rem;">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                    <line x1="16" y1="2" x2="16" y2="6"></line>
                                    <line x1="8" y1="2" x2="8" y2="6"></line>
                                    <line x1="3" y1="10" x2="21" y2="10"></line>
                                </svg>
                                {{ tournament.date }}
                            </div>
                            <div style="display: flex; align-items: center; gap: 0.5rem;">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                </svg>
                                {{ tournament.teams }} équipes
                            </div>
                            <div style="display: flex; align-items: center; gap: 0.5rem;">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                                    <path d="M2 17l10 5 10-5"></path>
                                    <path d="M2 12l10 5 10-5"></path>
                                </svg>
                                {{ tournament.format }}
                            </div>
                        </div>
                    </div>

                    <div style="padding: 1.5rem; display: flex; flex-direction: column; align-items: flex-end; justify-content: space-between; background: var(--gradient-card); border-left: 1px solid var(--color-border); min-width: 200px;">
                        <div style="text-align: right;">
                            <div style="font-size: 0.75rem; color: var(--color-text-muted); text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 0.25rem;">
                                Prize Pool
                            </div>
                            <div style="font-size: 1.75rem; font-weight: 800; color: var(--color-warning);">
                                {{ tournament.prize }}
                            </div>
                        </div>
                        <button class="btn btn-primary" onclick="event.stopPropagation();">
                            Voir Détails
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M5 12h14M12 5l7 7-7 7"/>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </main>
</div>
{% endblock %}
